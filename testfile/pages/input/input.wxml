<view class="container">

    <form catchsubmit="formSubmit" catchreset="formReset">
        <view class="page-section">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" name="realName" placeholder="姓名" id="realName" />
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" maxlength="11" name="phoneNumber" placeholder="手机号" id="phoneNumber" />
                </view>
            </view>
            <view class="select-wrap">
                <text class="bumen">部门</text>
                <select style="width:86%;border:2rpx solid #af1616;" id="select" options="{{options}}" key="department_id" text="department_name" bind:change="change"></select>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" name="password" placeholder="密码" id="password" />
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" name="repassword" placeholder="确认密码" id="repassword" />
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" name="inviteCode" placeholder="邀请码" id="inviteCode" />
                </view>
            </view>
        </view>

        <view class="button-area">
            <button type="primary" formType="submit">提交</button>
        </view>
    </form>
</view>