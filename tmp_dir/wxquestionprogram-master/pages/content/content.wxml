<!--pages/content/content.wxml-->
<view class="time">{{news.updateTimeStr}}</view>
<view class="thin_line"></view>
<view class="title">
    {{news.title}}
</view>
<view class="publish">
    {{news.publish}}
</view>
<image src="{{news.imgUrl}}" mode='widthFix' class="image"></image>
<view class="content">
    <rich-text nodes="{{news.content}}"></rich-text>
</view>
