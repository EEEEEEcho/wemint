<view class='title'>请选择您的工种</view>
<view>
  <radio-group bindchange="radioChange">
    <view class='label'>
      <label class="ui-radio {{item.checked==true?'active':''}}" wx:for="{{items}}" wx:key="index">
        <radio value="{{item.type}}" checked="{{item.checked}}" />
        <text class="text">{{item.name}}</text>
      </label>
    </view>
  </radio-group>
  <button class='button' type="primary" bindtap="submit">选好了</button>
</view>
