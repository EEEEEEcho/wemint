.release-goods {
    padding-top: 3px;
}

.txt-box {
    padding: 8px 10px;
    width: auto;
    height: 100px;
}

.release-goods .add {
    width: 160rpx;
    height: 160rpx;
    border: 1px solid #ccc;
    text-align: center;
    line-height: 3.5;
    font-size: 40rpx;
}

.release-goods .add image {
    width: 100%;
    height: 100%;
}

.release-goods .tip {
    padding: 5rpx;
    display: block;
}

.release-goods .address {
    padding: 12rpx 5rpx;
}

.release-goods .phone-num {
    display: inline-block;
    width: 80%;
    vertical-align: middle;
}

.release-goods .phone {
    padding: 7rpx 5rpx 5rpx 5rpx;
}

.protocol {
    width: 350rpx;
    margin: 5rpx auto;
}

.protocol text {
    color: #1AAD19;
}

.cover {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5);
    z-index: 100;
}

.cover .release-protocol {
    position: absolute;
    top: 0;
    left: 0;
    height: 80rpx;
    background: #fff;
    width: 100%;
    text-align: center;
    font-size: 45rpx;
    padding-top: 20rpx;
}

.cover .protocol-info {
    width: 650rpx;
    height: 800rpx;
    margin: 200rpx auto;
    background: #fff;
    overflow: hidden;
    position: relative;
}

.cover .scroll-box {
    height: 600rpx;
    width: 635rpx;
    margin: 100rpx 0;
    padding-left: 15rpx;
}

.cover .close {
    color: red;
    position: absolute;
    bottom: 0;
    left: 0;
    height: 80rpx;
    background: #fff;
    width: 100%;
    text-align: center;
    border-top: 1px solid #ccc;
    padding-top: 20rpx;
}