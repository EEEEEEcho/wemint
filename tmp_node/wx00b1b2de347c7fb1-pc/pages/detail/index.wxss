.header {
    width: 100%;
    height: 120rpx;
    padding: 15rpx 15rpx 5rpx;
}

.header .avatar {
    height: 100rpx;
    width: 100rpx;
    overflow: hidden;
    border-radius: 50%;
    margin-right: 20rpx;
}

.header .avatar image {
    width: 100%;
    height: 100%;
}

.header .user {
    width: 600rpx;
}

.header .user .name {
    color: #589cc7;
}

.address {
    padding: 0 15rpx 10rpx;
}

.content {
    padding: 5rpx 15rpx;
}

.content image {
    width: 100%;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    background: #ccc;
}

.footer .wrap {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.footer .flex-item {
    flex: 1;
    text-align: center;
    line-height: 2.5;
    border-radius: 0;
    position: static;
    padding-left: 0;
    padding-right: 0;
    font-size: 32rpx;
}