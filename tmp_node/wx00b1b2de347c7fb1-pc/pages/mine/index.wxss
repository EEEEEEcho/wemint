.header {
    background-color: #df2533;
    width: 100%;
    height: 280rpx;
    padding-top: 20rpx;
    text-align: center;
    color: #fff;
}

.header .avatar {
    margin: 10rpx auto;
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    overflow: hidden;
}

.header .avatar image {
    width: 100%;
    height: 100%;
}

.header text {
    width: 310rpx;
    display: inline-block;
}

.content button {
    font-size: 32rpx;
    text-align: left;
    padding-left: 45rpx;
}

.content .arrow {
    color: aquamarine;
}