<view class="container bg-c-a">
    <view class="search-box">
        <input bindconfirm="search" class="search" confirmType="search" maxlength="20" placeholder="请输入搜索条件" placeholderStyle="color: #000"></input>
        <text class="iconfont icon-search"></text>
    </view>
    <swiper autoplay="true" circular="true" indicatorDots="true" interval="3000">
        <swiper-item wx:for="{{imgUrls}}" wx:key="index">
            <image class="swiper-image" src="{{item}}"></image>
        </swiper-item>
    </swiper>
    <view class="flex-box">
        <view bindtap="chooseList" class="flex-item padder-t-m" data-index="{{index}}" wx:for="{{implementList}}" wx:key="index">
            <image src="{{item.src}}"></image>
      {{item.name}}
    </view>
    </view>
    <view class="deal-list">
        <view class="release-box">
            <text class="iconfont icon-clock"></text>
            <text class="deal-tap-txt">最新发布</text>
        </view>
        <include src="/templates/dealList.wxml"></include>
    </view>
</view>
