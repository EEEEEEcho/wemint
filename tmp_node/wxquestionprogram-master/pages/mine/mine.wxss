.section__ctn{
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    border: 8rpx solid #ad1616;
    margin: 4% auto;
}
.section__ctn image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin: 16%;
}
.nickname{
    color: #ad1616;
    font: 26rpx;
    text-align: center;
    margin-bottom: 8%;
}
.center_top{
    width: 100%;
    display: flex;
    justify-content: center;
    margin-top: 10rpx;
}
.center_top_item{
    background-color: #ad1616;
    color: white;
    padding: 3% 8%;
    font-size: 26rpx;
    margin: 0 2rpx;
    text-align: center;
} 
.dou{
    background-color: white;
    color: #af1616;
    font-weight: bold;
    border: 2rpx solid white;
    border-radius: 50%;
    width: 120rpx;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 34rpx;
}
.soc{
    margin-bottom: 0;
}
.btn_class{
    margin-top: 5%;
}