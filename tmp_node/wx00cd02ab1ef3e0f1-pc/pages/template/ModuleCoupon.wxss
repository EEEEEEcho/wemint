.ModuleCoupon {
    padding: 10rpx 20rpx;
    background-color: #fff;
}

.ModuleCoupon .container {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
}

.ModuleCoupon .container .item {
    flex: 0 0 50%;
    box-sizing: border-box;
}

.ModuleCoupon .container .item-full {
    flex: 1;
}

.ModuleCoupon .container .item:nth-child(odd) {
    padding-right: 5rpx;
}

.ModuleCoupon .container .item:nth-child(even) {
    padding-left: 5rpx;
}

.ModuleCoupon .container .item:nth-child(n+3) {
    padding-top: 8rpx;
}

.ModuleCoupon .container .item-full {
    padding-right: 0!important;
}

.ModuleCoupon .container .item .couponinfo {
    padding: 20rpx 0;
    background: #ff6600;
    color: white;
    width: 100%;
    border-radius: 5rpx;
    display: flex;
    flex-wrap: nowrap;
    flex-direction: row;
}

.ModuleCoupon .container .item .couponinfo .coupon-title {
    font-size: 32rpx;
}

.ModuleCoupon .container .item .couponinfo .col1 {
    flex: 0 0 45%;
    border-right: 2rpx dashed white;
    text-align: center;
}

.ModuleCoupon .container .item-full .couponinfo .col1 {
    flex: 0 0 30%;
}

.ModuleCoupon .container .item .couponinfo .col1 .coupon-money .coupon-symbol {
    font-size: 22rpx;
}

.ModuleCoupon .container .item .couponinfo .col1 .coupon-money {
    font-size: 54rpx;
}

.ModuleCoupon .container .item .couponinfo .col1 .coupon-avail {
    font-size: 22rpx;
    margin-top: 6rpx;
}

.ModuleCoupon .container .item .couponinfo .col2 {
    flex: 1;
    text-align: center;
}

.ModuleCoupon .coupon-getbtn {
    border-radius: 30rpx;
    background: white;
    color: #ff6600;
    font-size: 26rpx;
    text-align: center;
    margin: 0 auto;
    line-height: 56rpx;
    width: 140rpx;
    margin-top: 16rpx;
}

.ModuleCoupon .coupon-getbtn2 {
    color: #999;
}

.ModuleCoupon .container .item .couponinfo .col1 .coupon-money .coupon-money-text {
    font-weight: bold;
}