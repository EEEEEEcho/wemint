.footnav {
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: #fff;
    width: 100%;
    height: 98rpx;
    padding-top: 12rpx;
    box-sizing: border-box;
    box-shadow: 0 0rpx 10rpx rgba(0,0,0,0.1);
}

.footnav-item {
    width: 25%;
    text-align: center;
    display: inline-block;
    height: 98rpx;
}

.footnav-item text {
    color: #888;
    font-size: 12px;
    display: block;
    text-align: center;
}

.footnav-item .iconfont {
    font-size: 44rpx;
}

.footnav-item .actived {
    color: #ff4c5b;
}