page {
    background-color: #f4f4f4;
}

.container {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.container .finance-img {
    display: flex;
    height: 200px;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    font-size: 32rpx;
    color: #666;
    padding-top: 20rpx;
}

.container .finance-img image {
    width: 50%;
}

.container .yearMonth {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    color: #999;
    padding: 0 26rpx;
}

.container .finance-box .finance-content {
    height: 130rpx;
    display: flex;
    padding: 0 26rpx;
    justify-content: space-between;
    background-color: #fff;
    align-items: center;
}

.container .finance-box .finance-content .con-left .leftTop {
    font-size: 30rpx;
    line-height: 30rpx;
    color: #333;
    margin-bottom: 20rpx;
    width: 435rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.container .finance-box .finance-content .con-left .leftBottom {
    font-size: 26rpx;
    line-height: 26rpx;
    color: #999;
}

.leftBottom .date {
    margin-right: 18rpx;
}

.container .finance-box .finance-content .con-right {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
}