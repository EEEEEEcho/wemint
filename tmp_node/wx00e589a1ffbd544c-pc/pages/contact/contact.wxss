.mask {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.8);
}

.customer_service {
    width: 100%;
    opacity: 1;
    background: #fff;
    position: absolute;
    left: 0;
    bottom: 0;
}

.customer_service>button {
    display: block;
    width: 100%;
    height: 2.13333rem;
    box-sizing: border-box;
    text-align: center;
    line-height: 2.13333rem;
    background-color: #fff;
    color: #000000;
    font-size: 0.68267rem;
    border-bottom: 0.00085rem solid #e9e9e9;
}

button::after {
    border: none;
}

.customer_service>view {
    display: block;
    width: 100%;
    height: 2.13333rem;
    box-sizing: border-box;
    text-align: center;
    line-height: 2.13333rem;
    background: transparent;
    color: #000000;
    font-size: 0.68267rem;
    border-bottom: 0.00085rem solid #e9e9e9;
}