#petrochina {
    background-color: #ff7842;
    min-height: 100vh;
}

.banner {
    width: 100%;
    margin-bottom: 70rpx;
}

.detial-box {
    background-color: #ff9368;
    position: relative;
    width: 90%;
    margin: 0 auto;
    text-align: center;
    padding-bottom: 20rpx;
}

.ltcion {
    position: absolute;
    left: 0;
    right: 0;
    top: -60rpx;
    margin: auto;
    width: 100rpx;
    height: 100rpx;
}

.ltCoupoon {
    margin-top: 60rpx;
    margin-bottom: 25rpx;
    width: 275rpx;
    height: 173rpx;
}

.tel-box {
    display: flex;
    align-items: center;
    background: #ffa480;
    border-radius: 25px;
    color: #344146;
    padding: 10rpx 40rpx;
    width: 80%;
    margin: 0 auto 35rpx;
    font-size: 30rpx;
}

.tel-box input {
    text-align: left;
}

.get-coupon-btn {
    margin-bottom: 30rpx;
    width: 650rpx;
    height: 86rpx;
}

.tip-img {
    width: 636rpx;
    height: 61rpx;
    margin-bottom: 20rpx;
}

.tip-box {
    text-align: left;
    width: 95%;
    margin: 0 auto;
}

.tip-box view {
    margin: 0;
    color: #fff;
    font-size: 30rpx;
}

.qrcode {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    background-color: #121111f0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}

.close {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.qr-code-img {
    width: 498rpx;
    height: 657rpx;
}

.show-qr-code {
    height: 100vh!important;
    overflow: hidden;
}