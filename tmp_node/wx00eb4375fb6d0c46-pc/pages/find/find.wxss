cover-view {
    overflow: inherit;
}

.mapStyle {
    width: 100%;
    position: fixed;
    height: 100%;
}

.map-coupon-detail {
    background-color: #fff;
    width: 90%;
    position: absolute;
    bottom: 40rpx;
    left: 0;
    right: 0;
    margin: auto;
    padding: 10rpx;
    border-radius: 10rpx;
    border-color: #e2e2e2;
    box-shadow: 2px 2px 4px #c2bebe;
}

.map-coupon-tip {
    margin-top: 10rpx;
}

.coupon-image-box {
    display: flex;
    justify-content: flex-start;
}

.coupon-image {
    margin-right: 20rpx;
    width: 120rpx;
    height: 120rpx;
}

.map-coupon-tip-text {
    font-size: 25rpx;
    margin-bottom: 15rpx;
    margin-top: 5rpx;
}

.map-close {
    position: absolute;
    top: 0;
    right: 0;
    width: 50rpx;
    height: 50rpx;
}

.map-coupon-base {
    display: flex;
    align-items: center;
}

.coupons-banner {
    width: 150rpx;
    height: 150rpx;
    border-radius: 100%;
}

.couppon-title-adress {
    padding-left: 20rpx;
    width: 70%;
}

.coupon-title {
    font-weight: 600;
    font-size: 30rpx;
    margin-bottom: 10rpx;
    white-space: pre-wrap;
}

.coupon-adress {
    font-size: 25rpx;
    color: #7a7a7a;
    white-space: pre-wrap;
}

.dialog-mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,0.3);
}

.dialog-info {
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #FFFFFF;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}

.dialog-title {
    font-size: 36rpx;
    padding: 30rpx 30rpx 10rpx;
}

.dialog-content {
    padding: 10rpx 30rpx 20rpx;
    min-height: 80rpx;
    font-size: 32rpx;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #999999;
}

.dialog-footer {
    display: flex;
    align-items: center;
    position: relative;
    line-height: 90rpx;
    font-size: 34rpx;
}

.dialog-btn {
    display: block;
    flex: 1;
    position: relative;
    color: #3CC51F;
}