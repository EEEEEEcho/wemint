btn-2 .tab-box {
    font-size: 33rpx;
    padding-bottom: 15rpx;
    padding-top: 15rpx;
    border-bottom: 1px solid #e8e8e8;
    position: fixed;
    width: 100%;
    background-color: #fff;
    top: 0;
    z-index: 9;
}

.tab-box ul {
    display: flex;
    justify-content: space-around;
    padding: 10rpx 15rpx;
}

.tab-box li {
    text-align: center;
    color: #8d8d8d;
}

.tab-active {
    color: #000!important;
    position: relative;
}

.tab-active::after {
    position: absolute;
    left: 0;
    right: 0;
    margin: auto;
    bottom: -25rpx;
    content: '';
    display: block;
    width: 40rpx;
    border-bottom: 5px solid #ffc80b;
    border-radius: 25%;
}

.line {
    height: 90rpx;
}

.circle-item-box {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    padding-left: 30rpx;
    padding-right: 30rpx;
    border-bottom: 1px solid #e8e8e8;
    padding-bottom: 20rpx;
    margin-top: 30rpx;
}

.item-headimg-box image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
}

.item-detai-box {
    width: 83%;
    padding-left: 20rpx;
    padding-top: 15rpx;
}

.item-detai-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.item-detai-header view:first-child {
    font-size: 35rpx;
}

.item-detai-header view:last-child {
    font-size: 35rpx;
    font-weight: bold;
}

.share-icon image {
    width: 35rpx;
    height: 35rpx;
}

.share-icon button {
    line-height: 0;
    border: none;
    padding: 0;
}

.item-detai {
    font-size: 30rpx;
    color: #6d6d6d;
}

.item-type {
    color: #36acff;
}

.item-image-box {
    display: flex;
    justify-content: flex-start;
    margin-top: 15rpx;
}

.item-image-box image {
    margin-right: 30rpx;
    width: 130rpx;
    height: 110rpx;
}

.item-adress-box {
    font-size: 25rpx;
    color: #acacac;
    display: flex;
    justify-content: space-between;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}

.item-function-box {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-bottom: 20rpx;
}

.item-function-box view {
    margin-left: 50rpx;
}

.item-function-box image {
    width: 35rpx;
    height: 35rpx;
}

.item-function-talk,.item-function-agree {
    position: relative;
}

.item-function-num {
    font-size: 20rpx;
    position: absolute;
    top: 0;
    right: -1;
    margin-left: 7rpx;
}

.share-mode-not-three {
    padding-right: 20rpx;
}

.item-comment-box {
    font-size: 25rpx;
    background-color: #f5f5f5;
    border-radius: 10px;
    padding: 20rpx 30rpx;
    position: relative;
    margin-bottom: 20rpx;
}

.item-comment-num {
    color: #8d8d8d;
    margin-bottom: 20rpx;
}

.item-comment-box .item-comment-detai:not(:last-child) {
    margin-bottom: 10rpx;
}

.triangle_border_up {
    display: block;
    width: 0;
    height: 0;
    border-width: 0 20rpx 30rpx;
    border-style: solid;
    border-color: transparent transparent #f5f5f5;
    position: absolute;
    top: -20rpx;
    left: 20rpx;
}

.item-comment-detai {
    white-space: pre-wrap;
    word-wrap: break-word;
}

.delete-comment-bg {
    position: relative;
    background-color: #e6dcdc;
}

.delete-comment {
    font-size: 30rpx;
    background-color: #000;
    color: #fff;
    position: absolute;
    padding: 10rpx 20rpx;
    bottom: -80rpx;
    border-radius: 10px;
    z-index: 99;
}

.delete-comment::after {
    display: block;
    content: '';
    width: 0;
    height: 0;
    border-width: 0 20rpx 30rpx;
    border-style: solid;
    border-color: transparent transparent #000;
    position: absolute;
    top: -20rpx;
    left: 20rpx;
}

.item-add-comment {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-bottom: 5rpx;
}

.item-add-comment-headimg image {
    width: 50rpx;
    height: 50rpx;
    border-radius: 100%;
    margin-right: 15rpx;
}

.item-add-comment-content {
    font-size: 25rpx;
}

.item-add-comment-time {
    font-size: 20rpx;
    color: #acacac;
}

.add-comment-box {
    position: fixed;
    right: 20rpx;
    bottom: 10rpx;
}

.add-comment-box image {
    width: 70rpx;
    height: 70rpx;
}

.under-line,.no-circle {
    font-size: 30rpx;
    color: #808080;
    text-align: center;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.no-circle {
    position: absolute;
    left: 0;
    right: 0;
    top: 45%;
}

.no-circle image {
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 10rpx;
}

.dialog-mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,0.3);
}

.dialog-info {
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #FFFFFF;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}

.dialog-title {
    font-size: 36rpx;
    padding: 30rpx 30rpx 10rpx;
}

.dialog-content {
    padding: 10rpx 30rpx 20rpx;
    min-height: 80rpx;
    font-size: 32rpx;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #999999;
}

.dialog-footer {
    display: flex;
    align-items: center;
    position: relative;
    line-height: 90rpx;
    font-size: 34rpx;
}

.dialog-btn {
    display: block;
    flex: 1;
    position: relative;
    color: #3CC51F;
}

.circle-tip-bg {
    background: #000;
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 10;
    top: 0;
    opacity: 0.3;
}

.circle-tip {
    position: absolute;
    left: 0;
    right: 0;
    width: 550rpx;
    margin: auto;
    top: 15%;
    z-index: 11;
}

.circle-tip image {
    width: 100%;
    height: 652rpx;
}

.circle-tip-btn-box {
    position: absolute;
    bottom: 30rpx;
    text-align: center;
    width: 100%;
    height: 170rpx;
}

.circle-tip-btn-box view {
    height: 85rpx;
    margin-bottom: 20rpx;
}

.circle-tip-btn-box text {
    padding: 15rpx 150rpx;
    border-radius: 20px;
    color: #fff;
}

.circle-tip-btn-box .btn-1 {
    background-color: #ffc80b;
}

.circle-tip-btn-box .btn-2 {
    background-color: #f1f1f1;
    color: rgb(202,193,193);
}