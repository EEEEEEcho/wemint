<view bindtap="checkCoupon" class="coupon-box" data-coupon="{{item}}" wx:for="{{couponList}}" wx:key="{{ index }}">
    <view class="coupon-img-box">
        <view>{{item.couponsTitle}}</view>
        <view>
            <image src="{{item.couponsBanner}}"></image>
        </view>
    </view>
    <view class="coupon-detail-box">
        <view class="coupon-detial">
            <view class="shop-name">{{item.shortName}}</view>
            <view>
                <image src="./../../../utils/imgs/lines.png"></image>
            </view>
            <view class="coupon-limit">{{item.subtitle}}</view>
        </view>
        <view class="coupon-amount-box">
            <view>
                <view class="coupon-amount">{{item.amount}}</view>
                <image src="./../../../utils/imgs/taocan.png" wx:if="{{item.type==5}}"></image>
                <image src="./../../../utils/imgs/donation.png" wx:if="{{item.type!=5&&item.shareMode==1}}"></image>
                <image src="./../../../utils/imgs/spellLuck.png" style="width:110rpx;" wx:if="{{item.type!=5&&item.shareMode==2}}"></image>
                <image src="./../../../utils/imgs/help.png" wx:if="{{item.type!=5&&item.shareMode==3}}"></image>
                <image src="./../../../utils/imgs/share.png" wx:if="{{item.type!=5&&item.shareMode==4}}"></image>
                <view class="coupon-limit">{{item.expireDate}}到期</view>
            </view>
        </view>
    </view>
</view>
