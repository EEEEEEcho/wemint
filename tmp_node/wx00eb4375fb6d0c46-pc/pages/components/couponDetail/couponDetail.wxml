<view>
    <view class="chooseBox {{showDetail?'chooseBox-active':''}}'">
        <view class="coupons-detail-box">
            <image class="detail-img" src="./../../../utils/imgs/detailbg.png"></image>
            <image bindtap="closeCouponDetail" class="close-img" src="./../../../utils/imgs/close.png"></image>
            <view class="coupons-text-box">
                <view>{{couponDetail.type=='3'?couponDetail.amount+'折':couponDetail.amount+'元'}}券</view>
                <view>全场通用无使用限制</view>
                <view class="shop-name">{{couponDetail.shortName}}<text>({{couponDetail.couponsTitle}})</text>
                </view>
            </view>
            <view class="line" style="margin-top: -5rpx;"></view>
            <view class="paading-style">
                <view class="can-use-shop-num">可用门店 （{{couponDetail.subbranchList.length}}）</view>
                <view class="can-use-shop-box" wx:for="{{couponDetail.subbranchList}}" wx:key="{{ index }}">
                    <view>
                        <view class="can-use-shop-name">{{item.subbranchName}}</view>
                        <view class="can-use-shop-adress">{{item.address}}</view>
                    </view>
                    <view bindtap="openLocation" data-msg="{{item}}">
                        <image src="./../../../utils/imgs/mapico.png"></image>
                    </view>
                </view>
            </view>
            <view class="line" style="margin-top: 5rpx;"></view>
            <view class="paading-style">
                <view class="can-use-shop-num" style="margin-bottom: 10rpx;">使用说明</view>
                <view class="can-use-shop-num">{{couponDetail.extraParams}}</view>
                <view class="can-use-shop-num">本券为邻店券，需到对应店铺扫码使用</view>
            </view>
            <view class="line" style="margin-top: 5rpx;"></view>
            <view style="margin-bottom: 60rpx;width:100%;">
                <view class="can-use-shop-num paading-style" style="margin-bottom: 10rpx;">优惠介绍</view>
                <rich-text class="can-use-shop-num presentation-content" nodes="{{couponDetail.remark}}" style="width:100%;"></rich-text>
            </view>
        </view>
    </view>
    <view bindtap="closeCouponDetail" class="chooseMask" wx:if="{{showDetail}}"></view>
</view>
