.chooseMask {
    display: flex;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.7);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 500;
}

.chooseBox {
    position: fixed;
    bottom: -35rpx;
    width: 100%;
    background: #ffffff;
    height: 1000rpx;
    transform: translateY(1000rpx);
    transition: all 0.4s;
    z-index: 501;
}

.chooseBox-active {
    transform: translateY(0);
    transition: all 0.4s;
}