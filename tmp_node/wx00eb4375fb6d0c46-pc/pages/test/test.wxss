.content-box {
    position: relative;
}

.head-img {
    width: 100%;
    height: 350rpx;
}

.share-btn {
    background: linear-gradient(to left,#ffae2a,#ff606a);
    color: #fff;
    width: 80%;
    margin: -50rpx auto 0;
    border-radius: 45rpx;
    box-shadow: 1rpx 1rpx 3px #ff606a;
}

.detail-box {
    text-align: center;
    width: 85%;
    position: relative;
    left: 0;
    right: 0;
    margin: auto;
    background-color: #fff;
    border-radius: 10rpx;
    padding-top: 70rpx;
    padding-bottom: 200rpx;
    top: -125rpx;
    box-shadow: 2px 2px 10px #e6e6e6;
}

.title {
    font-size: 50rpx;
    margin-bottom: 30rpx;
}

.tip {
    color: #727272;
    font-size: 30rpx;
}