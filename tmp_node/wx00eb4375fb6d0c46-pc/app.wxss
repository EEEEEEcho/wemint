.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.inputView {
    width: 100%;
    display: flex;
    margin-top: 10px;
}

.input {
    word-break: break-all;
    width: 75%;
    border: 1px solid;
}

.lable {
    align-items: center;
    background-color: green;
    font-size: 12px;
    color: white;
    border-radius: 1px;
    border-left: 1px;
    border-right: 1px;
    border-bottom: 1px;
    text-align: center;
    vertical-align: middle;
}