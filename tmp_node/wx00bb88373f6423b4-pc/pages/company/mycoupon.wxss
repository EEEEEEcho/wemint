page {
    background-color: #f4f4f4;
}

.container {
    background-color: #fff;
}

.navbar {
    flex: none;
    display: flex;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 88rpx;
    background: #fff;
}

.navbar .item {
    position: relative;
    flex: auto;
    font-size: 30rpx;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    color: #666;
}

.navbar .item.active {
    color: #ff4c5b;
}

.navbar .item.active::after {
    content: "";
    display: block;
    position: absolute;
    bottom: 1rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 120rpx;
    height: 4rpx;
    border-radius: 8px;
    background: #ff4c5b;
}

.couponshow {
    background-color: #fff;
    padding: 25px 10px 0;
}

.coupon-title {
    text-align: center;
    margin: 0 auto;
    font-size: 40rpx;
    padding-bottom: 50rpx;
}

.coupon-item {
    position: relative;
    margin: 30rpx 26rpx;
    border-radius: 6rpx;
    box-shadow: 0rpx 0rpx 24rpx #ddd;
}

.coupon-item .item-title {
    display: flex;
    flex-direction: row;
    padding: 0 30rpx;
    background: #fff;
    height: 186rpx;
    box-sizing: border-box;
    border-bottom: 1px dashed #ddd;
    align-items: center;
}

.coupon-list {
    position: fixed;
    top: 44px;
    left: 0;
    width: 100%;
}

.coupon-item .item-title.used .code,.coupon-item .item-title.used .coupon,.coupon-item .item-title.used .code text,.coupon-item .item-title.used .title-tit,.coupon-item .item-title.used .title-coupon {
    color: #999!important;
}

.used {
    color: #999!important;
}

.item-title {
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}

.item-title .code {
    color: #ff4c5b;
    font-size: 96rpx;
}

.item-title .code text {
    color: #ff4c5b;
    font-size: 34rpx;
    margin-bottom: 10rpx;
}

.item-title .title {
    color: #ccc;
    font-size: 26rpx;
}

.coupon-time {
    display: flex;
    align-items: center;
    height: 114rpx;
    background: #fff;
    padding: 0 26rpx;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.coupon-time .time {
    flex: 0 0 70%;
    font-size: 22rpx;
    color: #999;
    padding-top: 10rpx;
}

.coupon-time .status {
    flex: 1;
    text-align: right;
    font-size: 22rpx;
    color: #999;
}

.couponGetOver {
    width: 100%;
    position: fixed;
    top: 200rpx;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 50px;
}

.couponGetOver image {
    display: inline-block;
    width: 300rpx;
}

.couponGetOver text {
    font-size: 24rpx;
    color: #999;
}

.coupon2 .coupon-title {
    text-align: center;
    margin: 0 auto;
    font-size: 40rpx;
    padding-bottom: 50rpx;
}

.coupon2 .coupon-item {
    height: 254rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
}

.coupon2 .coupon-item .notget {
    background: #cc1c39;
}

.coupon2 .item-title {
    display: flex;
    flex-direction: row;
    padding: 0;
    height: 184rpx;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}

.coupon2 .item-title .title {
    flex: 0 0 72%;
    padding-left: 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    color: white;
    font-size: 36rpx;
    font-weight: bold;
}

.coupon2 .item-title .button {
    flex: 1;
    display: flex;
    align-items: center;
    margin: 50rpx 0;
}

.coupon2 .item-title .getbtn {
    background: white;
    text-align: center;
    border-radius: 70rpx;
    color: #cc1c39;
    width: 160rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 32rpx;
}

.coupon2 .coupon-item .getJuan {
    background-color: rgba(204,28,57,.6);
}

.coupon2 .coupon-item .getJuan .getbtn {
    color: #ffffff;
    background-color: #d5d5d5;
}

.coupon2 .coupon-item .getJuanHui {
    background-color: #bfbfbf;
}

.coupon2 .coupon-item .getJuanHui .getbtn {
    color: #ffffff;
    background-color: #d5d5d5;
}

.coupon2 .coupon-time {
    display: flex;
    height: 70rpx;
}

.coupon2 .coupon-time .time {
    flex: 0 0 50%;
    font-size: 22rpx;
    color: #999;
}

.coupon2 .coupon-time .itemcount {
    flex: 1;
    text-align: right;
    font-size: 22rpx;
    color: #999;
}

.titleMoney {
    display: block;
    font-size: 48rpx;
    margin-bottom: 10rpx;
    font-weight: normal;
}

.item-title .title .titleText {
    display: inline-block;
    font-size: 26rpx;
}

.title {
    margin-left: 160rpx;
}

.title text {
    display: block;
}

.title-coupon {
    font-size: 36rpx;
    color: #ff4c5b;
}

.code {
    margin-left: 26rpx;
}

.title-tit {
    font-size: 22rpx;
    color: #999;
    padding-top: 20rpx;
}

.coupon-time .jine {
    font-size: 22rpx;
    color: #999;
}

.coupon-time .jine text {
    display: block;
}

.coupon-time .use {
    width: 164rpx;
    height: 60rpx;
    background: #ff4c5b;
    color: #fff;
    font-size: 26rpx;
    margin-left: 138rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 30rpx;
}

.title-img {
    position: absolute;
    top: 0;
    right: 0;
    width: 130rpx;
    height: 130rpx;
}

.title-img image {
    width: 100%;
    height: 130rpx;
}