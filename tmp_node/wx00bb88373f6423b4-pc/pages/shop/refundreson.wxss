page {
    background-color: #fff;
}

.container {
    background-color: #fff;
    border-top: 1px solid #ddd;
}

.baitiao {
    height: 20rpx;
    background: #f2f2f2;
}

.refund {
    background: #fff;
}

.refund .refund-not {
    height: 88rpx;
    display: flex;
    align-content: center;
    line-height: 88rpx;
    margin-left: 26rpx;
    padding-right: 26rpx;
}

.icon-iconfont_delivering,.icon-iconfont_package-get {
    font-size: 30rpx;
    margin-right: 20rpx;
}

.not-txt {
    font-size: 28rpx;
    color: #333;
}

.refund-not-txt {
    flex: 2;
}

.amount {
    background: #fff;
    padding: 20rpx 26rpx 24rpx;
}

.amount .amount-item {
    font-size: 28rpx;
    color: #333;
}

.amount .amount-item .amount-tit {
    color: #ff7200;
    font-size: 24rpx;
    padding-left: 20rpx;
}

.amount .amount-detail {
    font-size: 24rpx;
    color: #666;
    padding-top: 20rpx;
}

.amount .amount-icon {
    color: #ff7200;
    padding-right: 10rpx;
    font-size: 30rpx;
    padding-top: 10rpx;
    display: inline-block;
}

.refunds {
    background: #fff;
    margin: 20rpx 26rpx 0;
    font-size: 28rpx;
}

.submit {
    position: fixed;
    bottom: 0;
    background: #ff7200;
    color: #fff;
    width: 100%;
    border-radius: 0;
    z-index: 99;
}

.refunds-item {
    min-height: 80rpx;
    padding: 26rpx 26rpx;
    width: 93%;
    background: #f2f2f2;
    margin-top: 26rpx;
    font-size: 26rpx;
    color: #666;
}

checkbox {
    opacity: 0;
    margin-right: 26rpx;
}

icon {
    margin-right: 20rpx;
    margin-top: 6rpx;
}

.refund-not-btn {
    position: relative;
}

.refund-not-btn icon {
    position: absolute;
    top: 15%;
    right: -11%;
}

.active .icon-iconfont_delivering,.active .not-txt,.active .icon-iconfont_package-get {
    color: #ff7200;
}

.img-v {
    height: 300rpx;
    width: 300rpx;
    margin-top: 40rpx;
}

.images-pic {
    width: 200rpx;
    height: 200rpx;
    border: 1px solid #ddd;
    margin-right: 26rpx;
    margin-bottom: 26rpx;
    display: inline-block;
    position: relative;
    vertical-align: top;
}

.img {
    overflow: hidden;
    height: 200rpx;
}

.images-pic image {
    width: 100%;
    height: 100%;
}

.jiaotou {
    position: absolute;
    right: -10rpx;
    top: -20rpx;
    width: 40rpx!important;
    height: 40rpx!important;
    z-index: 999;
}

.pic {
    position: relative;
}

.images-pics {
    margin: 50rpx 26rpx 96rpx;
}

.hide {
    position: fixed;
    background: #333;
    opacity: .8;
    width: 100%;
    height: 100%;
}

.show {
    display: block;
    position: fixed;
    background: #333;
    opacity: .8;
    width: 100%;
    height: 100%;
    z-index: 9999;
}