.search-product {
    height: 106rpx;
    width: 100%;
    padding: 20rpx 26rpx;
    box-sizing: border-box;
    background-color: #fff;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    border-bottom: 1px solid #f4f4f4;
}

.search-product .formSearch {
    border-radius: 40rpx;
    background-color: #fff;
    width: 100%;
    height: 80rpx;
}

input.searchinp {
    width: 693rpx;
    height: 66rpx;
    line-height: 66rpx;
    border-radius: 40rpx;
    padding-left: 80rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    background-color: #f4f4f4;
}

.searchimg {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 44rpx;
    height: 70rpx;
    top: -68rpx;
    left: 32rpx;
}

.searchimg .iconfont {
    font-size: 40rpx;
    color: #999;
}

.classTab {
    display: flex;
    flex-direction: row;
    width: 100%;
    padding-top: 106rpx;
    position: fixed;
}

.classTab .classTabList {
    width: 170rpx;
    display: flex;
    flex-flow: column;
    background-color: #f4f4f4;
}

.classTab .classTabList .classTabItem {
    width: 170rpx;
    min-height: 100rpx;
    text-align: center;
    color: #333;
    font-size: 28rpx;
    box-sizing: border-box;
    position: relative;
    z-index: 998;
    padding: 0 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.classTab .classTabList .classTabItem.isSelected {
    font-size: 28rpx;
    color: #ff4c5b;
    background-color: #fff;
    width: 170rpx;
    box-sizing: border-box;
}

.borderLeftLine {
    height: 100rpx;
    width: 6rpx;
    background: #ff4c5b;
    position: absolute;
    top: 0;
    left: 0;
    display: inline-block;
}

.classTabContent {
    flex: 1;
    padding: 0 0 0 26rpx;
    box-sizing: border-box;
    background-color: #fff!important;
}

.showClassName {
    text-align: left;
    color: #666;
    font-size: 24rpx;
    margin-bottom: 14rpx;
}

.classTabContentItem {
    height: 226rpx;
    width: 158rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    float: left;
    margin-right: 28rpx;
}

.classTabContentItem .name-box text {
    margin: 14rpx 0 0 0;
    display: block;
    width: 158rpx;
    font-size: 24rpx;
    color: #666;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.classTabContentItem:nth-child(3n) {
    margin-right: 0;
}

.classTabContentItem .img-box {
    width: 158rpx;
    height: 158rpx;
}

.classTabContentItem .img-box image {
    width: 158rpx;
    height: 158rpx;
}

.noSubImgBox {
    width: 158rpx;
    height: 158rpx;
}

.noSubImgBox image {
    width: 158rpx;
    height: 158rpx;
}

.noSubNameBox text {
    margin: 14rpx 0 0 0;
    display: block;
    width: 158rpx;
    font-size: 24rpx;
    color: #666;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.noMore {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 auto;
    margin-bottom: 34rpx;
    padding-left: 186rpx;
}

.noMore .line {
    width: 56rpx;
    height: 2rpx;
    background-color: #bbb;
    position: relative;
    top: 40rpx;
}

.noMore .text {
    color: #bbb;
    font-size: 22rpx;
    margin: 0 20rpx;
}

.noproduct {
    display: flex;
    height: 200px;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    font-size: 32rpx;
    color: #666;
    position: fixed;
    top: 186rpx;
    width: 100%;
}

.noproduct image {
    width: 60%;
    position: relative;
    left: -125rpx;
}

.noproduct text {
    font-size: 24rpx;
    color: #999;
    position: relative;
    left: -125rpx;
}

.categoryItem {
    height: 280rpx;
    width: 50%;
    float: left;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.categoryItem:nth-child(2n) {
    border-bottom: 1px solid #ddd;
}

.categoryItem:nth-child(2n+1) {
    border-bottom: 1px solid #ddd;
    border-right: 1px solid #ddd;
}

.categoryItemIcon {
    margin-bottom: 14rpx;
}

.categoryItemIcon .iconfont {
    font-size: 118rpx;
}

.categoryItem .categoryItemText {
    font-size: 26rpx;
    color: #666;
}