<view class="pagebg">
    <view class="box" wx:for="{{address}}" wx:key="*this">
        <view class="box1">
            <view class="box_bt">{{item.rec_name}}<view class="font1">{{item.phone}}</view>
            </view>
            <view class="box_xin">{{item.cur_address}}</view>
        </view>
        <view class="xuan">
            <radio-group bindchange="listenerRadioGroup" class="hui">
                <label bindtap="getyun" class="x_wenzi" data-flag="{{item.is_first}}" data-id="{{item.id}}" data-index="{{index}}">
                    <radio checked="{{item.is_first==1?'checked':''}}" style="float:left; margin:-1px 5px 0 10px;" value="{{item.id}}"></radio> 设为默认 </label>
            </radio-group>
        </view>
        <view class="o_r">
            <view class="o_r1">
                <navigator bindtap="addressDel" class="navig" data-id="{{item.id}}" openType="button">
                    <image mode="widthFix" src="../../images/dele.jpg" style="width:25px;" url="##"></image>删除
 </navigator>
            </view>
            <view class="o_r1">
                <navigator class="navig" url="../address/address?id={{item.id}}">
                    <image mode="widthFix" src="../../images/xiug.jpg" style="width:25px;"></image>修改
 </navigator>
            </view>
        </view>
    </view>
    <view style="text-align:center; line-height:40px;" wx:if="{{address.length==0}}">暂无数据</view>
    <view class="ord6">
        <navigator class="opt1" url="../address/address">+添加新地址</navigator>
    </view>
</view>
