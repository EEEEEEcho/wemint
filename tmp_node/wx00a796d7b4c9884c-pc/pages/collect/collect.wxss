.s_coll {
    width: 100%;
    float: left;
}

.s_coll_1 {
    width: 94%;
    float: left;
    margin: 3% 0 1% 3%;
    padding: 10px 0;
    border-bottom: 1px solid #ececec;
}

.s_coll_1 image {
    width: 150px;
    float: left;
    margin: 0 2% 0 0;
    border-radius: 5px;
}

.s_coll_1 .h3 {
    width: 68%;
    height: 40px;
    float: left;
    font-family: ' Microsoft YaHei';
    font-size: 16px;
    color: #333333;
    line-height: 20px;
    text-align: left;
    font-weight: normal;
    text-transform: uppercase;
    overflow: hidden;
}

.s_coll_1 .h4 {
    width: 68%;
    height: 30px;
    float: left;
    font-family: ' Microsoft YaHei';
    font-size: 14px;
    color: #acacac;
    line-height: 30px;
    text-align: left;
    font-weight: normal;
    text-transform: uppercase;
}

.s_coll_1 .h5 {
    width: 68%;
    height: 40px;
    float: left;
    font-family: ' Microsoft YaHei';
    font-size: 16px;
    color: #ff0000;
    line-height: 40px;
    text-align: left;
    font-weight: normal;
    text-transform: uppercase;
}

.s_coll_1 .h5 button.navig {
    width: 90px;
    height: auto;
    float: right;
}

.s_coll_1 .h5 button.navig image {
    width: 90px;
    height: 32px;
    float: left;
    margin-left: -14px;
}