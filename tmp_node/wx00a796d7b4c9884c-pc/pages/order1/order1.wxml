<navigator class="navig" hoverClass="none" url="../shouhuo/shouhuo">
    <view class="ord1">
        <view class="ord1_tu">
            <image mode="widthFix" src="../../images/dzhi.png" style="width:30px;"></image>
        </view>
        <view class="ord1_add" wx:if="{{!addr_info}}">
    选择收货地址
    </view>
        <block wx:else>
            <view class="ord1_bt">{{addr_info.rec_name}} {{addr_info.phone}}</view>
            <view class="ord1_con">{{addr_info.cur_address}}</view>
        </block>
    </view>
</navigator>
<view class="ord2">
    <view class="{{index==cart_info.length-1?'ord2_2':'ord2_1'}}" wx:for="{{cart_info}}" wx:key="*this">
        <view class="ord2_1_img">
            <image mode="widthFix" src="{{url}}{{item.picurl}}" style="width:80px;"></image>
        </view>
        <view class="ord2_bt">{{item.title}}</view>
        <view class="ord2_con">{{item.attrname}}</view>
        <view class="ord2_jia">¥{{item.salesprice}}<view class="font1">X{{item.num}}</view>
        </view>
    </view>
</view>
<view class="ord3 tc">
    <view class="fl_l">
        <view bindtap="setModalStatus1" class="drawer_desc fl_l" data-status="1" data-type="posttype" wx:if="{{postmode_info.length!=0}}">选择配送方式 <view class="font1">{{postname1}}</view>
        </view>
        <view class="drawer_desc fl_l" data-status="1" data-type="posttype" wx:else>
    选择配送方式 <view class="font1">无</view>
        </view>
    </view>
    <view class="ord33 tc">
        <view class="fl_l">
            <view bindtap="setModalStatus" class="drawer_desc fl_l" data-status="1" data-type="coupon" wx:if="{{coupon.length!=0}}">选择优惠券 
    <view class="font1" wx:if="{{money1=='0.00'}}"></view>
                <view class="font1" wx:else>￥{{money1}}</view>
            </view>
            <view class="drawer_desc fl_l" data-status="1" wx:else>选择优惠券 <view class="font1">无</view>
            </view>
        </view>
    </view>
    <view class="tchuang">
        <view bindtap="setModalStatus1" class="drawer_screen" data-status="0" wx:if="{{showModalStatus1}}"></view>
        <view animation="{{animationData}}" class="drawer_attr_box" wx:if="{{showModalStatus1}}">
            <view bindtap="setModalStatus1" class="close_icon" data-status="0">×</view>
            <view class="drawer_attr_content">
                <view class="text_center">
                    <view class="miche">
                        <view>选择配送方式 </view>
                    </view>
                </view>
                <view class="shu">
                    <view class="kwbox">
                        <view class="xuan">
                            <radio-group bindchange="listenerRadioGroup1" class="hui">
                                <view class="huibg" wx:for="{{postmode_info}}" wx:key="*this">
                                    <label class="x_wenzi" style="float:left; margin:10px 5px 0 20rpx;">
                                        <radio value="{{index}}"></radio> {{item.classname}} </label>
                                </view>
                            </radio-group>
                        </view>
                    </view>
                </view>
                <view bindtap="getPostType" class="footc" data-status="0">确定</view>
            </view>
        </view>
    </view>
</view>
<view class="tchuang">
    <view bindtap="setModalStatus" class="drawer_screen" data-status="0" wx:if="{{showModalStatus}}"></view>
    <view animation="{{animationData}}" class="drawer_attr_box" wx:if="{{showModalStatus}}">
        <view bindtap="setModalStatus" class="close_icon" data-status="0">×</view>
        <view class="drawer_attr_content">
            <view class="text_center">
                <view class="miche">
                    <view>选择优惠券 </view>
                </view>
            </view>
            <view class="shu">
                <view class="kwbox">
                    <view class="xuan">
                        <radio-group bindchange="listenerRadioGroup2" class="hui">
                            <view class="huibg" wx:for="{{coupon}}" wx:key="*this">
                                <label class="x_wenzi">
                                    <radio checked="" style="float:left; margin:-1px 5px 0 0;" value="{{index}}"></radio>¥{{item.money}} 
  <label class="x_shuoming" style="font-size:14px; color:#999;"> (满{{item.meet_money}}元可用)</label>
                                </label>
                            </view>
                        </radio-group>
                    </view>
                </view>
            </view>
            <view bindtap="getCoupon" class="footc" data-status="1">确定</view>
        </view>
    </view>
</view>
<view class="ord4 tc">
    <view class="fl_l">
        <view class="drawer_desc fl_l">我要留言</view>
    </view>
    <input bindblur="remarkText" bindfocus="remarkFocus" class="ord4_tab" placeholder="{{default}}"></input>
</view>
<view class="ord5">
    <view class="ord5_desc fl_l">商品金额 <view class="font1">¥{{totalprice}}</view>
    </view>
    <view class="ord5_desc fl_l">优惠券 <view class="font1">-¥{{money1}}</view>
    </view>
    <view class="ord5_desc fl_l">运费 <view class="font1">+¥{{all_yunfei}}</view>
    </view>
</view>
<view class="ord6">
    <view class="font1">应付款：{{totalprice_all}}元</view>
    <button bindtap="submit" class="navig" data-flag="1" hoverClass="none">
        <image mode="widthFix" src="../../images/pay1.jpg" style="width:100%;"></image>
    </button>
    <button bindtap="submit" class="navig" data-flag="2" hoverClass="none" wx:if="{{offline_pay=='Y'}}">
        <image mode="widthFix" src="../../images/pay2.jpg" style="width:100%;"></image>
    </button>
</view>
