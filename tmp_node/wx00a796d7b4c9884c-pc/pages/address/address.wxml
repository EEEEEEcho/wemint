<view class="s_table">
    <view class="s_tab1">
        <input bindinput="nameText" class="tab1" id="text1" maxlength="8" name="rec_name" placeholder="请输入收货人姓名" type="text" value="{{rec_name}}"></input>
    </view>
    <view class="s_tab1">
        <input bindinput="telText" class="tab1" id="text1" name="phone" placeholder="请输入手机号" type="text" value="{{phone}}"></input>
    </view>
    <view class="s_tab1">所在地区</view>
    <view class="s_tab2">
        <textarea bindblur="addText" class="tab2" maxlength="120" name="cur_address" placeholder="请输入详细地址（5-120个字）" value="{{cur_address}}"></textarea>
    </view>
</view>
<view class="s_tab3">设为默认 <view class="body-view">
        <switch bindchange="switch2Change" checked="{{is_first==1?'checked':''}}" class="is_first"></switch>
    </view>
</view>
<view bindtap="submit" class="footc">确定</view>
