.s_table {
    width: 100%;
    float: left;
    padding: 10px 0;
    border-bottom: 15px solid #f3f3f3;
}

.s_tab1 {
    width: 89%;
    height: auto;
    float: left;
    margin: 2% 0 1% 4%;
    padding: 5px 0;
    border-bottom: 1px solid #e9e9e9;
    font-size: 16px;
    color: #333;
    line-height: 40px;
    text-align: left;
    font-weight: normal;
}

.s_tab1 input.tab1 {
    width: 98%;
    height: 40px;
    float: left;
    background: none;
    border: none;
    font-size: 16px;
    color: #333;
    line-height: 40px;
    text-align: left;
    font-weight: normal;
}

