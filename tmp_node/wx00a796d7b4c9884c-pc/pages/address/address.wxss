.body-view {
    float: right;
}

.footc {
    display: block;
    position: fixed;
    bottom: 20px;
    left: 10%;
    background: #9139e1;
    z-index: 100;
    width: 76%;
    font-size: 14px;
    border: 1px solid #eee;
    line-height: 50px;
    font-weight: 700;
    color: snow;
    text-align: center;
    border-radius: 10px;
}