<view class="swiper-tab">
    <view bindtap="swichNav" class="swiper-tab-list {{currentTab==0?'on':''}}" data-current="0" data-otype="pay">待付款</view>
    <view bindtap="swichNav" class="swiper-tab-list {{currentTab==1?'on':''}}" data-current="1" data-otype="deliver">待发货</view>
    <view bindtap="swichNav" class="swiper-tab-list {{currentTab==2?'on':''}}" data-current="2" data-otype="receive">待收货</view>
    <view bindtap="swichNav" class="swiper-tab-list {{currentTab==3?'on':''}}" data-current="3" data-otype="finish">已完成</view>
    <view bindtap="swichNav" class="swiper-tab-list {{currentTab==4?'on':''}}" data-current="4">退款/售后</view>
</view>
<view class="c_t60"></view>
<swiper bindchange="bindChange" class="swiper-box" current="{{currentTab}}" duration="300" style="height:{{winHeight-31}}px">
    <swiper-item>
        <view class="search_no" wx:if="{{!orderList0.length}}">
            <view class="font_14">
                <image class="scimg" src="/images/search_no.png"></image>
            </view>
            <text>没有可用订单/(ㄒoㄒ)/~~</text>
        </view>
        <view class="shop df" wx:for="{{orderList0}}">
            <image class="sh_slt" src="{{item.photo_x}}"></image>
            <view class="df_1">
                <view class="sp_text">
                    <navigator hoverClass="changestyle" url="../index/detail?productId={{item.pid}}">
                        <view class="sp_tit ovh1">{{item.name}}</view>
                    </navigator>
                    <view class="sp_neb">单价：¥ {{item.price_yh}} 数量：×{{item.product_num}} 产品：×{{item.pro_count}}</view>
                    <view class="sp_jg">¥：{{item.price}}</view>
                    <view bindtap="payOrderByWechat" class="font_12 red fl_r" data-orderId="{{item.id}}" data-ordersn="{{item.order_sn}}" wx:if="{{item.type=='weixin'}}">微信支付</view>
                    <view bindtap="removeOrder" class="font_12 red fl_r mr_5" data-order-id="{{item.id}}">取消订单</view>
                    <navigator class="font_12 red fl_r mr_5" url="../order/detail?orderId={{item.id}}">订单详情</navigator>
                </view>
            </view>
        </view>
    </swiper-item>
