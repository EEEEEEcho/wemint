<view class="w100">
    <view class="p_all bg_white df item" wx:for="{{productData}}">
        <view class="cp_photo">
            <image src="{{item.photo_x}}"></image>
        </view>
        <view class="df_1">
            <view class="font_14 mt5 ovh1">
		           {{item.name}}
		        </view>
            <text class="gm_ovh_1h red pt10">¥{{item.price}}</text>
            <text class="gm_ovh_1h pt10">数量：{{item.num}}</text>
        </view>
    </view>
    <view class="p_all bg_white mt10 font_14" wx:if="{{addemt==0}}">
        <navigator hoverClass="none" url="../address/user-address/user-address?cartId={{cartId}}">
            <view class="df">
                <view class="df_1 c6">
                    <view class="l_h20">收货人：{{address.name}}<text class="fl_r mr10">{{address.tel}}</text>
                    </view>
                    <view class="l_h20 mt5">地址：{{address.address_xq}}</view>
                </view>
                <image class="x_right mt15" src="/images/x_right.png"></image>
            </view>
        </navigator>
    </view>
    <view class="p_all bg_white mt10 font_14" wx:else>
        <navigator hoverClass="none" url="../address/user-address/user-address?cartId={{cartId}}">
            <view class="df">
				添加收货地址		
			</view>
        </navigator>
    </view>
    <view class="xuan" wx:if="{{vou!=''}}">
        <view class="hui">可使用优惠券：</view>
        <radio-group bindchange="listenerRadioGroup" class="hui">
            <label bindtap="getvou" class="xuan" data-id="{{item.vid}}" data-price="{{item.amount}}" style="display: flex" wx:for="{{vou}}">
                <radio value="{{item.vid}}"></radio>满{{item.full_money}}立减{{item.amount}}元
 </label>
            <label bindtap="getvou" class="xuan" data-id="0" data-price="0" style="display: flex">
                <radio value="0"></radio>不使用优惠券
 </label>
        </radio-group>
    </view>
    <view class="p_all bg_white mt10 font_14">
        <textarea autoHeight bindinput="remarkInput" class="min_60" name="remark" placeholder="备注" value="{{remark}}"></textarea>
    </view>
    <view class="zhifu mt10 tc">应共支付：<span class="font_20 red">¥ {{total}}</span>
    </view>
    <view class="p_all mt10">
        <view class="btnGreen">
            <button bindtap="createProductOrderByWX" class="wx_pay_submit" disabled="{{btnDisabled}}" formType="submit" id="wxPay" type="primary">微信支付</button>
            <button bindtap="createProductOrderByXX" class="xx_pay_submit" disabled="{{btnDisabled}}" formType="submit" id="xxPay" type="default">线下支付</button>
        </view>
    </view>
</view>
