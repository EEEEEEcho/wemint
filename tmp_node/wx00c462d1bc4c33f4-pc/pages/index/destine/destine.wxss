.brandDetailBox {
    width: 94%;
    background: #666;
    display: flex;
    margin: 0 auto;
    border-radius: 6px;
    padding: 10px 0;
    box-sizing: border-box;
}

view {
    box-sizing: border-box;
}

picker {
    display: block;
    box-sizing: border-box;
}

.logoImg {
    box-shadow: 2px 2px 1px #ffbf20;
    border-radius: 100%;
    width: 68px;
    height: 68px;
    margin: 5px 16px;
}

.storeInfo {
    margin: auto 0;
}

.storeName {
    font-size: 18px;
    color: #fff;
}

.storeTel,.storeAddress {
    font-size: 12px;
    color: #999;
}

.dateBox,.timeBox,.tableTypeBox,.mealsnumberBox,.linkmanBox,.contactnumBox,.remarkBox {
    border-bottom: 1px #666 solid;
    clear: both;
    box-sizing: border-box;
    height: 50px;
    padding: 15px 0;
    white-space: nowrap;
    display: flex;
    align-items: center;
}

.date1,.time1,.tableType1 {
    float: left;
    font-size: 16px;
    color: #fff;
    width: calc(80% - 105px);
}

.arrow_up {
    width: 14px;
    height: 14px;
    float: right;
    margin-top: 4px;
}

img {
    box-sizing: border-box;
}

.mealsnumber {
    border-left: 3px #ffbf20 solid;
    padding-left: 20px;
    margin-left: 30px;
    float: left;
    font-size: 16px;
    color: #fff;
    width: 105px;
    text-align: left;
    line-height: 20px;
}

.remark-text {
    border-left: 3px #ffbf20 solid;
    padding-left: 20px;
    margin-left: 30px;
    float: left;
    font-size: 16px;
    color: #fff;
    width: 80px;
    text-align: left;
    line-height: 20px;
}

input {
    width: 160px;
    height: 20px;
    min-height: 20px;
}

.weui-input {
    font-size: 16px;
    color: #fff;
    width: 160px;
}

.submit {
    position: relative;
    top: 10px;
    background: #777;
    color: #ffbf20;
    width: 86%;
    margin-bottom: 10px;
}

.ad_popError {
    background: #de352d;
    color: #fff;
    height: 58rpx;
    line-height: 58rpx;
    font-size: 24rpx;
    text-align: center;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    z-index: 3;
}