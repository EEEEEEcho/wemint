<scroll-view>
    <view class="waitBox" wx:if="{{orderState=='2'}}">
        <view class="waitTitle">{{jiedanStatu}}</view>
        <view class="waitTT">
            <view class="waitText">距离预定时间过期还有</view>
            <view class="waitTime">{{hour}}时{{minute}}分{{second}}秒</view>
        </view>
        <view class="waitNotice">注：商家为您预留1小时订位，超时订单自动取消</view>
    </view>
    <view class="waitBox" wx:if="{{orderState=='6'}}">
        <view class="waitTitle">{{jiedanStatu}}</view>
        <view class="waitNotice1">拒绝原因</view>
        <view class="waitNotice2">{{reason}}</view>
    </view>
    <view style="color:#999;font-size:14px;padding-left:40px;">商家电话：{{phone}}</view>
    <view style="color:#999;font-size:14px;padding-left:40px;padding-top:4px;">店铺地址：{{address}}</view>
    <view style="border-left:4px #ffbf20 solid;padding-left:20px;color:#fff;margin-top:24px;margin-left:38px;">预订信息</view>
    <view style="color:#999;padding-left:62px;padding-top:20px;line-height:40px;font-size:16px;">
        <view>预定日期：{{date}}</view>
        <view>预定时间：{{time}}</view>
        <view>选择桌型：{{tableType}}</view>
        <view>用餐人数：{{mealsNumber}}</view>
        <view>联 系 人：{{contants}}</view>
        <view>联系电话：{{contantsTel}}</view>
        <view>详细说明：{{textDesc}}</view>
    </view>
    <button bindtap="directOrder" style="background:#777;color:#ffbf20;border-radius:8px;width:80%;" wx:if="{{orderState!='6'}}">直 接 点 餐</button>
    <button bindtap="back" style="background:#444;color:#999;border-radius:8px;width:80%;margin-top:10px;margin-bottom:24px;" wx:if="{{orderState!='6'}}">取 消 预 约</button>
</scroll-view>
<view class="pb-container" wx:if="{{displa}}">
    <view bindtap="closeTk" class="text-right100">X</view>
    <component-timeLine refundId="{{refundId}}" refundTitle="{{refundTitle}}"></component-timeLine>
</view>
