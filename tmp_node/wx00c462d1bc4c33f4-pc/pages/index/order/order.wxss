.swiper-tab {
    width: 100%;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    position: fixed;
    z-index: 10;
    background-color: #3d3d3d;
    top: 0;
    left: 0;
}

.swiper-tab-item {
    width: 30%;
    color: #fff;
}

.active {
    color: #fff;
    border-bottom: 4rpx solid #ffbf20;
}

swiper {
    margin-top: 120rpx;
    height: 100vh;
}

.line {
    background: #666;
    width: 1px;
    float: left;
    height: 100%;
    margin-left: 14px;
}

.orderTime {
    border-left: 4px #ffbf20 solid;
    padding-left: 10px;
    margin-left: 10px;
    color: #ccc;
    font-size: 14px;
}

.timeline {
    background: #444;
    border-radius: 6px;
    width: 72%;
    margin-left: 10px;
    margin-top: 10px;
}

.orderbox {
    float: left;
    background: #444;
    border-radius: 6px;
    width: 100%;
    padding-bottom: 10px;
    box-sizing: border-box;
}

.btnbox {
    width: 24%;
    float: right;
    margin-right: 10px;
}

.first {
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}

.first-state {
    color: #ccc;
    font-size: 15px;
    padding: 10px;
}

.first-state-storename {
    max-width: calc(100% - 65px);
    white-space: nowrap;
    text-overflow: ellipsis;
}

button {
    color: #ffbf20;
    background: #555;
    border-radius: 8px;
    font-size: 14px;
    margin-bottom: 5px;
    padding: 0 5px;
}

.orderRealPrice {
    width: 100%;
    font-size: 14px;
    color: #ccc;
    padding: 10px;
    box-sizing: border-box;
}

.orderRealPrice3 {
    float: left;
    padding: 0 40rpx;
}

view {
    display: block;
    box-sizing: border-box;
}

textarea {
    display: block;
    box-sizing: border-box;
}

.cover {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: rgba(0,0,0,0.6);
    z-index: 200;
}

.pb-container {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: calc(100vw - 80rpx);
    padding: 40rpx;
    background-color: #444;
    color: #dedede;
    border-radius: 10px;
    font-size: 15px;
    z-index: 201;
}

.pb-payBackReason {
    width: 100%;
    height: 240rpx;
    padding: 20rpx;
    background-color: #666;
    color: #ebebeb;
    border-radius: 5px;
    margin-top: 20rpx;
    font-size: 15px;
    text-align: left;
}

.pb-bohuiReason {
    width: 100%;
    height: 150rpx;
    line-height: 50rpx;
    margin-top: 10rpx;
}

.pb-submit {
    width: 100%;
    height: 40px;
    line-height: 40px;
    font-size: 16px;
    text-align: center;
    border-radius: 5px;
    background-color: #ffbf21;
    color: #382d29;
    margin: 0 auto;
    margin-top: 30rpx;
}

.pb-title {
    text-align: center;
    width: 100%;
    height: 40px;
    line-height: 40px;
    font-size: 20px;
    color: #ffbb21;
}

.pb-orderId,.pb-payBackMoney,.pb-payBackReason0 {
    width: 100%;
    height: 36px;
    line-height: 36px;
    text-align: left;
}

.pb-payBackMoney .pb-right {
    color: #ff4c3c;
}

.pb-left,.pb-right,.pb-left1,.pb-right1 {
    float: left;
}

.pb-left1 {
    width: 60px;
}

.pb-right1 {
    width: calc(100% - 80px);
    margin-left: 20rpx;
    max-height: 150rpx;
    overflow: hidden;
}

.pb-right {
    margin-left: 20rpx;
}

.pb-bottom {
    height: 40px;
    width: 100%;
    margin-top: 30rpx;
}

.pb-contact {
    float: left;
    height: 40px;
    line-height: 40px;
    text-decoration: underline;
}

.pb-confirm {
    float: right;
    height: 40px;
    line-height: 40px;
    background-color: #666;
    text-align: center;
    width: 80px;
    border-radius: 20px;
    font-size: 20px;
}