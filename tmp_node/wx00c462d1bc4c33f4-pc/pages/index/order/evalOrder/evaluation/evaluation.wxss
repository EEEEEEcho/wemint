view {
    box-sizing: border-box;
}

.saveAddress {
    background: #777;
    color: #ffbf20;
    width: 80%;
    margin: 20px auto;
}

.evabox {
    display: flex;
    flex-flow: row;
    justify-content: flex-start;
    align-items: center;
    line-height: 40px;
}

.evabox-text {
    color: #999;
    font-size: 18px;
    padding-left: 42px;
}

.xing {
    box-sizing: border-box;
    padding-left: 15px;
}

.imgs {
    width: 20px;
    height: 20px;
    padding-right: 13px;
    margin-top: 13px;
}

.foodname {
    float: left;
    padding: 10px 0;
    padding-left: 10vw;
    color: #ededed;
}

.likefood,.unlikefood {
    float: right;
    margin-top: 8px;
}

.zan {
    float: left;
    color: #9a9a9a;
    padding-left: 5px;
    font-size: 14px;
}

.cai {
    float: left;
    width: 15px;
    height: 15px;
}

.container {
    padding: 5px 0;
}

.row {
    align-items: center;
    margin-bottom: 10px;
}

.unlikefood,.likefood {
    display: block;
    margin-right: 10px;
    padding: 5px 15px;
    border-radius: 20px;
    border: 1px solid #949494;
}