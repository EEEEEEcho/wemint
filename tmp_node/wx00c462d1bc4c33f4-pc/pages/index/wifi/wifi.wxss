view {
    box-sizing: border-box;
}

.wifipic {
    width: 200px;
    height: 200px;
    display: block;
    margin: 20px auto 20px auto;
}

.wifiBox {
    background: #555;
    width: 80%;
    height: 78px;
    margin: 0 auto 0 auto;
    border-radius: 6px;
}

.wifiName {
    color: #cfcfcf;
    padding-top: 18px;
    margin-left: 20px;
    font-size: 14px;
}

.wifiPwd {
    color: #cfcfcf;
    padding-top: 6px;
    margin-left: 20px;
    font-size: 14px;
    float: left;
    width: calc(75% - 20px);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.copyBtn {
    border-radius: 4px;
    border: 1px #ffbf20 solid;
    color: #ffbf20;
    background: none;
    width: calc(25% - 12px);
    height: 26px;
    font-size: 12px;
    float: right;
    margin-right: 12px;
    line-height: 26px;
}

.caption {
    width: 70%;
    margin: 10px auto 10px auto;
}

.caption .text1 {
    color: #999;
    font-size: 10px;
}

.caption .text2 {
    color: #999;
    font-size: 10px;
    padding-top: 4px;
}

.caption .text3 {
    color: #999;
    font-size: 10px;
    padding-top: 4px;
}