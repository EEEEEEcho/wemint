.cover {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0,0,0,0.4);
    z-index: 2;
}

.cover1 {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 3;
    background-color: transparent;
    width: 100vw;
    height: 100vh;
}

.cover3 {
    position: fixed;
    width: 80vw;
    height: 60vw;
    z-index: 4;
    background-color: #666;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    border-radius: 6px;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    padding: 8vw 0;
    box-sizing: border-box;
}

.cover4 {
    position: fixed;
    width: 80vw;
    height: 60vw;
    z-index: 4;
    background-color: #666;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    border-radius: 6px;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    padding: 12vw 0;
    box-sizing: border-box;
}

.evaluation {
    background: #777;
    color: #ffbf20;
    width: 86%;
    margin: 0 auto;
}

.wk {
    padding: 10px 40px;
}

.sjyh {
    margin-top: 10px;
    border-top: 1px solid #999;
}

.sjyh,.sjfk {
    width: 100%;
    box-sizing: border-box;
    border-bottom: 1px solid #999;
    padding: 10px 0;
}

.sjyh-title {
    width: 100%;
    box-sizing: border-box;
    height: 20px;
    line-height: 20px;
}

.sjfk-title {
    float: left;
}

.sjfk-realPrice {
    float: right;
}

.sjyh-title text,.sjfk-title text {
    font-size: 16px;
    color: #999;
}

.sjfk-realPrice text {
    font-size: 20px;
    color: #ffbf20;
}

.sjyh-content {
    width: 100%;
    box-sizing: border-box;
    height: 30px;
    line-height: 30px;
    color: #999;
    font-size: 14px;
}

.sjyh-coupon {
    float: left;
}

.sjyh-derateMoney {
    float: right;
}