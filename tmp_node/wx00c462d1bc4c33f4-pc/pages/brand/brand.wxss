.brandDetailBox {
    width: 94%;
    background: #666;
    display: flex;
    margin: 24px auto;
    border-radius: 6px;
    height: 100px;
}

.logoImg {
    box-shadow: 2px 2px 1px #ffbf20;
    border-radius: 100%;
    width: 68px;
    height: 68px;
    margin: 15px 16px;
}

.storeInfo {
    margin: auto 0;
}

.storeName {
    font-size: 18px;
    color: #fff;
}

.storeTel,.storeAddress {
    font-size: 12px;
    color: #999;
}

.brandSlideBox {
    width: 90vw;
    margin: 0 auto;
}

.brandSlide {
    height: 45vw;
    width: 100%;
    display: -webkit-box;
    flex-direction: column;
}

.brandSlide_Item {
    width: 100%;
    height: 45vw;
    flex: 1;
}

.brandSlide_Item_img {
    width: 100%;
    height: 45vw;
    border-radius: 6px;
}

.brandIntroBox {
    background: #333;
    color: #ededed;
    font-size: 16px;
    border-radius: 6px;
    width: 94%;
    height: 100%;
    margin: 20px auto;
    padding: 20px 10px;
    box-sizing: border-box;
    line-height: 26px;
    font-weight: 300;
}

.brandIntro {
    padding-top: 1px;
}

.brandIntroTitle {
    color: #ccc;
    border-left: 4px #ffbf00 solid;
    padding-left: 20px;
    margin-top: 20px;
    margin-left: 30px;
    font-size: 16px;
}