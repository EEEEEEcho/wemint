.wllist {
    position: relative;
    min-height: 10rpx;
    border-left: 2rpx solid #e0e0e0;
    font-size: 28rpx;
    line-height: 40rpx;
    padding: 24rpx 0 24rpx 47rpx;
}

.wllist:first-child {
    padding-top: 0;
}

.wllist::before {
    content: "";
    position: absolute;
    left: -7rpx;
    width: 14rpx;
    height: 14rpx;
    background: #e0e0e0;
    border-radius: 50%;
    top: 32rpx;
}

.active::before {
    left: -16rpx;
    background: #00B0FF;
    border: 8rpx solid #aee6ff;
}

.active {
    color: #00B0FF;
}

.wllist:first-child::before {
    top: 0;
}

.wllist:not(:last-child)::after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    width: 626rpx;
    border-bottom: 1rpx solid #e0e0e0;
}

