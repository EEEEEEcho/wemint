page {
    background: #f5f5f5;
}

.comentcont {
    margin-top: 24rpx;
    border-bottom: 1rpx solid #e0e0e0;
}

.uploadimg {
    width: 160rpx;
    margin-right: 16rpx;
    margin-bottom: 25rpx;
}

.uploadimg image {
    border: 1rpx solid #ddd;
}

.comentpic,.comenttilte {
    display: flex;
    background: #fff;
}

.comentpic {
    padding: 0 24rpx;
}

.comenttilte {
    background: #fff;
    height: 96rpx;
}

.comtiltepic {
    width: 95rpx;
    overflow: hidden;
    margin-right: 15rpx;
    border: 1rpx solid #e0e0e0;
}

.comtiltepic image {
    width: 95rpx;
    height: 95rpx;
}

.comtrightop {
    font-size: 32rpx;
    line-height: 48rpx;
}

.comtrightcout {
    color: #FF9800;
    line-height: 48rpx;
}

.comtrightcout image {
    width: 44rpx;
    height: 40rpx;
}

.comenttext {
    padding: 24rpx;
    font-size: 28rpx;
    background: #f9f9f9;
}

.comenttext .txtarea {
    height: 180rpx;
    width: 702rpx;
    background: #f9f9f9;
    line-height: 44rpx;
    padding: 0;
}

.comentstpic {
    padding: 24rpx 24rpx 15rpx 24rpx;
    background: #fff;
    font-size: 32rpx;
}

.comenttiltetop {
    padding: 24rpx;
    background: #fff;
}

.icon__star {
    width: 45rpx;
    height: 41rpx;
    overflow: hidden;
    color: #ff9800;
    margin-right: 23rpx;
}

.icon-color {
    color: #e0e0e0;
}

.comment-btn {
    padding: 48rpx 24rpx 24rpx 24rpx;
}

.comment-btn button {
    height: 88rpx;
    line-height: 88rpx;
    margin-bottom: 24rpx;
    font-size: 36rpx;
}

.comment-btn button::after {
    border: 0;
}

button.btn-confirm {
    background: #ff4820;
    color: #fff;
}

button.btn-confirm:hover {
    background: #ff1f00;
}