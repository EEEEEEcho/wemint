page {
    background: #f5f5f5;
}

.addresslist {
    background: #fff;
    margin-top: 24rpx;
    position: relative;
}

.addressname,.addresscont {
    display: flex;
    color: #212121;
}

.addressmor {
    padding: 24rpx 0;
}

.addressname {
    padding: 24rpx 0rpx 8rpx 0rpx;
}

.addressnamel,.addressnamer,.addressmorl {
    width: 350rpx;
    line-height: 48rpx;
    font-size: 32rpx;
    color: #212121;
}

.addressnamer {
    text-align: right;
}

.addresscont {
    border-bottom: 1rpx solid #dddddd;
    padding-bottom: 24rpx;
    font-size: 28rpx;
    line-height: 36rpx;
    color: #747474;
}

.addressmorr image {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
}

.addressmorr {
    text-align: right;
    float: right;
}

.addressnamel {
    float: left;
}

.xinzheng {
    margin-top: 20rpx;
}

.xinzheng button,.xinzheng button::after {
    border: none;
}

.xinzheng button {
    position: fixed;
    bottom: 0;
    left: 0;
    background: linear-gradient(to right,#fe5722 0%,#ff191b 100%);
    color: #fff;
    width: 100%;
    line-height: 48rpx;
    font-size: 36rpx;
    padding: 24rpx;
    border: 1rpx #fe5722 solid;
    border-radius: 0;
}

.btmbg {
    position: fixed;
    height: 100%;
    width: 100%;
    background: #000;
    zoom: 1;
    top: 0;
    left: 0;
    opacity: 0.3;
}

.tanchu {
    position: fixed;
    top: 310rpx;
    z-index: 2;
    width: 620rpx;
    left: 60rpx;
    border-radius: 20rpx;
    background: #fff;
}

.queshac {
    display: flex;
    border-top: 1rpx solid #ddd;
}

.queshac button {
    width: 50%;
    background: #dddddd;
}

.quedsccon {
    padding: 50rpx 40rpx;
}

.queshac button::after {
    display: none;
}

.queshac button.queding {
    background: #fff;
}

.addressmorl text {
    float: left;
    color: #212121;
    font-size: 28rpx;
    line-height: 40rpx;
    padding-top: 8rpx;
    padding-left: 16rpx;
}

.addressmorl text.active {
    color: #ff5722;
}

.addressmorl radio {
    float: left;
}

.addressmorr image,.addressmorr text {
    margin-top: 10rpx;
    float: left;
}

.addressmorr image {
    margin-right: 10rpx;
    margin-top: 5px;
}

.addressmor {
    overflow: hidden;
}

.right_icon {
    position: absolute;
    right: 24rpx;
    top: 60rpx;
    color: #9e9e9e;
    font-size: 22rpx;
    width: 24rpx;
    height: 24rpx;
}