.menu {
    position: fixed;
    top: 0px;
    width: 100%;
    background: #fff;
    border-bottom: #eee solid 1px;
    z-index: 100000;
    margin-bottom: 39px;
}

.top-nav {
    white-space: nowrap;
    width: 95%;
    margin: 0 auto;
}

.top-btn {
    display: inline-block;
    padding: 22rpx;
    font-size: 16px;
}

.top-hoverd-btn {
    color: #42bd56;
    font-size: 17px;
    border-bottom: #42bd56 solid 1px;
}

.container {
    height: 1100rpx;
    margin-top: 39px;
}

.img-container {
    margin: 0.1rem 0;
}

.item-group {
    display: flex;
}

.img-item {
    flex: 1;
    margin: 0.1rem;
    background: #333;
    text-align: center;
    height: 6.66rem;
    line-height: 6.66rem;
}

.img-item.empty {
    background: transparent;
}

.swiper-container {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: #000;
}

.swiper-container image {
    width: 100%;
    height: 100%;
}

action-sheet-item.highlight {
    color: #46bd3c;
}

.load-more-wrap {
    text-align: center;
    padding: 10px 20px 10px 20px;
    color: #999;
    font-size: 14px;
}

.gif-loading {
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    animation: weuiLoading 1s steps(12,end) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}

.loading-text {
    display: inline-block;
    vertical-align: middle;
    margin-left: 6px;
}