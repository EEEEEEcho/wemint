.tabbar {
    display: flex;
    background-color: #fff;
    border-top: 1px solid #f5f5f5;
    height: 100rpx;
}

.tabbar__item {
    flex: 1;
    line-height: 1;
    flex-direction: column;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
}

.tabbar__icon image {
    width: 40rpx;
    height: 40rpx;
}

.tabbar__label {
    font-size: 22rpx;
    color: #292828;
    margin-top: 10rpx;
}

.fixed {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
}