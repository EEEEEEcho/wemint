.swiper-box {
    padding: 0;
    text-align: center;
}

.swiper-box swiper {
    height: 350rpx;
}

.slide-image {
    width: 92%;
    height: 350rpx;
    border-radius: 24rpx;
}

.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal {
    margin-bottom: 0rpx;
}

.swiper-box .wx-swiper-dot {
    width: 10px;
    display: inline-flex;
    height: 6px;
    justify-content: space-between;
}

.swiper-box .wx-swiper-dot::before {
    content: '';
    flex-grow: 1;
    background: #999;
    border-radius: 20px;
}

.swiper-box .wx-swiper-dot-active {
    width: 40rpx;
}

.swiper-box .wx-swiper-dot-active::before {
    background: #fa5c55;
}

.itembox image {
    width: 750rpx;
    height: 375rpx;
}