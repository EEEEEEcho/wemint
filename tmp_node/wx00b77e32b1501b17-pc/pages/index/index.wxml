<view class="page">
    <view class="page-bd">
        <swiper autoplay="{{autoplay}}" circular="true" duration="{{duration}}" indicatorActiveColor="#f8584f" indicatorColor="rgba(255,255,255,.5)" indicatorDots="{{indicatorDots}}" interval="{{interval}}" style="height:600rpx;">
            <swiper-item wx:for="{{imgUrls}}" wx:key="item">
                <image src="{{item}}" style="width:750rpx; height:600rpx;"></image>
            </swiper-item>
        </swiper>
        <navigator style="width: 90%;margin-left: 5%;margin-top: 60rpx;margin-bottom: 60rpx;" url="/pages/shop/shop">
            <button class="weui-btn" type="warn">前往购买</button>
        </navigator>
        <view class="weui-panel">
            <view class="weui-panel__bd">
                <view class="weui-cells weui-cells_after-title">
                    <navigator class="weui-cell weui-cell_access" hoverClass="weui-cell_active" url="/pages/myorders/myorders">
                        <view class="weui-cell__hd">
                            <image src="/image/tabbar_icon03_hl.png" style="margin-right: 10px;vertical-align: middle;width:30px; height: 30px;"></image>
                        </view>
                        <view class="weui-cell__bd">我的订单</view>
                        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                    </navigator>
                    <navigator class="weui-cell weui-cell_access" hoverClass="weui-cell_active" url="/pages/addAddr/addAddr">
                        <view class="weui-cell__hd">
                            <image src="/image/tabbar_icon04_hl.png" style="margin-right: 10px;vertical-align: middle;width:30px; height: 30px;"></image>
                        </view>
                        <view class="weui-cell__bd">我的资料</view>
                        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                    </navigator>
                </view>
            </view>
        </view>
    </view>
</view>
