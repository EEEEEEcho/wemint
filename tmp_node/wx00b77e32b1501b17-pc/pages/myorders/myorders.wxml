<view class="small_page">
    <view class="weui-flex flex-tbtn">
        <view bindtap="tabchang1" class="weui-flex__item {{active1?'active':''}}">
      全部
    </view>
        <view bindtap="tabchang2" class="weui-flex__item {{active2?'active':''}}">
      待付款
    </view>
        <view bindtap="tabchang4" class="weui-flex__item {{active4?'active':''}}">
      待消费
    </view>
        <view bindtap="tabchang5" class="weui-flex__item {{active5?'active':''}}">
      已完成
    </view>
        <view bindtap="tabchang6" class="weui-flex__item {{active6?'active':''}}">
      退款
    </view>
    </view>
    <view class="orders-box">
        <view class="weui-cells" wx:for="{{OrderList}}">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <text class="title-bd">{{item.Seller}}</text>
                </view>
                <view class="weui-cell__ft">
                    <text class="text-red fs24">{{item.StatusStr}}</text>
                </view>
            </view>
            <view bindtap="onRedirectToOrderInfo" class="pro-box" id="{{item.order_id}}" wx:for="{{item.OrderDetails}}">
                <view class="weui-cell pro-cell">
                    <view class="weui-cell__hd">
                        <image class="proimg" src="{{item.goods_img}}"></image>
                    </view>
                    <view class="weui-cell__bd">
                        <view class="pro-title">
              {{item.goods_name}}
            </view>
                        <view class="pro-rules fs22 text-muted">{{item.spec}}</view>
                    </view>
                    <view class="weui-cell__ft">
                        <view class="pro-money">￥{{item.price}}</view>
                        <view class="pro-sum fs22 text-muted">×{{item.quantity}}</view>
                    </view>
                </view>
            </view>
            <view class="weui-cell" id="{{item.ID}}">
                <view class="weui-cell__bd">
                    <text class="fs24">共{{item.Quantity}}件商品 合计</text>
                    <text class="pro-money">￥{{item.PayMoney}}</text>
                </view>
                <view class="weui-cell__ft">
                    <block wx:if="{{item.StatusStr=='待付款'}}">
                        <text bindtap="onCancelOrder" class="link-btn" id="{{item.ID}}">取消订单</text>
                        <text bindtap="onGoPay" class="link-btn reds" id="{{item.ID}}">付款</text>
                    </block>
                    <block wx:elif="{{item.StatusStr=='待消费'}}">
                        <text bindtap="onApplyRefund" class="link-btn reds" id="{{item.ID}}" wx:if="{{item.IsRefund==1}}">申请退款</text>
                        <text bindtap="onReceiveOrder" class="link-btn reds" id="{{item.ID}}">确认消费</text>
                    </block>
                    <text bindtap="onDeleteOrder" class="link-btn reds" id="{{item.ID}}" wx:elif="{{item.StatusStr=='已完成'}}">删除订单</text>
                    <text bindtap="onDeleteOrder" class="link-btn reds" id="{{item.ID}}" wx:elif="{{item.StatusStr=='已取消'}}">删除订单</text>
                    <text bindtap="onDeleteOrder" class="link-btn reds" id="{{item.ID}}" wx:elif="{{item.StatusStr=='已退款'}}">删除订单</text>
                </view>
            </view>
        </view>
    </view>
</view>
