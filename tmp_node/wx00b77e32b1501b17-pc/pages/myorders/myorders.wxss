.flex-tbtn {
    text-align: center;
    background: #fff;
    border-top: 1px solid #eaeaea;
}

.flex-tbtn .weui-flex__item {
    font-size: 26rpx;
    color: #666;
    font-weight: 500;
    padding: 30rpx 0;
}

.flex-tbtn .weui-flex__item.active {
    font-weight: bold;
    position: relative;
}

.flex-tbtn .weui-flex__item.active::before {
    content: "";
    width: 40rpx;
    height: 3px;
    border-radius: 5px;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    position: absolute;
    background: #f8584f;
}

.flex-tbtn .weui-flex__item.active::after {
    content: "";
    display: none;
    bottom: -14rpx;
    left: 50%;
    position: absolute;
    border-style: solid;
    border-width: 16rpx 16rpx 14rpx 16rpx;
    border-color: transparent transparent #fff transparent;
    transform: rotate(360deg) translateX(-50%);
    z-index: 2;
}

.orders-box {
    position: absolute;
    top: 115rpx;
    bottom: 0;
    left: 0;
    right: 0;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
}

.orders-box .weui-cells:first-child {
    margin-top: 0;
}

.icon_hd {
    background: #f8a64f;
    color: #fff;
    display: block;
    padding: 2rpx 6rpx;
    border-radius: 6rpx;
    font-size: 20rpx;
    margin-right: 18rpx;
}

.icon_hd.bgred {
    background: #f8584f;
}

.title-bd {
    font-size: 26rpx;
    color: #323232;
}

.orders-box .pro-cell {
    -webkit-box-align: inherit;
    align-items: inherit;
}

.pro-box {
    position: relative;
}

.pro-box::before {
    content: " ";
    position: absolute;
    left: 15px;
    top: 0;
    right: 0;
    height: 1px;
    border-bottom: 1rpx solid #e6e6e6;
    color: #e6e6e6;
    transform-origin: 100% 0;
    transform: scaleY(0.5);
}

.pro-box .pro-cell::before {
    content: none;
}

.orders-box .pro-cell .weui-cell__ft {
    padding-left: 20rpx;
}

.proimg {
    width: 120rpx;
    height: 120rpx;
    margin-right: 18rpx;
}

.pro-title {
    font-size: 26rpx;
    height: 74rpx;
    overflow: hidden;
    margin-bottom: 20rpx;
}

.pro-money {
    font-size: 28rpx;
    color: #3d3d3d;
    font-weight: 600;
}

.link-btn {
    border: 1px solid #e0e0e0;
    display: inline-block;
    padding: 8rpx 28rpx;
    margin-left: 18rpx;
    border-radius: 8rpx;
    color: #323232;
    font-size: 24rpx;
}

.link-btn.reds {
    border-color: #f8584f;
    color: #f8584f;
}

.wulimodel {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9;
}

.close-box {
    position: absolute;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,0.6);
}

.model-box {
    position: absolute;
    bottom: 0;
    width: 100%;
    background: #fff;
}

.model-title {
    margin-top: 0;
    font-size: 26rpx;
}

.model-title .weui-cell__ft {
    border-left: 1px solid #eaeaea;
}

.model-title .close-icon {
    font-size: 36rpx;
    color: #323232;
    padding-left: 20rpx;
    line-height: 1em;
}

.model-wuli {
    margin-top: 0;
}

.model-wuli .weui-cell {
    -webkit-box-align: inherit;
    align-items: inherit;
}

.model-box .weui-cells::before {
    border-color: #e6e6e6;
}

.model-wuli .weui-cell .weui-cell__hd {
    position: relative;
}

.model-wuli .weui-cell .weui-cell__hd .num-pro {
    position: absolute;
    bottom: 0;
    width: 100%;
    background: rgba(0,0,0,0.6);
    color: #fff;
    text-align: center;
    font-size: 18rpx;
}

.model-wuli .weui-cell__hd {
    margin-right: 18rpx;
}

.fc-blue {
    color: #3cb45e;
    font-weight: bold;
}

.wuli-cells {
    margin-top: 0;
    padding: 0 30rpx;
}

.wuli-cells::before {
    left: 15px;
}

.wuli-cells .wuimg {
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
}

.wuli-cells .weui-cell {
    -webkit-box-align: inherit;
    align-items: inherit;
}

.wuli-cells .weui-flex {
    -webkit-box-align: center;
    align-items: center;
    padding-bottom: 50rpx;
    font-size: 22rpx;
    color: #949494;
}

.weui-flex__time {
    padding-right: 30rpx;
    text-align: center;
    position: relative;
}

.weui-flex__time span.icons {
    position: absolute;
    top: 8rpx;
    left: -20rpx;
    background: #949494;
    width: 7px;
    height: 7px;
    border-radius: 50%;
    display: block;
}

.weui-flex__time::after {
    position: absolute;
    content: "";
    height: 40rpx;
    border-right: 1px solid #d2d2d2;
    top: 80rpx;
}

.wuli-cells .weui-flex:first-child {
    font-size: 24rpx;
    color: #323232;
}

.wuli-cells .weui-flex:first-child span.icons {
    background: #3cb45e;
}

.wuli-cells .weui-flex:last-child .weui-flex__time::after {
    content: none;
}

.wuli-cells .weui-flex:last-child {
    padding-bottom: 0;
}

.flex-wuli {
    height: 280rpx;
    -webkit-overflow-scrolling: touch;
    overflow: auto;
}

.fcblack {
    padding-bottom: 8rpx;
}

.fs24 {
    font-size: 24rpx;
}