.icon_hd {
    background: #f8a64f;
    color: #fff;
    display: block;
    padding: 2rpx 6rpx;
    border-radius: 6rpx;
    font-size: 20rpx;
    margin-right: 18rpx;
}

.icon_hd.bgred {
    background: #f8584f;
}

.title-bd {
    font-size: 26rpx;
    color: #323232;
    font-weight: 600;
}

.pro-box .pro-cell {
    -webkit-box-align: inherit;
    align-items: inherit;
}

.pro-box {
    position: relative;
}

.pro-box::before {
    content: " ";
    position: absolute;
    left: 15px;
    top: 0;
    right: 0;
    height: 1px;
    border-bottom: 1rpx solid #e6e6e6;
    color: #e6e6e6;
    transform-origin: 100% 0;
    transform: scaleY(0.5);
}

.pro-box .pro-cell::before {
    content: none;
}

.orders-box .pro-cell .weui-cell__ft {
    padding-left: 20rpx;
}

.proimg {
    width: 150rpx;
    height: 150rpx;
    margin-right: 18rpx;
}

.pro-title {
    font-size: 26rpx;
    height: 74rpx;
    line-height: 1.4;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    margin-bottom: 20rpx;
}

.pro-money {
    font-size: 28rpx;
    color: #3d3d3d;
    font-weight: 600;
}

.link-btn {
    border: 1px solid #e0e0e0;
    display: inline-block;
    padding: 4rpx 28rpx;
    margin-left: 18rpx;
    border-radius: 8rpx;
    color: #323232;
}

.link-btn.reds {
    border-color: #f8584f;
    color: #f8584f;
}

.lei-cells .weui-cell {
    font-size: 26rpx;
}

.lei-cells .weui-cell .weui-cell__bd,.weui-cells_form .weui-cell .weui-label {
    font-weight: 400;
    color: #333;
}

.lei-cells .weui-cell .weui-cell__bd text {
    font-weight: 500;
}

.weui-cells_form .weui-cell {
    font-size: 26rpx;
}

.weui-cells_form .weui-cell .weui-input {
    font-size: 26rpx;
}

.foot-btn {
    position: fixed;
    bottom: 0;
    background: #f8584f;
    color: #fff;
    z-index: 2;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    padding: 24rpx 0;
}

.foot-btn~view {
    padding-bottom: 120rpx;
}

.weui-uploader__input-box {
    width: 150rpx;
    height: 150rpx;
    margin-top: 12rpx;
}

.imgup {
    width: 150rpx;
    height: 150rpx;
}

.weui-uploader__file {
    position: relative;
    padding-top: 12rpx;
}

.weui-uploader__file .dele-btn {
    color: #fff;
    background: #f43530;
    position: absolute;
    top: 0rpx;
    right: -6rpx;
    height: 26rpx;
    width: 26rpx;
    border-radius: 50%;
    border: 1px solid #f43530;
    line-height: 0.9em;
    text-align: center;
}

.checkbox_label {
    display: flex;
    height: 150rpx;
    align-items: center;
}

.picker {
    height: 40rpx;
    min-width: 100rpx;
    display: inline-block;
}

picker {
    display: inline-block;
}