<view class="margintop5"></view>
<form bindsubmit="formSubmit">
    <view class="section" style="background-color: #fff;">
        <textarea autoHeight bindblur="addContent" maxlength="500" name="textarea" placeholder="这一刻的想法..." style="margin-top:20rpx;margin-left:20rpx;width:680rpx;"></textarea>
    </view>
    <view style="padding-top:80rpx;float:left;padding-bottom:0;background-color: #fff;width:100%;" wx:if="{{tp==0}}">
        <view class="page-body" style="float:left;">
            <view class="page-section">
                <view class="weui-cells" style="float:left;width:100%;">
                    <view class="weui-cell">
                        <view class="weui-cell__bd">
                            <view class="weui-uploader">
                                <view class="weui-uploader__hd">
                                    <view class="weui-uploader__title">已选择的照片</view>
                                    <view class="weui-uploader__info">{{imageList.length}}/{{count[countIndex]}}</view>
                                </view>
                                <view class="weui-uploader__bd">
                                    <view class="weui-uploader__files">
                                        <view class="weui-uploader__file" wx:for="{{imageList}}" wx:for-item="image">
                                            <image bindtap="previewImage" class="weui-uploader__img" data-src="{{image}}" src="{{image}}"></image>
                                        </view>
                                        <view class="weui-uploader__input-box" wx:if="{{imageList.length<9}}">
                                            <view bindtap="chooseImage" class="weui-uploader__input"></view>
                                        </view>
                                    </view>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view style="padding-top:80rpx;background-color: #fff;width:100%;" wx:if="{{tp==1}}">
        <view class="section">
            <video controls="false" id="myVideo" src="{{vioUrl}}"></video>
        </view>
    </view>
    <view class="page-body" style="float:left;width:100%;border-bottom:1rpx solid #ccc;">
        <view class="common-list">
            <view class="item">
                <view bindtap="getAddress" class="inner with-check">
                    <view class="checker">
                        <image class="icon" src="../../../image/huodong_position@2x.png"></image>
                    </view>
                    <view class="content2">
                        <text class="title2">{{roomname==''?'所在位置':roomname}} </text>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="page-body" style="float:left;width:100%;">
        <view class="loginBtnView" style="padding-top:50rpx;padding-bottom: 20rpx;">
            <button bindtap="primary" class="loginBtn">发送</button>
        </view>
    </view>
</form>
