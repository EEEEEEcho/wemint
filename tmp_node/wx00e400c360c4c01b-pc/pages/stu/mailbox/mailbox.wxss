.mbox {
    padding-top: 10rpx;
}

.mbox:active {
    background: #eee;
}

.mtitle {
    font-size: 50rpx;
}

.mcontent {
    font-size: 30rpx;
    color: #6C6C6C;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-top: 10rpx;
}

.mcontent:before {
    content: '>';
    float: right;
    color: #aaa;
}

.mtime {
    font-size: 30rpx;
    color: #6C6C6C;
    border-bottom: 1px solid #efefef;
    padding-top: 10rpx;
    height: 50rpx;
}