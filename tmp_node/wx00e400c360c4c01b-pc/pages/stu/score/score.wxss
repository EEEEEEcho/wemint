.payView {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.scatitle {
    font-size: 50rpx;
    font-weight: 700;
    background-color: #fff;
    padding-top: 30rpx;
}

.scatext {
    font-size: 35rpx;
    font-weight: 500;
    background-color: #fff;
    padding-top: 20rpx;
    padding-bottom: 10rpx;
}

.record {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 20rpx;
}

.record label {
    font-size: 40rpx;
    font-weight: 600;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.currContent {
    display: flex;
    height: 110rpx;
    padding-top: 10rpx;
    border-bottom: 1px solid #efefef;
}

.currContent_list1 {
    width: 80%;
}

.currContent_list1 .lable {
    font-size: 35rpx;
    color: #3C3C3C;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.currContent_list1 .text {
    font-size: 30rpx;
    color: #9D9D9D;
    padding-top: 15rpx;
}

.currContent_list2 {
    width: 20%;
    padding-top: 20rpx;
    display: flex;
    justify-content: center;
}