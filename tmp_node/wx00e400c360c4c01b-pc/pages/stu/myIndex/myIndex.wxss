.section {
    padding: 0;
    color: #2e2e2e;
    font-size: 40rpx;
}

.section .line {
    margin-left: 30rpx;
    padding-right: 30rpx;
    line-height: 3;
    border-bottom: 1px solid #efefef;
}

.section .line:before {
    content: '>';
    float: right;
    color: #aaa;
    margin-left: 20rpx;
}

.section .line:active {
    background: #eee;
}

.section .line .tl {
    float: right;
    color: #aaa;
}

.avatar {
    display: block;
    margin: 0 auto;
    width: 90rpx;
    height: 90rpx;
    margin-top: 20rpx;
    border-radius: 50%;
    border: 2px solid #fee767;
}