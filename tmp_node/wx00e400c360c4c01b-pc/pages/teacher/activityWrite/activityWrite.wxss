.inputText {
    display: flex;
    flex: block;
    float: left;
    text-align: left;
    margin-top: 11px;
    padding-left: 20rpx;
    font-size: 40rpx;
    width: 98%;
    height: 80rpx;
    border-bottom: 1px solid #efefef;
}

.line {
    padding-right: 30rpx;
    line-height: 3;
    border-bottom: 1px solid #efefef;
}

.line_time {
    padding-left: 20rpx;
}

.line:before {
    content: '>';
    float: right;
    color: #aaa;
    margin-left: 20rpx;
}

.line:active {
    background: #eee;
}

.line .tl {
    float: right;
    color: #aaa;
}

.tea {
    font-size: 30rpx;
}

.flexRow {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 100%;
    padding-left: 20rpx;
}

.but_img {
    width: 120rpx;
    height: 120rpx;
    margin: 30rpx;
    position: relative;
    border: 1px solid gainsboro;
    border-radius: 50%;
    margin-bottom: 50rpx;
}

.but_img image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.but_img:nth-child(1) {
    order: 10;
}

.but_img_del {
    position: absolute;
    left: 100rpx;
    top: -20rpx;
}

.weui-uploader__input-box {
    float: left;
    position: relative;
    margin-right: 9px;
    margin-bottom: 9px;
    width: 77px;
    height: 77px;
    border: 1px solid #D9D9D9;
}

.weui-uploader__input-box:before,.weui-uploader__input-box:after {
    content: " ";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #D9D9D9;
}