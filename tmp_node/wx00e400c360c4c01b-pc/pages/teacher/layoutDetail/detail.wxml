<import src="wxSearch/wxSearch.wxml"></import>
<view class="margintop5"></view>
<view class="search-bar">
    <view class="search-wrap">
        <input bindblur="wxSearchBlur" bindfocus="wxSerchFocus" bindinput="wxSearchInput" class="search-input" focus="{{searchKeyword}}" name="searchKeyword" placeholder="请输入本节课题" type="text" value="{{theme_name}}"></input>
    </view>
</view>
<template is="wxSearch" data="{{wxSearchData:wxSearchData}}"></template>
<view class="search-bar">
    <view class="search-wrap">
        <input bindinput="curriculum_form" class="search-input" focus="{{curriculum_form}}" name="curriculum_form" placeholder="课程形式" type="text" value=""></input>
    </view>
</view>
<view>
    <view class="margintop20"></view>
    <scroll-view scrollY style="height: {{scrollHeight}}rpx;">
        <view class="separate"></view>
        <view class="record">
            <view>
                <text class="placeholder-class">————</text>
                <label>本班学生</label>
                <text class="placeholder-class">————</text>
            </view>
        </view>
        <view class="list">
            <view class="section">
                <view wx:for="{{carts}}" wx:for-index="idx" wx:key="car">
                    <view class="cart_container" wx:if="{{item.cpcType==0}}">
                        <image bindtap="switchSelect" class="item-select" data-id="{{idx}}" data-index="{{idx}}" src="{{item.isSelect?'../../../image/choose@2x.png':'../../../image/choose_no@2x.png'}}"></image>
                        <image bindtap="switchSelect" class="item-image" data-id="{{idx}}" data-index="{{idx}}" src="{{item.icon}}"></image>
                        <view class="column">
                            <text bindtap="switchSelect" class="column_title" data-id="{{idx}}" data-index="{{idx}}">{{item.cpc_name}}
            <text style="color:#f8ac59" wx:if="{{item.is_audition==1}}">(试听)</text>
                            </text>
                        </view>
                        <view bindtap="switchSelect" class="column_bir" data-id="{{idx}}" data-index="{{idx}}">{{item.birthday}}</view>
                        <view class="column_stepper" style="width:30%;" wx:if="{{item.is_audition!=1}}">
                            <view class="stepper">
                                <text bindtap="bindMinus" class="{{item.minusStatus}}" data-componentid="{{idx}}">-</text>
                                <input bindchange="bindManual" data-componentid="{{idx}}" type="number" value="{{item.count}}"></input>
                                <text bindtap="bindPlus" class="normal" data-componentid="{{idx}}">+</text>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view class="margintop20"></view>
        <view class="record">
            <view>
                <text class="placeholder-class">————</text>
                <label>其它班学生</label>
                <text class="placeholder-class">————</text>
            </view>
        </view>
        <view class="list">
            <view class="section">
                <view wx:for="{{carts}}" wx:for-index="idx" wx:key="car2">
                    <view class="cart_container" wx:if="{{item.cpcType==1}}">
                        <image bindtap="switchSelect" class="item-select" data-id="{{idx}}" data-index="{{idx}}" src="{{item.isSelect?'../../../image/choose@2x.png':'../../../image/choose_no@2x.png'}}"></image>
                        <image bindtap="switchSelect" class="item-image" data-id="{{idx}}" data-index="{{idx}}" src="{{item.icon}}"></image>
                        <view class="column">
                            <text bindtap="switchSelect" class="column_title" data-id="{{idx}}" data-index="{{idx}}">{{item.cpc_name}}</text>
                        </view>
                        <view bindtap="switchSelect" class="column_bir" data-id="{{idx}}" data-index="{{idx}}">{{item.birthday}}</view>
                        <view class="column_stepper" style="width:30%;">
                            <view class="stepper">
                                <text bindtap="bindMinus" class="{{item.minusStatus}}" data-componentid="{{idx}}">-</text>
                                <input bindchange="bindManual" data-componentid="{{idx}}" type="number" value="{{item.count}}"></input>
                                <text bindtap="bindPlus" class="normal" data-componentid="{{idx}}">+</text>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <form reportSubmit bindsubmit="searchStu" name="pushMsgFm">
            <button class="formBtn" formType="submit">
                <view class="loginBtnView">
                    <image src="../../../image/seach@2x.png"></image>
                </view>
            </button>
        </form>
    </scroll-view>
</view>
<view class="bottom_total">
    <view class="bottom_line"></view>
    <form reportSubmit bindsubmit="showModal" name="pushMsgFm">
        <view class="row">
            <image bindtap="allSelect" class="item-allselect" src="{{isAllSelect?'../../../image/choose@2x.png':'../../../image/choose_no@2x.png'}}"></image>
            <text bindtap="allSelect" class="small_text">全选</text>
            <button class="button-red" formType="submit">消课</button>
        </view>
    </form>
</view>
<view bindtap="hideModal" class="commodity_screen" wx:if="{{showModalStatus}}"></view>
<view animation="{{animationData}}" catchtouchmove="true" class="commodity_attr_box" wx:if="{{showModalStatus}}">
    <textarea autoFocus bindinput="addContent" focus="{{focusContent}}" maxlength="500" placeholder="这一节课的情况..." style="margin-top:20rpx;margin-left:20rpx;width:680rpx;" value="{{content}}"></textarea>
    <view class="flexRow">
        <view bindtap="chooseImg" class="but_img " wx:if="{{true}}">
            <image src="../../../image/add@2x.png"></image>
        </view>
        <view class="but_img" wx:for="{{imgs}}" wx:key="img">
            <image bindtap="previewImg" data-index="{{index}}" mode="aspectFill" src="{{item}}"></image>
            <view class="but_img_del">
                <icon bindtap="deleteImg" color="red" data-index="{{index}}" size="15" type="cancel"></icon>
            </view>
        </view>
    </view>
    <view style="width:100%;">
        <view class="common-list">
            <view class="item">
                <view bindtap="getAddress" class="inner with-check">
                    <view class="checker">
                        <image class="icon" src="../../../image/huodong_position@2x.png"></image>
                    </view>
                    <view class="content2">
                        <text class="title2">{{roomname==''?'所在位置':roomname}} </text>
                    </view>
                </view>
            </view>
            <view class="common-list">
                <view class="header">
                    <view>
                        <image bindtap="claSelect" class="item-select" data-id="jzq" data-index="jzq" src="{{isCheckF?'../../../image/choose@2x.png':'../../../image/choose_no@2x.png'}}"></image>
                    </view>
                    <view bindtap="claSelect" class="item-select_text">分享到班级圈</view>
                </view>
            </view>
            <view class="common-list">
                <view class="header">
                    <view>
                        <image bindtap="claSelect2" class="item-select" data-id="jzq" data-index="jzq" src="{{isCheckF2?'../../../image/choose@2x.png':'../../../image/choose_no@2x.png'}}"></image>
                    </view>
                    <view bindtap="claSelect2" class="item-select_text">仅老师可见</view>
                    <view style="padding-left:30rpx;">
                        <image bindtap="claSelect3" class="item-select" data-id="jzq" data-index="jzq" src="{{isCheckF3?'../../../image/choose@2x.png':'../../../image/choose_no@2x.png'}}"></image>
                    </view>
                    <view bindtap="claSelect3" class="item-select_text">所有人可见</view>
                </view>
            </view>
        </view>
        <form reportSubmit bindsubmit="primary" name="pushMsgFm">
            <button class="address-add" formType="submit">保   存</button>
        </form>
    </view>
</view>
