<view bindtap="actionSheetChange" style="background-image: url('{{bpImage}}');background-size:100%; background-repeat:no-repeat;width:100%;height:400rpx;">
    <image class="avatar" src="{{teacher.icon}}"></image>
    <text class="nickname">{{teacher.name}}</text>
</view>
<view style="width:100%;height:40rpx"></view>
<view class="loading" hidden="{{!pullDownRefresh}}">正在载入...</view>
<view class="wnr" wx:if="{{circleList.length==0}}">
    <image src="http://p7mq9gjza.bkt.clouddn.com/non.png" style="width:276px; height:319px;"></image>
</view>
<block wx:else>
    <view bindscrolltolower="searchScrollLower" wx:for="{{circleList}}" wx:for-index="idx" wx:key="circle">
        <view class="friend_list">
            <image class="avatar_friend" src="{{item.cpc.icon}}" wx:if="{{item.type==0}}"></image>
            <image class="avatar_friend" src="{{item.teacher.icon}}" wx:if="{{item.type==1}}"></image>
            <view class="list_right">
                <view class="friend_name" wx:if="{{item.type==0}}">{{item.cpc.name}}</view>
                <view class="friend_name" wx:else>{{item.teacher.name}}</view>
                <view class="friend_mood">{{item.content}}</view>
                <view class="friend_img">
                    <view class="weui-uploader__file">
                        <image bindtap="previewImage" class="weui-uploader__img" data-index="{{imgidx}}" data-src="{{item.img_path}}" src="{{imgItem}}" wx:if="{{item.isUrl==0}}" wx:for="{{item.img_path}}" wx:for-index="imgidx" wx:for-item="imgItem" wx:key="image"></image>
                        <view class="but_img" wx:if="{{item.isUrl==1}}">
                            <image class="weui-uploader__imgVio" src="{{item.img_path}}?vframe/jpg/offset/1/w/480/h/360"></image>
                            <view bindtap="showModal" class="but_img_del" data-src="{{item.img_path}}">
                                <image src="../../../image/pengyouquan_play@2x.png"></image>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="clear" wx:if="{{item.roomname!=null&&item.roomname!=''}}"></view>
                <view bindtap="openMap" class="publist_time" data-latitude="{{item.latitude}}" data-longitude="{{item.longitude}}" style="float:left;margin-bottom:20rpx;font-size:28rpx;color:#426ab3;width:100%;" wx:if="{{item.roomname!=null&&item.roomname!=''}}">{{item.roomname}}</view>
                <view class="clear"></view>
                <view class="publist_time" style="float:left;margin-top:8rpx;margin-bottom:20rpx;font-size:24rpx;color:#c2c2c2;width:60%;">{{item.createtime}}</view>
                <view bindtap="delCpc" data-id="{{item.id}}" data-index="{{idx}}" style="float:left;color:#4a86e8" wx:if="{{item.teacher.id==teacher.id}}"> 删除 </view>
                <view style="float:left;">
                    <image bindtap="selLike" class="item-allselect" data-circle_id="{{item.id}}" data-index="{{idx}}" data-is_like="{{item.is_like}}" src="{{item.is_like==1?'../../../image/dianzan_blue@2x.png':'../../../image/dianzan@2x.png'}}"></image>
                </view>
                <view style="float:left;">
                    <image bindtap="bindReply" class="item-allselect" data-circle_id="{{item.id}}" data-index="{{idx}}" data-parent_id="" data-parent_user="" src="../../../image/pinglun@2x.png"></image>
                </view>
            </view>
        </view>
        <view class="list_right_comment" wx:if="{{item.cpccList.length>0||item.likeNameStr!=''}}">
            <view class="section">
                <view class="list_right_comment_fabulous" wx:if="{{item.likeNameStr!=''}}">
                    <image src="../../../image/dianzan_line@2x.png"></image>
              {{item.likeNameStr}}
            </view>
                <view bindtap="bindReply" class="list_right_comment_fabulous" data-cid="{{cpcc.id}}" data-circle_id="{{item.id}}" data-cpccIndex="{{cpccidx}}" data-index="{{idx}}" data-parent_id="{{cpcc.id}}" data-parent_name="{{cpcc.userName}}" data-parent_tid="{{cpcc.teacher_id}}" wx:for="{{item.cpccList}}" wx:for-index="cpccidx" wx:for-item="cpcc" wx:key="cpcc">{{cpcc.userName}}<lable wx:if="{{cpcc.coverUserName!=''}}">回复</lable>{{cpcc.coverUserName}}:<text>{{cpcc.content}}</text>
                </view>
            </view>
        </view>
    </view>
    <view class="loading complete" hidden="{{!searchLoadingComplete}}">已加载全部</view>
    <view class="release" wx:if="{{releaseFocus}}">
        <textarea autoHeight="true" bindblur="releaseBlur" bindinput="addContent" class="text" cursorSpacing="15" fixed="true" focus="{{releaseFocus}}" maxlength="200" placeholder="{{releaseText}}" placeholderClass="input_null" showConfirmBar="false"></textarea>
        <view bindtap="addCommentL" class="submit">发送</view>
    </view>
    <view style="width:100%;padding-bottom:50rpx"></view>
</block>
<image bindtap="actionSheetChange2" class="img-plus-style" src="../../../image/pengyouquan_fabu@2x.png"></image>
<action-sheet bindchange="actionSheetChange" hidden="{{actionSheetHidden}}">
    <action-sheet-item bindtap="bpImage">更换封面</action-sheet-item>
    <action-sheet-cancel>取消</action-sheet-cancel>
</action-sheet>
<action-sheet bindchange="actionSheetChange2" hidden="{{actionSheetHidden2}}">
    <action-sheet-item bindtap="circleImg">照片</action-sheet-item>
    <action-sheet-item bindtap="circleVio">视频</action-sheet-item>
    <action-sheet-cancel>取消</action-sheet-cancel>
</action-sheet>
<action-sheet bindchange="actionSheetChange3" hidden="{{actionSheetHidden3}}">
    <action-sheet-item bindtap="delComment">删除</action-sheet-item>
    <action-sheet-cancel>取消</action-sheet-cancel>
</action-sheet>
<view animation="{{animationData}}" bindtap="hideModal" class="commodity_attr_box" touchmove="preventD" wx:if="{{showModalStatus}}">
    <video autoplay="true" bindended="hideModal" binderror="hideModal" controls="controls" id="myVideo" showProgress="true" src="{{videoUrl}}" style="toop:0rpx;width: 100%;height: 100vh;z-index: 2000;"></video>
</view>
<action-sheet bindchange="hideModal" hidden="{{!showModalStatus}}">
    <action-sheet-cancel>关 闭</action-sheet-cancel>
</action-sheet>
