.avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    border: 1px solid #ccc;
    top: 186rpx;
    left: 550rpx;
    z-index: 8;
    float: right;
    margin-top: 200rpx;
    margin-right: 30rpx;
}

.nickname {
    color: #fff;
    font-size: 32rpx;
    line-height: 80rpx;
    display: block;
    float: right;
    font-weight: bold;
    top: 220rpx;
    right: 240rpx;
    z-index: 8;
    font: "宋体","微软雅黑";
    margin-top: 250rpx;
    margin-right: 50rpx;
}

.friend_list {
    width: 95%;
    margin: 40rpx 20rpx 0 20rpx;
    margin-right: 20rpx;
    display: -webkit-flex;
    flex-direction: row;
    min-height: 240rpx;
    font-size: 35rpx;
    font: "宋体","微软雅黑";
}

.avatar_friend {
    width: 100rpx;
    height: 100rpx;
    flex: 1;
    margin-right: 20rpx;
    border-radius: 50%;
}

.list_right {
    flex: 6;
    flex-direction: coulmn;
}

.friend_name {
    margin-bottom: 16rpx;
    font-weight: 900;
    color: #767998;
}

.friend_mood {
    margin-bottom: 16rpx;
    width: 95%;
}

.weui-uploader__file {
    float: left;
}

.weui-uploader__file video {
    width: 550rpx;
}

.weui-uploader__img {
    display: block;
    width: 160rpx;
    height: 160rpx;
    float: left;
    margin-right: 16rpx;
    margin-bottom: 16rpx;
}

.weui-uploader__imgVio {
    display: block;
    width: 480rpx;
    height: 360rpx;
    float: left;
    margin-right: 16rpx;
    margin-bottom: 16rpx;
}

.item-allselect {
    width: 40rpx;
    height: 40rpx;
    margin-left: 40rpx;
}

.list_right_comment {
    width: 80%;
    margin-left: 110rpx;
    margin-right: 20rpx;
    flex-direction: coulmn;
    background-color: #F0F0F0;
}

.list_right_comment_fabulous {
    margin-bottom: 10rpx;
    width: 100%;
    font-size: 30rpx;
    color: #4a86e8;
}

.list_right_comment_fabulous:active {
    background-color: #ccc;
}

.list_right_comment_fabulous image {
    width: 35rpx;
    height: 35rpx;
}

.list_right_comment_fabulous text {
    padding-left: 20rpx;
    color: #434343;
}

.list_right_comment_fabulous lable {
    padding-left: 5rpx;
    padding-right: 5rpx;
    color: #434343;
}

.img-plus-style {
    height: 150rpx;
    width: 150rpx;
    position: fixed;
    bottom: 10rpx;
    right: 40%;
    opacity: 0.5;
}

.img-plus-style:active {
    opacity: 1;
}

.input_null {
    color: #C9C9C9;
}

.release {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    box-sizing: border-box;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 18rpx 0 18rpx 30rpx;
    background-color: #F7F8F7;
    font-size: 28rpx;
    z-index: 999;
}

.release .text {
    width: 604rpx;
    min-height: 34rpx;
    max-height: 102rpx;
    border-width: 15rpx 20rpx;
    border-style: solid;
    border-color: #ffffff;
    line-height: 34rpx;
    font-size: 28rpx;
    background-color: #ffffff;
    border-radius: 4rpx;
}

.release .submit {
    width: 116rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    color: #66CC00;
}

.but_img {
    position: relative;
}

.but_img_del {
    position: absolute;
    left: 180rpx;
    top: 130rpx;
}

.but_img_del image {
    width: 120rpx;
    height: 120rpx;
}

.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
}

.commodity_attr_box {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background: #fff;
    padding-top: 20rpx;
}

.noscroll {
    overflow: hidden;
    position: fixed;
}