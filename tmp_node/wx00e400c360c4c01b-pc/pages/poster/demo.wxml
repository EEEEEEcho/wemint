<view class="container-box">
    <view class="img-box">
        <image bindtap="previewImg" mode="scaleToFill" src="{{imagePath}}"></image>
    </view>
    <form bindsubmit="formSubmit">
        <button bindgetuserinfo="formSubmit" class="mybtn" lang="zh_CN" openType="getUserInfo" type="primary">生成图片</button>
    </form>
</view>
<view class="mask" hidden="{{maskHidden}}"></view>
<view class="canvas-box">
    <canvas canvasId="mycanvas" style="width: 750px;height: 1344px;"></canvas>
</view>
