<view class="schoollist">
    <view class="school-list" wx:for="{{items}}" wx:for-index="imgidx" wx:key="item">
        <view class="school-list-info" index="{{index}}">
            <view class="but_img">
                <image bindtap="previewImage" class="school-list-photo" data-index="{{imgidx}}" data-src="{{item.img_path}}" src="{{item.fristImg}}"></image>
                <view bindtap="showModal" class="but_img_del" data-src="{{item.img_path}}" wx:if="{{item.isUrl==1}}">
                    <image src="../../../image/pengyouquan_play@2x.png"></image>
                </view>
            </view>
            <text class="school-list-desc">{{item.createtime}} ({{item.isUrl==0?item.img_path.length:''}})</text>
        </view>
    </view>
</view>
