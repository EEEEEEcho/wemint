@import "../../../wxParse/wxParse.wxss";

.bookSm {
    background-color: #fff;
    display: flex;
    margin-top: 5rpx;
    justify-content: center;
}

.bookSm image {
    margin-top: 20rpx;
}

.scatitle {
    display: flex;
    font-size: 15px;
    font-weight: 700;
    background-color: #fff;
    padding-top: 30rpx;
    padding-bottom: 10rpx;
}

.scatext {
    display: flex;
}

.scatext image {
    width: 30rpx;
    height: 30rpx;
}

.scatext .vtext {
    font-size: 25rpx;
    padding-left: 20rpx;
    padding-top: 8rpx;
}

.scacontent {
    padding-top: 20rpx;
    font-size: 25rpx;
    color: #9D9D9D;
    padding-bottom: 100rpx;
}

.bottom_total {
    position: fixed;
    display: flex;
    flex-direction: column;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    background: white;
}

.bottom_total .row {
    display: flex;
    flex-direction: row;
}

.bottom_total .row .leftView {
    width: 60%;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.bottom_total .row .leftView .lf {
    width: 33%;
    padding-left: 20rpx;
    padding-top: 10rpx;
}

.bottom_total .row .leftView .lf .image {
    width: 70rpx;
    height: 81rpx;
}

.button-red {
    background-color: #2CA50C;
    position: fixed;
    right: 0;
    color: white;
    text-align: center;
    display: inline-block;
    font-size: 30rpx;
    border-radius: 0rpx;
    width: 40%;
    height: 120rpx;
    line-height: 120rpx;
}

.total_money {
    padding-left: 20rpx;
    color: red;
    font-size: 40rpx;
}

.total_money_old {
    padding-left: 20rpx;
    color: #9D9D9D;
    text-decoration: line-through;
    font-size: 30rpx;
}

.total_money_con {
    padding-left: 140rpx;
    color: red;
    font-size: 30rpx;
}

.total_money_img {
    width: 120rpx;
    height: 120rpx;
}

.formBtnac {
    width: 100%;
    border-color: #fff;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.formBtnac::after {
    border: none;
}

.img-plus-style {
    height: 80rpx;
    width: 80rpx;
    position: fixed;
    bottom: 150rpx;
    right: 5%;
}

.img-plus-style:active {
    opacity: 1;
}