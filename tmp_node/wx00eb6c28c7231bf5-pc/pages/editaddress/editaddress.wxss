page {
    background: #f5f5f5;
}

.loginpassword {
    display: flex;
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    background: #fff;
}

.borderbott0m {
    border-bottom: 1px solid #ddd;
}

.loginpassword input {
    height: 98rpx;
    line-height: 98rpx;
    color: #000;
    font-size: 14px;
    padding-left: 5rpx;
    width: 450rpx;
}

.loginpassword input:-moz-placeholder {
    color: #cecece;
}

.loginpassword text {
    font-size: 14px;
    padding-left: 35rpx;
}

.loginpassword input.regionname {
    padding: 0;
    width: 480rpx;
}

.loginpasstext {
    padding-left: 35rpx;
    padding-top: 30rpx;
    background: #fff;
}

.loginpasstext text {
    font-size: 14px;
}

.loginpasstext textarea {
    font-size: 14px;
    margin-top: 20rpx;
}

.xinzheng button {
    background: #333333;
    color: #fff;
    width: 700rpx;
    height: 90rpx;
    margin-top: 40rpx;
}

.hidden {
    opacity: 0;
}

.message {
    position: fixed;
    top: 80%;
    left: 50%;
    width: 400rpx;
    height: 80rpx;
    margin-left: -200rpx;
    background-color: rgba(0,0,0,.75);
    border-radius: 20px;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    opacity: 0;
}

.fade-in {
    animation: fadeIn .3s forwards;
}

@-webkit-keyframes fadeIn {
    from {
        opacity: 0;
        transform: translate3d(0,100%,0);
    }

    to {
        opacity: 1;
        transform: none;
    }
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translate3d(0,100%,0);
    }

    to {
        opacity: 1;
        transform: none;
    }
}

.area-item {
    line-height: 40px;
    text-align: center;
}

.distpicker {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 560rpx;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    background-color: #fff;
}

.distpicker-btn {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
    padding: 0 40rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fafafa;
    color: #586C94;
}

.distpicker-content {
    box-sizing: border-box;
    width: 100%;
    height: 560rpx;
    background-color: #fff;
}

.mask {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 998;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.4);
}

.regionname {
    display: block;
    overflow: hidden;
    width: 60%;
}