page {
    background: #f5f5f5;
}

.addresslist {
    background: #fff;
    margin-top: 20rpx;
}

.addressname,.addresscont {
    display: flex;
    padding: 0 25rpx;
}

.addressname,.addressmor {
    padding: 25rpx;
}

.addressnamel,.addressnamer,.addressmorl {
    width: 350rpx;
    line-height: 50rpx;
}

.addressnamer {
    text-align: right;
}

.addresscont {
    border-bottom: 1px solid #dddddd;
    padding-bottom: 20rpx;
}

.addressmorr image {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
}

.addressmorr {
    text-align: right;
    float: right;
}

.addressnamel {
    float: left;
}

.xinzheng {
    margin-top: 20rpx;
}

.xinzheng button,.xinzheng button::after {
    border: none;
}

.xinzheng button {
    background: #333333;
    color: #fff;
    width: 700rpx;
    height: 90rpx;
}

.btmbg {
    position: fixed;
    height: 100%;
    width: 100%;
    background: #000;
    zoom: 1;
    top: 0;
    left: 0;
    opacity: 0.3;
}

.tanchu {
    position: fixed;
    top: 310rpx;
    z-index: 2;
    width: 620rpx;
    left: 60rpx;
    border-radius: 20rpx;
    background: #fff;
}

.queshac {
    display: flex;
    border-top: 1px solid #ddd;
}

.queshac button {
    width: 50%;
    background: #dddddd;
}

.quedsccon {
    padding: 50rpx 40rpx;
}

.queshac button::after {
    display: none;
}

.queshac button.queding {
    background: #fff;
}

.addressmorl text {
    margin-top: 5rpx;
    float: left;
}

.addressmorl radio {
    float: left;
}

.addressmorr image,.addressmorr text {
    margin-top: 10rpx;
    float: left;
}

.addressmorr image {
    margin-right: 10rpx;
    margin-top: 5px;
}

.addressmor {
    overflow: hidden;
}