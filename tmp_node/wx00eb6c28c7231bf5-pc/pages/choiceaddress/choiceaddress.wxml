<view hidden="{{AddressCount==0}}">
    <radio-group bindchange="onAddressCheck" class="radio-group">
        <view bindtap="bindEditAddressTap" class="addresslist" data-addressdata="{{item}}" wx:for="{{AddressList}}" wx:key="ShippingId">
            <view class="addressmorl">
                <radio color="#333333" value="{{item.ShippingId}}"></radio>
            </view>
            <view class="addressname">
                <view class="addressnamel">{{item.ShipTo}}</view>
                <view class="addressnamer">{{item.CellPhone}}</view>
            </view>
            <view class="addresscont">{{item.FullAddress}}</view>
        </view>
    </radio-group>
</view>
<view class="xinzheng">
    <button bindtap="onAddShippingAddress" hidden="{{AddressCount>=5}}">新增一个收货地址</button>
</view>
