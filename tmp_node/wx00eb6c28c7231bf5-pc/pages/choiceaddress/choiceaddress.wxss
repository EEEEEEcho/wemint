page {
    background: #f5f5f5;
    padding-bottom: 105rpx;
}

.addresslist {
    background: #fff;
    margin-top: 20rpx;
    position: relative;
}

.addressname,.addresscont,.addressmor {
    display: flex;
    padding: 0 25rpx;
}

.addressname,.addressmor {
    padding: 25rpx;
}

.addressnamel,.addressnamer,.addressmorl {
    width: 350rpx;
}

.addressnamer {
    text-align: left;
}

.addresscont {
    padding-bottom: 20rpx;
}

.addressmorr image {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
}

.addressmorr {
    text-align: right;
    width: 375rpx;
}

.xinzheng {
    margin-top: 20rpx;
}

.xinzheng button,.xinzheng button::after {
    border: none;
}

.xinzheng button {
    background: #333333;
    color: #fff;
    width: 700rpx;
    height: 90rpx;
}

.btmbg {
    position: fixed;
    height: 100%;
    width: 100%;
    background: #000;
    zoom: 1;
    top: 0;
    left: 0;
    opacity: 0.3;
}

.tanchu {
    position: fixed;
    top: 310rpx;
    z-index: 2;
    width: 620rpx;
    left: 60rpx;
    border-radius: 20rpx;
    background: #fff;
}

.queshac {
    display: flex;
    border-top: 1px solid #ddd;
}

.queshac button {
    width: 50%;
    background: #dddddd;
}

.quedsccon {
    padding: 50rpx 40rpx;
}

.queshac button::after {
    display: none;
}

.queshac button.queding {
    background: #fff;
}

.addressmorl {
    position: absolute;
    top: 60rpx;
    left: 10rpx;
}

.addressname,.addresscont {
    padding-left: 60rpx;
}

.addresslist::after,.addresslist::before {
    border: 6px solid transparent;
    border-left: 6px solid #fff;
    width: 0;
    position: absolute;
    right: 10px;
    height: 0;
    top: 75rpx;
    content: ' ';
}

.addresslist::before {
    border-left-color: #bbbbbb;
    right: 8px;
    top: 75rpx;
}