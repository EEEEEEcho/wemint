page {
    padding-bottom: 100rpx;
}

.page-section {
    font-size: 28rpx;
    overflow: hidden;
    background: #f5f5f5;
    margin-bottom: 56rpx;
}

.bg-white {
    background: #fff;
}

.countdown-banner {
    width: 100%;
    height: 160rpx;
    overflow: hidden;
    border-top: 1rpx solid #e0e0e0;
}

.countdown-banner image {
    display: inline;
}

.countdown-list {
    margin-top: 24rpx;
    overflow: hidden;
}

.countdown {
    padding: 30rpx 24rpx;
    border-bottom: 1px solid #e0e0e0;
    overflow: hidden;
}

.countdown-info-pic {
    float: left;
    width: 142rpx;
    height: 142rpx;
    overflow: hidden;
}

.countdown-info-pic image {
    width: 142rpx;
    height: 142rpx;
}

.countdow-info-txt {
    float: right;
    overflow: hidden;
    margin-left: 15rpx;
    width: 545rpx;
}

.countdow-info-name {
    height: 80rpx;
    line-height: 40rpx;
}

.countdow-info-b {
    margin-top: 5rpx;
    overflow: hidden;
    height: 57rpx;
    line-height: 57rpx;
}

.saleprice {
    float: left;
    color: #ff5722;
}

.saleprice .price {
    font-family: microsoft yahei;
    font-weight: bold;
    float: left;
    font-size: 32rpx;
}

.saleprice .oldprice {
    float: left;
    font-size: 24rpx;
    color: #bdbdbd;
    font-weight: 0;
    text-decoration: line-through;
    margin-left: 10rpx;
}

.countdown-btn {
    float: right;
    width: 160rpx;
    height: 57rpx;
    text-align: center;
    border-radius: 6rpx;
    color: #fff;
    background: linear-gradient(to right,#ff845d,#f33);
}

.countdow-start {
    background: linear-gradient(to right,#72cff9,#0288d1);
}