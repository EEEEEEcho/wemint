<view class="refunddetail">
    <view class="refunddetail-con">
        <view class="item">
            <view class="hd">
                <view class="num">售后编号：
          <text class="font-arial">{{RefundInfo.RefundId}}</text>
                </view>
                <view class="state">{{RefundInfo.StatusText}}</view>
            </view>
            <view class="bd">
                <view class="comm" wx:for="{{RefundInfo.ProductInfo}}">
                    <view class="pic">
                        <image src="{{item.ThumbnailsUrl}}"></image>
                    </view>
                    <view class="info">
                        <view class="name">{{item.ProductName}}</view>
                        <view class="para">{{item.SKUContent}}</view>
                    </view>
                    <view class="price">
                        <view class="sell">¥
                <text class="font-arial">{{item.Price}}</text>
                        </view>
                        <view class="num">×
                <text class="font-arial">{{item.Quantity}}</text>
                        </view>
                    </view>
                </view>
            </view>
            <view class="fd">
                <view class="li">
                    <view class="title">订单编号：</view>
                    <view class="con">
                        <text class="font-arial">{{RefundInfo.OrderId}}</text>
                    </view>
                </view>
                <view class="li">
                    <view class="title">申请原因：</view>
                    <view class="con">{{RefundInfo.Reason}}</view>
                </view>
                <view class="li">
                    <view class="title">退款金额：</view>
                    <view class="con">¥
            <text class="font-arial">{{RefundInfo.RefundMoney}}</text>
                    </view>
                </view>
                <view class="li">
                    <view class="title">退款数量</view>
                    <view class="con">{{RefundInfo.Quantity}}</view>
                </view>
                <view class="li">
                    <view class="title">退款方式：</view>
                    <view class="con">{{RefundInfo.RefundMoney}}</view>
                </view>
                <view class="li">
                    <view class="title">买家备注：</view>
                    <view class="con">{{RefundInfo.Remark}}</view>
                </view>
                <view class="li" hidden="{{Credentials.length<=0}}">
                    <view class="title">售后凭证：</view>
                    <view class="con"></view>
                </view>
                <view class="li" wx:for="{{Credentials}}">
                    <image src="{{item}}"></image>
                </view>
            </view>
            <view class="fd">
                <view class="customer">
                    <view class="title">售后进度</view>
                    <view class="con iconfont icon-more" style="color:#9e9e9e"></view>
                </view>
                <view class="schedule">
                    <view class="dl">
                        <view class="dd {{index==ProgressStatue.length-1?'active':''}}" wx:for="{{ProgressStatue}}">
                            <view class="icon">
                                <view></view>
                            </view>
                            <view class="exp">
                                <view class="name">{{item.statuename}}</view>
                                <view class="time">{{item.time}}</view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>
