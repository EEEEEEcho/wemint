.page-section {
    font-size: 28rpx;
    overflow: hidden;
    background: #f5f5f5;
}

.bg-wihte {
    background: #fff;
}

.shopcart-t {
    padding: 24rpx 24rpx;
    font-size: 32rpx;
    border-top: 1rpx solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
    overflow: hidden;
}

.shopcart-ck {
    float: left;
    overflow: hidden;
    margin-right: 10rpx;
    margin-top: 40rpx;
}

.shopcart-edite,.shopcart-item-num {
    float: right;
    overflow: hidden;
}

.shopcart-m {
    overflow: hidden;
    margin: 24rpx 0rpx;
}

.shopcart-m-item {
    overflow: hidden;
    width: 702rpx;
    padding: 30rpx 24rpx;
    position: relative;
}

.shopcart-item-pic {
    width: 126rpx;
    height: 126rpx;
    float: left;
    border: 1px solid #e0e0e0;
    margin-right: 15rpx;
}

.shopcart-item-pic image {
    width: 126rpx;
    height: 126rpx;
    overflow: hidden;
}

.shopcart-txt-t {
    overflow: hidden;
}

.shpcart-item-txt {
    float: left;
    overflow: hidden;
    width: 490rpx;
}

.shopcart-txt-name {
    float: left;
    width: 320rpx;
    height: 80rpx;
    line-height: 40rpx;
    overflow: hidden;
}

.shopcart-txt-saleprice {
    float: right;
}

.shopcart-txt-b {
    margin-top: 15rpx;
    overflow: hidden;
}

.shpcart-item-skuname {
    float: left;
    overflow: hidden;
    color: #747474;
}

.shopcart-invalid {
    background: #eee;
}

.shopcart-invalid .ck-txt {
    color: #fc7a7a;
}

.shopcart-b {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 97rpx;
    line-height: 97rpx;
    border-top: 1px solid #e0e0e0;
}

.shopcart-total {
    float: left;
    color: #424242;
    font-size: 28rpx;
}

.shopcart-total-txt {
    padding: 0rpx 10rpx 0rpx 24rpx;
    float: left;
}

.shopcart-total-p {
    color: #ff5722;
    float: left;
}

.shopcart-total-p .saleprice {
    font-weight: bold;
    font-family: Arial;
    font-size: 32rpx;
}

.shopcart-buy {
    float: right;
    color: #fff;
    background-image: linear-gradient(-90deg,#ff1b1a,#ff5622);
    text-align: center;
    font-size: 36rpx;
    width: 185rpx;
}

.shopcart-item-edite {
    width: 480rpx;
}

.shopcart-item-edite-l {
    float: left;
    overflow: hidden;
    margin-right: 15rpx;
}

.shopcart-item-edite-r {
    float: right;
    width: 120rpx;
    overflow: hidden;
    height: 194rpx;
    line-height: 194rpx;
    background: #f44336;
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    z-index: 999;
    bottom: 0rpx;
    text-align: center;
    color: #fff;
}

.shpcart-item-edite-num {
    margin-bottom: 15rpx;
    height: 70rpx;
    overflow: hidden;
    text-align: center;
}

.shpcart-item-edite-num .musenum-l,.shpcart-item-edite-num .add-r {
    padding: 15rpx 15rpx;
    color: #9e9e9e;
    font-size: 24px;
}

.shpcart-item-edite-num .musenum-l {
    float: left;
    overflow: hidden;
}

.shpcart-item-edite-num .m {
    float: left;
    overflow: hidden;
    text-align: center;
    width: 280rpx;
    margin-top: 20rpx;
}

.shpcart-item-edite-num .add-r {
    float: right;
    overflow: hidden;
}