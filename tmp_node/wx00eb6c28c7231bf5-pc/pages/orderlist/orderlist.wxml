<view class="coupontitle">
    <view class="coupontitlel">
        <view bindtap="onTabClick" class="{{AllActive}}" data-status="0">全部订单</view>
    </view>
    <view class="coupontitlel">
        <view bindtap="onTabClick" class="{{WaitPayActive}}" data-status="1">待付款</view>
    </view>
    <view class="coupontitlel">
        <view bindtap="onTabClick" class="{{WaitSendActive}}" data-status="2">待发货</view>
    </view>
    <view class="coupontitlel">
        <view bindtap="onTabClick" class="{{WaitReceiveActive}}" data-status="3">待收货</view>
    </view>
</view>
<view class="orderlist" wx:for="{{OrderList}}" wx:key="OrderId">
    <view bindtap="goToOrderDetail" class="orderlisttile" data-orderid="{{item.OrderId}}">
        <view class="orderhao">订单号：{{item.OrderId}}</view>
        <view class="orderzt">{{item.StatusText}}</view>
    </view>
    <view bindtap="goToOrderDetail" class="orderlistcont" data-orderid="{{item.OrderId}}" wx:for="{{item.LineItems}}" wx:for-item="pro" wx:key="Id">
        <image src="{{pro.Image}}"></image>
        <view class="orderlisc">
            <view class="ordername">{{pro.Name}}</view>
            <view class="ordersize">{{pro.SkuText}}</view>
        </view>
        <view class="orderlistright">
            <text>￥{{pro.Price}}</text>
            <view>x {{pro.Amount}}</view>
            <view class="orderzt">{{pro.StatusText}}</view>
        </view>
    </view>
    <view class="orderlistzong">共{{item.Quantity}}件商品 <text></text>  总价￥{{item.Amount}}</view>
    <view class="orderlistbt">
        <button bindtap="RefundOrder" class="qxdd" data-money="{{item.Amount}}" data-orderid="{{item.OrderId}}" hidden="{{item.Status!=2}}">申请退款</button>
        <button bindtap="closeOrder" class="qxdd" data-orderid="{{item.OrderId}}" hidden="{{item.Status!=1}}">取消订单</button>
        <button bindtap="orderPay" class="fukuan" data-orderid="{{item.OrderId}}" hidden="{{item.Status!=1}}">付款</button>
        <button bindtap="orderFinish" class="fukuan" data-orderid="{{item.OrderId}}" hidden="{{item.Status!=3}}">确认收货</button>
        <button bindtap="showLogistics" class="fukuan" data-orderid="{{item.OrderId}}" hidden="{{item.Status==1||item.Status==2||item.Status==-1||item.Status==4}}">查看物流</button>
        <navigator class="fukuan" url="../comment/comment?id={{item.OrderId}}">评论</navigator>
    </view>
</view>
<view class="kong" hidden="{{OrderList.length>0}}">
    <image src="/images/kong.jpg"></image>
    <text>您还没有相关订单~~~~</text>
</view>
