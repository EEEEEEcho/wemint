<view class="searchk">
    <view class="searchl">
        <icon size="14" type="search"></icon>
        <input bindblur="bindBlurInput" bindconfirm="onConfirmSearch" bindfocus="gotoKeyWordPage" bindinput="bindKeyWordInput" confirmType="search" placeholder="{{KeyWord==''?'搜索商品':KeyWord}}"></input>
    </view>
    <view bindtap="onSearch" class="searchr">搜索</view>
</view>
<view class="coupontitle">
    <view class="coupontitlel">
        <view bindtap="onSortClick" class="{{Num==0?'active':''}}" data-num="0" data-sortby="ProductId">默认</view>
    </view>
    <view class="coupontitlel">
        <view bindtap="onSortClick" class="jiages {{Num==1?'active'+' '+SortClass:''}}" data-num="1" data-sortby="SaleCounts">销量</view>
    </view>
    <view class="coupontitlel">
        <view bindtap="onSortClick" class="jiages {{Num==2?'active'+' '+SortClass:''}}" data-num="2" data-sortby="SalePrice">价格</view>
    </view>
    <view class="coupontitlel">
        <view bindtap="onSortClick" class="jiages1s jiages {{Num==3?'active'+' '+SortClass:''}}" data-num="3" data-sortby="VistiCounts">浏览量</view>
    </view>
</view>
<view class="goodcont">
    <view bindtap="goToProductDetail" class="goodlis" data-productid="{{item.ProductId}}" wx:for="{{ProductList}}" wx:key="ProductId">
        <view class="qglistpic">
            <image mode="aspectFit" src="{{item.Pic}}"></image>
        </view>
        <view class="name">{{item.ProductName}}</view>
        <view class="saleprice">
        ￥
        <text>{{item.SalePrice}}</text>
            <view class="xialiang">销量 {{item.SaleCounts}}</view>
        </view>
    </view>
</view>
<view class="kong" hidden="{{ProductList.length>0}}">
    <image src="/images/xiaolian.jpg"></image>
    <text>很抱歉，没有搜索到相关商品...</text>
</view>
