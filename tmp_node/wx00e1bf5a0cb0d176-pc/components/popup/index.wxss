@import "../../__wuBaseWxss__/4.wxss";

.modal-wrapper {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 999;
}

.modal-bg {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgb(0,0,0);
    opacity: 0;
    transition: all .3s;
}

.modal-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1088rpx;
    background-color: #fff;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    transition: all .3s;
    transform: translateY(1000rpx);
    opacity: .5;
    box-sizing: border-box;
}

.modal-bg.active {
    opacity: .8;
}

.modal-content.active {
    transform: translateY(0rpx);
    opacity: 1;
}

.modal-title {
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    position: relative;
    color: #333;
    box-sizing: border-box;
}

.modal-wrapper .icon-guanbi-copy {
    font-size: 28rpx;
    position: absolute;
    right: 0;
    display: flex;
    width: 100rpx;
    height: 100rpx;
    top: 0;
    align-items: center;
    justify-content: center;
    z-index: 11;
}

.modal-main {
    overflow-x: hidden;
    overflow-y: scroll;
}

.modal-footer {
    height: 128rpx;
    box-sizing: border-box;
    width: 100%;
}