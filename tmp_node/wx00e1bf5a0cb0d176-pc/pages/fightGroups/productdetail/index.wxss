page {
    background: #fff;
}

.slide-image {
    display: block;
    width: 100%;
    height: 100%;
}

.product-top {
    position: relative;
}

.product-top .num {
    position: absolute;
    height: 48rpx;
    line-height: 48rpx;
    padding: 10rpx 26rpx;
    color: #fff;
    font-size: 24rpx;
    border-top-right-radius: 4rpx;
    top: -62rpx;
    left: 0;
    background-color: #ff5f28;
}

.product-top .pice {
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    background: -webkit-gradient(to right,#ff5f28 0%,#ff305d 100%);
    background: linear-gradient(to right,#ff5f28 0%,#ff305d 100%);
    align-items: center;
    padding: 0 26rpx;
    color: #fff;
}

.pice .pice_l {
    width: 260rpx;
}

.pice .pice_r {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.time-txt {
    font-size: 22rpx;
    color: #fff;
    opacity: .8;
}

.time {
    font-size: 22rpx;
    display: flex;
    align-items: center;
}

.pice_r .time text.OverThree {
    width: auto;
}

.pice_r .time text {
    height: 32rpx;
    min-width: 32rpx;
    padding: 2rpx 4rpx;
    margin-left: 6rpx;
    margin-right: 4rpx;
    background: #fff;
    border-radius: 4rpx;
    color: #ff305d;
    font-size: 24rpx;
    text-align: center;
    line-height: 32rpx;
    display: inline-block;
}

.footnav .footMiddle,.footnav .footRight {
    width: 360rpx;
    line-height: 98rpx;
    text-align: center;
    font-size: 30rpx;
}

scroll-view {
    margin-bottom: 98rpx;
}

.container .discount .disLeft .title {
    vertical-align: middle;
    font-size: 26rpx;
    color: #666;
}