@import "../../../__wuBaseWxss__/29.wxss";

page {
    height: 100%;
}

.tab-h {
    height: 88rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 88rpx;
    background: #fff;
    font-size: 28rpx;
    white-space: nowrap;
    color: #999;
    font-weight: 700;
}

.tab-item-2 {
    padding: 0 40rpx;
    width: 50%;
    display: inline-block;
    box-sizing: border-box;
    text-align: center;
}

.tab-item-3 {
    padding: 0 40rpx;
    width: 33.3%;
    display: inline-block;
    box-sizing: border-box;
    text-align: center;
}

.tab-item-4 {
    width: 25%;
    display: inline-block;
    box-sizing: border-box;
    text-align: center;
}

.active {
    color: #ff2141;
    position: relative;
    display: inline-block;
}

.active:after {
    content: "";
    display: block;
    height: 4rpx;
    width: 100%;
    background: #ff2141;
    position: absolute;
    bottom: 0;
    border-radius: 2rpx;
}

.pdgbox_20 {
    width: 100%;
    padding: 26rpx;
    box-sizing: border-box;
}

.pdgbox_30 {
    width: 100%;
    padding: 4rpx 26rpx;
    box-sizing: border-box;
}

.bannerImg {
    width: 100%;
    height: 300rpx;
}

.activityTime .activityRules {
    font-size: 26rpx;
    color: #fc2a27;
}

.activityTime .activity-con-txt {
    color: #999;
    font-size: 12px;
    display: inline-block;
}

.activityTime .activity-con-txt .activity-con-status {
    margin-right: 5px;
}

.activityTime .activity-con-txt .time {
    font-size: 12px;
    color: #fff;
    display: inline-block;
    width: 21px;
    height: 18px;
    line-height: 18px;
    text-align: center;
    background: #333;
    border-radius: 2px;
}

.activityTime .activity-con-txt .activitySurplus {
    margin-right: 20rpx;
}

.activityTime .shi {
    font-size: 12px;
    color: #fff;
    display: inline-block;
    width: 21px;
    height: 18px;
    line-height: 18px;
    text-align: center;
    background: #333;
    border-radius: 2px;
}

.activityTime .colon {
    font-size: 12px;
    width: 5px;
    height: 18px;
    text-align: center;
    display: inline-block;
    margin: 0 4rpx;
}

.activityTime .activityDay {
    color: #333;
    margin: 0 4rpx;
}

.barglist {
    width: 100%;
    background: #fff;
    border-radius: 4rpx;
    padding: 24rpx;
    box-sizing: border-box;
    display: flex;
}

.listimg {
    width: 240rpx;
    height: 240rpx;
    border-radius: 4rpx;
    display: box;
    flex-shrink: 0;
}

.list_right {
    display: inline-block;
    padding-left: 20rpx;
    width: 100%;
}

.headtext {
    font-size: 26rpx;
    color: #333;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.pdgflag {
    background: #fff;
    color: #ff2141;
    font-size: 22rpx;
    text-align: center;
    box-sizing: border-box;
    width: 82rpx;
    height: 36rpx;
    line-height: 36rpx;
}

.pdgflag::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 164rpx;
    height: 72rpx;
    line-height: 72rpx;
    transform: scale(0.5);
    transform-origin: 0 0;
    border: 1rpx solid #ff2141;
    box-sizing: border-box;
    border-radius: 999rpx;
    pointer-events: none;
}

.pdgflag_none {
    background: #fff;
    color: #999;
    font-size: 22rpx;
    text-align: center;
    box-sizing: border-box;
    width: 82rpx;
    height: 36rpx;
    line-height: 36rpx;
}

.pdgflag_none::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 164rpx;
    height: 72rpx;
    line-height: 72rpx;
    transform: scale(0.5);
    transform-origin: 0 0;
    border: 1rpx solid #999;
    box-sizing: border-box;
    border-radius: 999rpx;
    pointer-events: none;
}

.priceflag {
    position: relative;
    bottom: 0;
    left: 10rpx;
    line-height: 1;
}

.rmbflag,.rmb {
    font-size: 26rpx;
    color: #ff2141;
    font-weight: 700;
    display: inline-block;
    line-height: 1;
}

.rmb {
    font-size: 38rpx;
    margin-left: 0rpx;
}

.rmb_1 {
    font-size: 22rpx;
}

.rmb_none,.rmb_none1 {
    font-size: 38rpx;
    margin-left: 0rpx;
    color: #999;
    font-weight: 700;
    display: inline-block;
    line-height: 1;
}

.rmb_none1 {
    font-size: 22rpx;
}

.originalprice {
    color: #999;
    font-size: 22rpx;
    display: inline-block;
    margin-left: 10rpx;
    text-decoration: line-through;
}

.stock {
    color: #999;
    font-size: 22rpx;
    margin-top: 16rpx;
}

.buying {
    width: 230rpx;
    height: 60rpx;
    margin-top: 16rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    border-radius: 120rpx;
    text-align: center;
    color: #fff;
    background: linear-gradient(bottom right,#ff2140,#ff5e17);
}

.buying_none {
    font-size: 28rpx;
    color: #666;
    margin-top: 40rpx;
    overflow: hidden;
}

.oldbuy {
    color: #ff2141;
}

.iconsize {
    font-size: 28rpx;
}

.nostart {
    font-size: 28rpx;
    color: #333;
}

.argain_posi {
    width: 134rpx;
    height: 134rpx;
    position: fixed;
    right: 36rpx;
    bottom: 200rpx;
}

.martop {
    margin-top: 20rpx;
}

.nomore {
    text-align: center;
    color: #ccc;
    padding-bottom: 22px;
    display: flex;
    box-sizing: border-box;
    font-size: 24rpx;
}

.scale {
    transform: scale(4,0.5);
    flex: 1;
}