page {
    background-color: #fff;
}

.pro-cls {
    display: flex;
    margin-top: 90rpx;
}

.pro-cls .productcontainer {
    width: 100%;
}

.class-list {
    background: white;
    background: #fff;
    z-index: 999;
}

.class-list .class-item {
    display: inline-block;
}

.class-item {
    line-height: 90rpx;
    height: 90rpx;
    font-size: 28rpx;
    margin: 0 30rpx;
    color: #666;
    position: relative;
}

.class-item .active {
    color: #f33a63;
}

.class-item .active::after {
    content: '';
    position: absolute;
    height: 3px;
    width: 100%;
    bottom: 1px;
    left: 0;
    background: #f33a63;
    z-index: 99;
}

.container .product-list {
    background-color: #fff;
    overflow: hidden;
    width: 100%;
    box-sizing: border-box;
}

.product-list .product-item {
    padding: 30rpx 26rpx;
    display: flex;
    align-self: center;
}

.product-item .pro-img {
    width: 200rpx;
    height: 200rpx;
    background: #f2f2f2;
    display: block;
    text-align: center;
    position: relative;
}

.product-item .pro-img image {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    max-width: 100%;
    max-height: 100%;
    display: block;
    margin: auto;
    padding: auto;
}

.protext {
    padding-left: 40rpx;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
    overflow: hidden;
    position: relative;
}

.pro-name {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.pro-desc {
    padding-top: 10rpx;
    line-height: 34rpx;
    font-size: 22rpx;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    box-sizing: border-box;
}

.pro-price {
    color: rgb(250,100,144);
    font-size: 30rpx;
    font-weight: bold;
}

.pro-reserve {
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
    background: #f33a63;
    color: #fff;
    font-size: 24rpx;
    width: 168rpx;
    border-radius: 30rpx;
}

.noproducttips {
    text-align: center;
    padding: 10px;
    font-size: 14px;
    color: #999;
}

.footnav-item .cuour-tit,.icon-kecheng {
    color: #ff2280!important;
}

.meal-time-list {
    position: fixed;
    top: 0;
    background: #fff;
    z-index: 4;
    height: 90rpx;
    width: 100%;
    font-size: 16px;
    white-space: nowrap;
}

.shiting {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
}

.shiting-tit {
    font-size: 24rpx;
    color: #999;
}

.dummy {
    padding-top: 100%;
}

.loading {
    padding: 20rpx;
    font-size: 24rpx;
    text-align: center;
    color: #999;
}

.loading.complete:before {
    display: none;
}