page {
    background-color: #f4f4f4;
}

.container {
    background-color: #fff;
    border-top: 1px solid #ddd;
}

.portrait {
    height: 186rpx;
}

.member-name {
    padding: 26rpx 0;
    font-size: 30rpx;
    display: flex;
}

.member-name .memberName {
    width: 20%;
}

.member-name .member-name-color {
    color: #999;
    flex: 1;
    text-align: right;
}

.portrait,.member-name {
    display: flex;
    justify-content: space-between;
    margin-left: 26rpx;
    padding-right: 26rpx;
    align-items: center;
    background: #fff;
}

.portrait .portrait-img {
    width: 136rpx;
    height: 136rpx;
    border-radius: 50%;
    overflow: hidden;
}

.portrait .portrait-img image {
    width: 100%;
}

.portrait .portrait-tit {
    font-size: 30rpx;
    color: #333;
}

.panel-mark {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
    z-index: 1000000;
}

.panel-getUserInfo {
    width: 620rpx;
    height: 368rpx;
    border-radius: 16rpx;
    text-align: center;
    background: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 1000001;
}

.panel-getUserInfo .panel-title {
    font-size: 34rpx!important;
    color: #000;
    font-weight: 500;
    height: 98rpx;
    line-height: 98rpx;
}

.panel-getUserInfo .panel-tips {
    padding: 40rpx 62rpx 0;
    text-align: left;
}

.panel-getUserInfo .panel-tips .allow-tips {
    padding-top: 32rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.panel-getUserInfo .panel-tips .allow-tips .circle {
    height: 10rpx;
    width: 10rpx;
    border-radius: 50%;
    background: #898989;
    margin-right: 20rpx;
}

.panel-getUserInfo .panel-tips .allow-tips .ebook {
    font-size: 30rpx;
    color: #898989;
}

.panel-getUserInfo .btn-groups {
    display: flex;
    flex-direction: row;
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
}

.panel-getUserInfo .btn-groups::before {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    border-top: 1rpx solid #ddd;
    content: '';
    transform-origin: 0 0;
}

.panel-getUserInfo .btn-groups button {
    font-size: 34rpx;
    color: #2fb823;
    background: #fff;
    border-radius: 16rpx;
    height: 88rpx;
    margin-top: 1rpx;
    width: 100%;
}

.button-hover[type=primary] {
    background: transparent;
    color: #2fb823;
}

button::after {
    border: none;
}