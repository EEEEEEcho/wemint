page {
    background-color: #fff;
}

.container {
    background-color: #fff;
}

.reserve-list {
    color: #333;
    height: 100%;
}

.reserve-item {
    border-radius: 10rpx;
    background: #fff;
    padding: 50rpx 30rpx;
    margin: 30rpx 26rpx;
    box-shadow: 1px 1px 15rpx #ddd;
}

.lastbox {
    height: 30rpx;
}

.reserve-item>view {
    display: flex;
    margin-bottom: 50rpx;
}

.reserve-item .subscribeTime {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
}

.reserve-item .reservationCancel {
    margin-bottom: 0;
}

.reserve-item .title {
    color: #999;
    font-size: 30rpx;
    flex: 0 0 25%;
}

.reserve-item .time-value {
    font-size: 38rpx;
    display: inline-block;
    color: #ff5ca1;
    flex: 1;
}

.reserve-item .value {
    flex: 1;
    font-size: 30rpx;
    display: inline-block;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.reserve-item .memo-content {
    flex: 1;
    text-align: left!important;
    color: #444;
}

.btnmore {
    width: 160rpx;
    line-height: 50rpx;
    height: 50rpx;
    color: #999;
    text-align: center;
    margin: 0 auto;
}

.btncancel {
    width: 200rpx;
    font-size: 28rpx;
    line-height: 74rpx;
    height: 74rpx;
    color: #333;
    border: 1rpx solid #999;
    border-radius: 74rpx;
    margin: 0 auto;
    text-align: center;
}

.noproducttips {
    position: absolute;
    top: 30%;
    left: 50%;
    width: 300rpx;
    text-align: center;
    transform: translate(-50%,-50%);
    text-align: center;
    padding: 10px;
    font-size: 14px;
    color: #999;
}

.noproducttips image {
    width: 100%;
}

.noproducttips text {
    font-size: 26rpx;
    color: #999;
}