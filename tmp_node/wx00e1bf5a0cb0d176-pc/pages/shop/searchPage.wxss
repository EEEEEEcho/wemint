page {
    background: #fff;
}

.search {
    height: 98rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    background-color: #f4f4f4;
}

.form-box {
    position: relative;
}

.form-box .iconGuanBi {
    position: absolute;
    right: 22rpx;
    top: 50%;
    color: #999;
    font-size: 36rpx;
    transform: translateY(-50%);
    z-index: 99;
}

.search .searchinput {
    width: 612rpx;
    height: 66rpx;
    line-height: 70rpx;
    border-radius: 33rpx;
    padding-left: 30rpx;
    padding-right: 80rpx;
    margin-left: 26rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    background-color: #fff;
