page {
    width: 100%;
    background: #F1F1F1;
}

.goods-list {
    width: 100%;
    background: #fff;
}

.goods-list-item {
    width: 690rpx;
    height: 240rpx;
    margin-left: 30rpx;
    border-bottom: 2rpx solid #F5F5F5;
}

.goods-list-item-l {
    width: 250rpx;
    height: 160rpx;
    box-sizing: border-box;
    border: 2rpx solid #F5F5F5;
    float: left;
}

.goods-list-item-r {
    width: 390rpx;
    height: 160rpx;
    margin-left: 30rpx;
    float: left;
}

.goods-name {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    white-space: nowrap;
    font-size: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.goods-desc {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #888;
}

.goods-price {
    width: 100%;
    height: 50rpx;
}

.goods-price-l {
    width: 50%;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 32rpx;
    color: #FC560C;
    float: left;
}

.goods-price-r {
    width: 50%;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 22rpx;
    color: #F10;
    float: left;
}