page {
    width: 100%;
    background: #F1F1F1;
}

.goods-list {
    width: 100%;
    background: #fff;
}

.goods-list-item {
    width: 690rpx;
    margin-left: 30rpx;
    border-bottom: 2rpx solid #F5F5F5;
}

.goods-list-item-l {
    width: 250rpx;
    height: 160rpx;
    box-sizing: border-box;
    border: 2rpx solid #F5F5F5;
    float: left;
}

.goods-list-item-r {
    width: 390rpx;
    height: 160rpx;
    margin-left: 30rpx;
    float: left;
}

.goods-list-item-b {
    width: 690rpx;
    height: 60rpx;
}

.goods-list-item-b-l {
    width: 60%;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #f45;
    float: left;
}

.goods-list-item-b-r {
    width: 25%;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    background: #F8B62C;
    color: #fff;
    border-radius: 8rpx;
    float: right;
    text-align: center;
}

.goods-name {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    white-space: nowrap;
    font-size: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.goods-desc {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #888;
}

.goods-price {
    width: 100%;
    height: 50rpx;
}

.goods-price-l {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #f60;
}

.goods-price-r {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #888;
}