page {
    width: 100%;
    background: #fff;
}

.head {
    width: 140rpx;
    height: 140rpx;
    border-radius: 140rpx;
    margin: 0 auto;
    overflow: hidden;
    background: #888;
}

.nickname {
    text-align: center;
    font-size: 40rpx;
    line-height: 40rpx;
}

.title {
    text-align: center;
    font-size: 36rpx;
    line-height: 40rpx;
}

.dixian {
    width: 400rpx;
    height: 20rpx;
    margin: 0 auto;
    box-sizing: border-box;
    border-bottom: 4rpx solid #FFB200;
}

.ipt-list {
    width: 650rpx;
    height: 100rpx;
    margin: 0 auto;
    box-sizing: border-box;
    border-bottom: 2rpx solid #E5E5E5;
}

.ipt-list-l {
    width: 38rpx;
    height: 40rpx;
    float: left;
    line-height: 40rpx;
    margin-top: 30rpx;
}

.ipt-list-r {
    width: 340rpx;
    height: 100rpx;
    float: left;
    line-height: 100rpx;
    margin-left: 20rpx;
}

.ipt-list-r2 {
    width: 200rpx;
    height: 60rpx;
    float: left;
    line-height: 60rpx;
    margin-left: 30rpx;
    margin-top: 20rpx;
    font-size: 30rpx;
    background: #FFB200;
    text-align: center;
    border-radius: 8rpx;
    color: #fff;
}

.ipt-list-r3 {
    width: 200rpx;
    height: 60rpx;
    float: left;
    line-height: 60rpx;
    margin-left: 30rpx;
    margin-top: 20rpx;
    font-size: 30rpx;
    background: #888888;
    text-align: center;
    border-radius: 8rpx;
    color: #fff;
}

.btn {
    width: 690rpx;
    height: 100rpx;
    border-radius: 8rpx;
    margin: 0 auto;
    line-height: 100rpx;
    text-align: center;
    background: #FFB200;
    font-size: 36rpx;
    color: #fff;
}

.input {
    width: 100%;
    height: 100%;
}

.hover {
    opacity: 0.8;
}

.inp-text {
    font-size: 30rpx;
    line-height: 100rpx;
}