[is="components/x-scroll-view/x-scroll-view"] {
    position: relative;
    overflow: hidden;
    display: block;
}

.container {
    height: 100%;
    margin: 0px;
    padding: 0px;
}

.imgWidth100 {
    width: 100%;
    padding: 0px;
    margin: 0px;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 40px;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.viewMysetting {
    background-image: url("http://omr9rokwz.bkt.clouddn.com/WechatIMG76.png");
    position: fixed;
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
}

.font {
    font-weight: bold;
}

.usermotto {
    margin-top: 200px;
}

.hidden {
    display: none!important;
}

.viewDetail {
    background-image: url("http://omr9rokwz.bkt.clouddn.com/detail-bg.jpg");
    position: fixed;
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
}

.txtComeCls {
    background-color: #59a79e;
    border: none!important;
}

.loading-div {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0,0,0,0.5);
    z-index: 1000;
}

.loadimg {
    width: 80px;
    height: 80px;
    border-radius: 10px;
    position: absolute;
    left: calc(50vw - 40px);
    top: calc(50vh - 40px);
}

.height0 {
    height: 0px!important;
}