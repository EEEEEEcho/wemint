page {
    user-select: none;
    width: 100%;
    overflow-x: hidden;
    overflow-y: hidden;
}

.swipeView {
    width: 100vw;
    min-height: 840rpx;
    overflow: hidden;
}

.swipeView .itemView {
    overflow: hidden;
    position: relative;
    background-color: gray;
}

.swipeView .itemView .swipeImg {
    width: 100%;
    height: 840rpx;
    position: absolute;
    left: 0rpx;
}

.swipeView .itemView .icon {
    width: 100%;
    text-align: center;
    font-size: 0rpx;
    color: white;
    position: absolute;
    text-shadow: 0 0 2rpx rgba(0,0,0,0.74);
    transform: translateY(50%);
    z-index: 2;
}

.swipeView .itemView .title {
}

.swipeView .itemView .desc {
}

.footer {
    background: #FFFFFF;
    width: 100vw;
    height: calc(100vh - 840rpx);
    max-height: 418rpx;
    text-align: center;
    padding: 40rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    overflow: hidden;
}

.footer .bmp {
    width: 180rpx;
    height: 112rpx;
}

.footer .shareBtn {
    width: 280rpx;
    height: 92rpx;
    border-radius: 16rpx;
    font-size: 30rpx;
    color: black;
    text-align: center;
    line-height: 92rpx;
}

.backView {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0rpx;
    top: 0rpx;
    opacity: 0.9;
    z-index: 1;
    background-image: linear-gradient(180deg,rgba(26,26,26,0.00) 0%,#131620 100%,#181818 100%);
}

.myload {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: rgb(235,237,239);
    z-index: 10;
    position: absolute;
    width: 220rpx;
    height: 180rpx;
    left: 265rpx;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(0,0,0,0.8);
    text-align: center;
    font-size: 24rpx;
    padding: 30rpx;
    border-radius: 10rpx;
    box-sizing: border-box;
}

.myload .spinner {
    display: inline-block;
    margin-bottom: 20rpx;
    width: 30rpx;
    height: 30rpx;
    background-color: white;
    animation: rotateplane 1.5s infinite ease-in-out;
}

@-webkit-keyframes rotateplane {
    0% {
        -webkit-transform: perspective(30rpx);
    }

    50% {
        -webkit-transform: perspective(30rpx) rotateY(180deg);
    }

    100% {
        -webkit-transform: perspective(30rpx) rotateY(180deg) rotateX(180deg);
    }
}

@keyframes rotateplane {
    0% {
        transform: perspective(30rpx) rotateX(0deg) rotateY(0deg);
    }

    50% {
        transform: perspective(30rpx) rotateX(-180.1deg) rotateY(0deg);
    }

    100% {
        transform: perspective(30rpx) rotateX(-180deg) rotateY(-179.9deg);
    }
}

button::after {
    border: none;
}