.containView {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0rpx;
    left: 0rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    z-index: 1000;
    justify-content: center;
}

.myload {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 220rpx;
    height: 180rpx;
    left: 60rpx;
    top: 300rpx;
    background-color: rgba(0,0,0,0.8);
    border-radius: 16rpx;
    color: rgb(235,237,239);
    text-align: center;
    font-size: 24rpx;
    padding: 20rpx;
    box-sizing: border-box;
}

.myload .spinner {
    display: inline-block;
    margin-bottom: 40rpx;
    width: 30rpx;
    height: 30rpx;
    background-color: white;
    animation: rotateplane 1.5s infinite ease-in-out;
}

@-webkit-keyframes rotateplane {
    0% {
        -webkit-transform: perspective(30rpx);
    }

    50% {
        -webkit-transform: perspective(30rpx) rotateY(180deg);
    }

    100% {
        -webkit-transform: perspective(30rpx) rotateY(180deg) rotateX(180deg);
    }
}

@keyframes rotateplane {
    0% {
        transform: perspective(30rpx) rotateX(0deg) rotateY(0deg);
    }

    50% {
        transform: perspective(30rpx) rotateX(-180.1deg) rotateY(0deg);
    }

    100% {
        transform: perspective(30rpx) rotateX(-180deg) rotateY(-179.9deg);
    }
}