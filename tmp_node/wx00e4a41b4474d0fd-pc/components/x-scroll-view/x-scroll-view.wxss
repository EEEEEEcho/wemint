.scroll-view {
    height: calc(100% + 40px);
    transform: translateY(-40px);
}

.scroll-view.refresh {
    transform: translateY(0);
}

@-webkit-keyframes finish {
    from {
        transform: translateY(0);
    }

    to {
        transform: translateY(-40px);
    }
}

@keyframes finish {
    from {
        transform: translateY(0);
    }

    to {
        transform: translateY(-40px);
    }
}

.scroll-view.finish {
    animation: finish 0.5s;
}

.pulldown {
    height: 40px;
    width: 100%;
    line-height: 40px;
    text-align: center;
}

.pulldown text {
    color: #222;
}

.loadmore {
    height: 60px;
    width: 100%;
    line-height: 60px;
    text-align: center;
}

.loadmore text {
    color: #444;
}

@-webkit-keyframes loading {
    0% {
        transform: rotate(0deg);
    }

    50% {
        transform: rotate(180deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

@keyframes loading {
    0% {
        transform: rotate(0deg);
    }

    50% {
        transform: rotate(180deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

.loading {
    display: inline-block;
    transform-origin: 50% 50%;
    animation: loading 1s linear infinite;
}

