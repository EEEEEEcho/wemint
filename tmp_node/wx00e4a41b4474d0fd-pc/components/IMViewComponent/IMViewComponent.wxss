.model {
    position: fixed;
    width: 100%;
    height: 100rpx;
    left: 0rpx;
    bottom: 0rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    z-index: 99999;
}

.model .modelback {
    width: 100%;
    font-size: 0rpx;
    text-align: center;
    background: #FFFFFF;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.model .modelback .shouye_icon {
    width: 34rpx;
    height: 34rpx;
}

.modelShare {
    background-color: #272A34;
    width: 100%;
    font-size: 0rpx;
    text-align: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.shareWord {
    font-family: PingFangSC-Medium;
    font-size: 30rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: center;
    margin-left: 20rpx;
}

.share_icon {
    width: 30rpx;
    height: 30rpx;
}

.model .modelback .word {
    font-size: 30rpx;
    color: #525252;
    margin-left: 20rpx;
}

.model .modelIM {
    width: 100%;
    text-align: center;
    color: #FFFFFF;
    background-size: cover;
}

.model .modelIM .im_icon {
    width: 50rpx;
    height: 50rpx;
    overflow: hidden;
    display: inline-block;
    vertical-align: middle;
}

.model .modelIM .newRed {
    z-index: 20;
    width: 24px;
    height: 24px;
    color: #fff;
    top: -13px;
    left: -8px;
    display: inline-block;
    font-size: 10px;
    border-radius: 50%;
    background: red;
    text-align: center;
    line-height: 24px;
    position: relative;
}

.model .modelIM .im_btn {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    overflow: hidden;
    word-break: break-all;
    white-space: nowrap;
    background-color: transparent;
    overflow: visible;
}

.model .btns .agree {
    border-width: 0px;
    color: rgb(26,172,25);
}

button::after {
    border: none;
}

.shareOptions {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.3);
    z-index: 200;
    transform: translateY(-100rpx);
}

.boxCon {
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    text-align: center;
    background: #fff;
    z-index: 10;
    vertical-align: middle;
}

.shareType {
    display: inline-block;
    margin: 64rpx 0;
    vertical-align: middle;
    line-height: 1.5;
    background: transparent;
}

.shareword {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #272A34;
    letter-spacing: 0;
    line-height: 30rpx;
}

.shareType i {
    display: inline-block;
    width: 35rpx;
    height: 40rpx;
    background: url("https://dm.static.elab-plus.com/tfb_icon_foot/download_img.png")no-repeat center center/100% 100%;
}

.haoyou {
    margin-left: 180rpx;
}

.haoyou i {
    width: 50rpx;
    height: 40rpx;
    background-image: url("https://dm.static.elab-plus.com/tfb_icon_foot/share_img.png");
}