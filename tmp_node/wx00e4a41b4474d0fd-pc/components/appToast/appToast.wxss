.toast_content_box {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    position: fixed;
    z-index: 10000;
}

.toast_content {
    width: 50%;
    padding: 30rpx;
    background: rgba(0,0,0,1);
    border-radius: 20rpx;
}

.toast_content_text {
    height: 100%;
    width: 100%;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}