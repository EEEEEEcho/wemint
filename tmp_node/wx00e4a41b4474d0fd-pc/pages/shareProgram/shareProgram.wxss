page {
    background-color: #272a34;
}

.bg {
    position: fixed;
    z-index: 1;
    width: 100vw;
    height: 100vh;
    background-color: #272a34;
}

.save-btn {
    background: #5370FF;
    box-shadow: 0 2px 20px 0 rgba(0,0,0,0.10);
    height: 88rpx;
    width: 100VW;
    line-height: 88rpx;
    position: fixed;
    bottom: 0;
    font-size: 15px;
    border-radius: 0;
    color: #fff;
}

.contain-box {
    height: 100vh;
    background: #272a34;
    overflow: hidden;
}

.dots {
    margin-top: 2vh;
    position: relative;
    z-index: 2;
    display: flex;
    justify-content: center;
}

.dots .dot {
    margin: 0 2rpx;
    width: 10vw;
    height: 2px;
    opacity: .3;
    background: #ffffff;
}

.dots .dot.active {
    opacity: 1!important;
}

.bottom-text {
    height: 40rpx;
    margin-top: 10rpx;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
}

.model {
    position: absolute;
    width: 80vw;
    left: 10vw;
    top: 20vh;
    border-radius: 20rpx;
    background-color: white;
    z-index: 16;
}

.model .modelTitle {
    width: 100%;
    padding: 20rpx 0rpx;
    font-size: 40rpx;
    text-align: center;
    color: block;
    border-bottom: 1rpx solid rgb(237,237,237);
}

.model .modelBody {
    box-sizing: border-box;
    width: 100%;
    padding: 50rpx 50rpx;
    text-align: center;
    color: rgb(178,178,178);
    font-size: 30rpx;
    border-bottom: 1rpx solid rgb(237,237,237);
}

.model .btns {
    display: flex;
    width: 100%;
    text-align: center;
}

.model .btns .agree {
    border-width: 0px;
    color: rgb(26,172,25);
    width: 50%;
}

.model .btns .cancel {
    width: 50%;
    border-width: 0px;
    color: #000;
}

.slide-image {
    width: 40rpx;
    height: 40rpx;
    transform: translate(-50%,-50%);
    position: absolute;
    left: 50%;
    top: 50%;
}

.right-box {
    transform: translateX(-50%);
    position: fixed;
    bottom: 62px;
    left: 50%;
    align-items: center;
    display: flex;
}

.left-box {
    transform: translateX(-50%);
    position: fixed;
    bottom: 62px;
    left: 50%;
    align-items: center;
    display: flex;
}

.right-icon {
    margin-left: 12rpx;
    background-size: 100% 100%;
    width: 32rpx;
    height: 32rpx;
}

.more-icon {
    border-radius: 50%;
    background-color: rgba(0,0,0,0.3);
    margin-left: 12rpx;
    width: 21rpx;
    height: 21rpx;
}

button::after {
    border: none;
}

.myload {
    position: absolute;
    color: rgb(235,237,239);
    z-index: 10;
    width: 100%;
    left: 0rpx;
    top: 400rpx;
    text-align: center;
    font-size: 24rpx;
    padding: 30rpx;
    border-radius: 10rpx;
    box-sizing: border-box;
}

.myload .spinner {
    display: inline-block;
    margin-bottom: 20rpx;
    width: 30rpx;
    height: 30rpx;
    background-color: white;
    animation: rotateplane 1.5s infinite ease-in-out;
}

@-webkit-keyframes rotateplane {
    0% {
        -webkit-transform: perspective(30rpx);
    }

    50% {
        -webkit-transform: perspective(30rpx) rotateY(180deg);
    }

    100% {
        -webkit-transform: perspective(30rpx) rotateY(180deg) rotateX(180deg);
    }
}

@keyframes rotateplane {
    0% {
        transform: perspective(30rpx) rotateX(0deg) rotateY(0deg);
    }

    50% {
        transform: perspective(30rpx) rotateX(-180.1deg) rotateY(0deg);
    }

    100% {
        transform: perspective(30rpx) rotateX(-180deg) rotateY(-179.9deg);
    }
}

.img-box {
}

.scroll-box {
    height: calc(100vh - 172rpx);
}