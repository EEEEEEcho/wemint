scroll-view.contain {
    color: #fff;
    min-height: 100vh;
    border: box-sizing;
}

image {
    border: 0;
    vertical-align: bottom;
}

.click-big-btn {
    position: absolute;
    top: 10rpx;
    width: 167rpx;
    height: 20rpx;
    right: 30rpx;
}

.top_flex {
    border-bottom: 2rpx solid #666;
    position: fixed;
    top: 0;
    z-index: 90000;
    background: #474952;
}

.top {
    height: 120rpx;
}

.top view {
    float: left;
    margin-left: 30rpx;
    margin-top: 30rpx;
    line-height: 58rpx;
    font-family: NotoSansCJKsc-DemiLight;
    font-size: 24rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: center;
    border: 2px solid transparent;
    box-sizing: border-box;
}

.item {
    min-width: 180rpx;
    display: inline-block;
}

.preview {
    padding-top: 120rpx;
}

.preview {
    padding: 120rpx 30rpx 0 30rpx;
    overflow: hidden;
    background: #474952;
}

.preview view {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.preview view .left {
    font-family: NotoSansCJKsc-Regular;
    font-size: 38rpx;
    color: #FFFFFF;
    line-height: 100rpx;
    width: 70%;
    overflow: hidden;
}

.preview view .right {
    font-family: NotoSansCJKsc-DemiLight;
    font-size: 20rpx;
    color: #FFFFFF;
    overflow: hidden;
    display: block;
}

.swipe image {
    width: 100%;
}

.swipe {
    background: #fff;
    width: 690rpx;
    height: 697rpx;
    margin: 30rpx auto;
    margin-bottom: 0rpx;
}

.tip {
    display: flex;
    justify-content: center;
    height: 60rpx;
    margin-top: 10rpx;
    margin-bottom: 50rpx;
    position: relative;
}

.tip image {
    width: 20rpx;
    height: 30rpx;
    padding: 15rpx;
    position: absolute;
}

.pre {
    left: -50rpx;
}

.next {
    right: -50rpx;
}

.tip .text {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
}

.tip text {
    padding: 0 54rpx;
    font-family: NotoSansCJKsc-Regular;
    font-size: 32rpx;
    color: #FFFFFF;
    text-align: center;
    line-height: 60rpx;
}

.con {
    overflow: auto;
    background: #fff;
    position: relative;
}

.con1 {
    height: calc(100vh - 120rpx - 110rpx - 40rpx - 100rpx);
}

.con2 {
    height: calc(100vh - 120rpx - 110rpx - 40rpx);
}

.con3 {
    height: calc(100vh - 120rpx - 110rpx - 74rpx);
}

.con .positionImg {
    width: 690rpx;
    margin: 0rpx 30rpx;
}

.con .hackBackImg {
    width: 690rpx;
}

.con .mark-content {
    position: relative;
    box-sizing: border-box;
    margin: 30rpx;
    width: 690rpx;
}

.con .mark {
    position: absolute;
    width: 690rpx;
    top: 0rpx;
    left: 0rpx;
    font-size: 24rpx;
    box-sizing: border-box;
    height: 100%;
    padding: 30rpx;
    background-image: linear-gradient(-180deg,rgba(50,47,51,0.00) 2%,#322F33 92%);
}

.con .other-title {
    width: 361rpx;
    height: 59rpx;
    margin-top: 30rpx;
    margin-left: 194.5rpx;
    margin-bottom: 30rpx;
}

.con .item-title {
    font-size: 34rpx;
    color: #FFFFFF;
    position: absolute;
    left: 30rpx;
    bottom: 60rpx;
}

.con .item-content {
    opacity: 0.9;
    font-size: 26rpx;
    color: #FFFFFF;
    line-height: 30rpx;
    position: absolute;
    bottom: 30rpx;
    left: 30rpx;
}

.remark {
    font-family: NotoSansCJKsc-Regular;
    font-size: 14.5rpx;
    color: #000000;
    text-align: center;
    height: 40rpx;
    line-height: 38rpx;
    background: #F4F4F4;
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 100rpx;
}

.IM {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100rpx;
}

.IM button {
    width: 100%;
    height: 100rpx;
    border: 0;
    border-radius: 0;
}

.myload {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    z-index: 10;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.8);
    box-sizing: border-box;
}

.myload .spinner {
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    background-color: white;
    animation: rotateplane 1.5s infinite ease-in-out;
}

@-webkit-keyframes rotateplane {
    0% {
        -webkit-transform: perspective(30rpx);
    }

    50% {
        -webkit-transform: perspective(30rpx) rotateY(180deg);
    }

    100% {
        -webkit-transform: perspective(30rpx) rotateY(180deg) rotateX(180deg);
    }
}

@keyframes rotateplane {
    0% {
        transform: perspective(30rpx) rotateX(0deg) rotateY(0deg);
    }

    50% {
        transform: perspective(30rpx) rotateX(-180.1deg) rotateY(0deg);
    }

    100% {
        transform: perspective(30rpx) rotateX(-180deg) rotateY(-179.9deg);
    }
}