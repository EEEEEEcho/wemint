.container {
    background: #f5f5f5;
}

.section-img {
    width: 100%;
    height: 150rpx;
    vertical-align: top;
}

.custom-item {
    color: #2E2E2E;
    font-size: 32rpx;
    margin-bottom: 30rpx;
    position: relative;
}

.section-btn {
    float: right;
    line-height: 48rpx;
    padding: 0 24rpx;
    text-align: center;
    border-radius: 6rpx;
    font-size: 32rpx;
    color: #2E2E2E;
    font-weight: normal;
    border: 1px solid #2E2E2E;
}

.custom-card {
    background: #fff;
    border-radius: 6rpx;
    box-shadow: 0 2px 3px 0 rgba(206,206,206,0.50);
}

.custom-card-box {
    position: relative;
}

.custom-item-img {
    width: 690rpx;
    height: 284rpx;
    vertical-align: top;
    border-radius: 6rpx 6rpx 0 0;
}

.custom-feature-list {
    box-sizing: border-box;
    position: absolute;
    bottom: 16rpx;
    width: 100%;
    display: flex;
    padding-left: 10rpx;
    background: #fff;
    position: relative;
    z-index: 1;
}

.custom-feature {
    line-height: 40rpx;
    padding: 0 18rpx;
    border-radius: 20rpx;
    text-align: center;
    font-size: 24rpx;
    color: #9B9B9B;
    border: 1px solid #9B9B9B;
    margin-right: 10rpx;
}

.custom-item-info {
    padding: 18rpx 20rpx 12rpx;
    font-size: 24rpx;
    color: #D5D5D5;
    line-height: 50rpx;
}

.custom-item-rank {
    font-size: 36rpx;
    color: #2E2E2E;
    font-weight: bold;
    margin-right: 20rpx;
}

.custom-rank {
    font-size: 28rpx;
    color: #9B9B9B;
    line-height: 50rpx;
    margin: 30rpx 0 10rpx;
}

.red {
    color: red;
}

.custom-like {
    position: absolute;
    top: 15rpx;
    right: 15rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 32rpx;
    color: #aaa;
}

.icon-like {
    width: 40rpx;
    height: 40rpx;
    vertical-align: top;
}

.section-rank {
    margin: 50rpx 30rpx 0;
}

.rank-star-info {
    display: flex;
    font-size: 22rpx;
    color: #9B9B9B;
    align-items: center;
    padding-bottom: 14rpx;
    position: relative;
}

.rank-star-avatar {
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
    margin-left: 17rpx;
}

.custom-tag {
    position: absolute;
    top: 23rpx;
    left: 0;
    line-height: 60rpx;
    background-image: linear-gradient(-38deg,#FAAA8A 0%,#FF652B 100%);
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.12);
    text-align: center;
    padding: 0 10rpx;
    color: #fff;
    border-radius: 0 6rpx 6rpx 0;
    display: flex;
    align-items: center;
}

.custom-tag-2 {
    background: linear-gradient(225deg,rgba(238,204,157,1) 0%,rgba(255,175,120,1) 100%);
}

.custom-tag-3 {
    background-image: linear-gradient(-38deg,#B5D09B 0%,#FFDA8B 100%);
}

.icon-hot {
    width: 30rpx;
    height: 36rpx;
    margin-left: 4rpx;
}

.section-card {
    display: flex;
    flex-wrap: wrap;
}

.rank-star-box {
    background: #FFFFFF;
    margin-left: 30rpx;
    margin-bottom: 30rpx;
    width: 330rpx;
    box-shadow: 1px 1px 1px 1px rgba(213,213,213,0.47);
    position: relative;
}

.rank-star-album {
    position: relative;
}

.rank-star-img {
    width: 330rpx;
    height: 256rpx;
    vertical-align: top;
}

.rank-star-info {
    display: flex;
    font-size: 22rpx;
    color: #9B9B9B;
    align-items: center;
    position: relative;
    z-index: 1;
}

.rank-star-avatar {
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
    margin-left: 17rpx;
    border-radius: 50%;
}

.featrue-list {
    display: flex;
    padding: 90rpx 60rpx 0;
    justify-content: space-between;
}

.feature {
    flex: 1;
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #D2BE73;
}

.icon-privilege {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.copywrite {
    font-size: 20rpx;
    color: #9B9B9B;
    margin-top: 20rpx;
    margin-bottom: 30rpx;
    text-align: center;
}

.bottom {
    line-height: 100rpx;
    font-size: 36rpx;
    color: #FFFFFF;
    text-align: center;
    background-image: linear-gradient(-41deg,#EDD48D 14%,#B78D4C 100%);
    margin-top: 123rpx;
}