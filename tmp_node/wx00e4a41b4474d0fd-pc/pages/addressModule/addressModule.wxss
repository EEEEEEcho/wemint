.addressModuleContainer {
    position: relative;
    width: 100vw;
}

.addressModuleContainer-top {
    position: relative;
    width: 100%;
    height: 1rpx;
}

.addressModuleSearch {
    position: relative;
    width: 670rpx;
    height: 68rpx;
    margin-left: 40rpx;
    margin-top: 32rpx;
}

.addressModuleSearch-bg {
    position: absolute;
    width: 670rpx;
    height: 68rpx;
    border-radius: 34rpx;
    background-color: #000000;
    opacity: 0.11;
}

.addressModuleSearch-icon {
    width: 32rpx;
    height: 34rpx;
    margin: 17rpx;
}

.addressModuleSearch-input {
    position: absolute;
    width: calc(670rpx - 68rpx - 32rpx);
    height: 68rpx;
    top: 0px;
    left: 68rpx;
    font-size: 12px;
    color: #1A1B20;
}

.addressModuleSearch-placeholder {
    color: #B4B4B4;
    font-size: 12px;
}

.cityListContainer {
    position: relative;
    width: 100%;
}

.searchLetter {
    position: fixed;
    right: 0;
    width: 50rpx;
    text-align: center;
    justify-content: center;
    display: flex;
    flex-direction: column;
    color: #666;
    z-index: 1;
}

.searchLetter view {
    margin-top: 20rpx;
}

.touchClass {
}

.showSlectedLetter {
    background-color: rgba(0,0,0,0.5);
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 50%;
    left: 50%;
    margin: -100rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    font-size: 52rpx;
    z-index: 1;
}

.selection {
    display: flex;
    width: 100%;
    flex-direction: column;
    margin-top: 20rpx;
}

.item_letter {
    display: flex;
    background-color: #f5f5f5;
    height: 40rpx;
    padding-left: 34rpx;
    align-items: center;
    font-size: 24rpx;
    color: #666;
}

.item_city {
    display: flex;
    background-color: #fff;
    height: 100rpx;
    padding-left: 34rpx;
    align-items: center;
    border-bottom: 1rpx solid #ededed;
    font-size: 24rpx;
    color: #666;
}

.hotcity-common {
    font-size: 24rpx;
    color: #666;
    padding: 0 0 0 30rpx;
    font-weight: bold;
}

.thisCityName {
    display: inline-block;
    background-color: #D9D9D9;
    height: 52rpx;
    line-height: 52rpx;
    border-radius: 26rpx;
    font-size: 24rpx;
    color: #1C1C1C;
    text-align: center;
    min-width: 149.5rpx;
    padding-left: 16rpx;
    padding-right: 16rpx;
    margin: 20rpx 0 40rpx 30rpx;
}

.thisCity {
    padding-top: 30rpx;
}

.thishotText {
    color: #2ab4ff;
    font-size: 20rpx;
    margin: 0!important;
}

.slectCity {
    border-color: #2ab4ff!important;
}

.slectCity view {
    color: #2ab4ff!important;
}

.history-grid-container {
    position: relative;
    width: 100%;
}

.history-grid {
    position: relative;
    float: left;
    width: 142rpx;
    margin-right: 16rpx;
}

.history-grid-label {
    background-color: #D9D9D9;
    height: 52rpx;
    line-height: 52rpx;
    border-radius: 26rpx;
    font-size: 24rpx;
    color: #1C1C1C;
    text-align: center;
    min-width: 119rpx;
    padding-left: 16rpx;
    padding-right: 16rpx;
    margin: 20rpx 0 4rpx 30rpx;
    display: block;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.historyCityListContainer {
    position: relative;
    width: 100%;
    margin-bottom: 40rpx;
}

.hotCityListContainer {
    position: relative;
    width: 100%;
    margin-bottom: 40rpx;
}

.hot-grid-container {
    position: relative;
    width: 100%;
}

.hot-grid {
    position: relative;
    float: left;
    width: 149.5rpx;
    margin-right: 16rpx;
}

.hot-grid-label {
    background-color: #D9D9D9;
    height: 52rpx;
    line-height: 52rpx;
    border-radius: 26rpx;
    font-size: 24rpx;
    color: #1C1C1C;
    text-align: center;
    min-width: 149.5rpx;
    margin: 20rpx 0 4rpx 30rpx;
    display: block;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}