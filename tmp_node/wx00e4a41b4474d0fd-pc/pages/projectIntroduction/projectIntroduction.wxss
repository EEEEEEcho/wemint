scroll-view {
    padding-bottom: 100rpx;
}

.entry {
    width: 100%;
    background-image: linear-gradient(-41deg,#EDD48D 14%,#B78D4C 100%);
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #FFFFFF;
    letter-spacing: 5.14rpx;
    text-align: center;
    line-height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2;
}

.bg {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}