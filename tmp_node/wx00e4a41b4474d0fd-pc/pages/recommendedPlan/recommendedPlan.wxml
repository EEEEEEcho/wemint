<myLoading id="myLoading"></myLoading>
<scroll-view>
    <c-img cStyle="width: 100%;height: 380rpx;" mode="aspectFill" src="{{layout.senceImage}}"></c-img>
    <view bind:tap="onRoute3D" class="button-3d" wx:if="{{programme.image3d}}">查看3D效果</view>
    <view class="h1">{{layout.name}}</view>
    <view class="taplist">
        <view bindtap="checkout" class="tapItem {{0==current?'current':''}}" data-num="0">
            <view class="line" wx:if="{{0==current}}"></view>
            方案详情
        </view>
        <view bindtap="checkout" class="tapItem {{1==current?'current':''}}" data-num="1">
            <view class="line" wx:if="{{1==current}}"></view>
            户型图
        </view>
        <view bindtap="checkout" class="tapItem {{index+2==current?'current':''}}" data-num="{{index+2}}" wx:for="{{programme.spaces}}" wx:key="index">
            <view class="line" wx:if="{{index+2==current}}"></view>
            {{item.name}}
        </view>
    </view>
    <swiper bindchange="change" class="swiper" current="{{current}}" style="height:{{imgUrlPram[current]||534}}rpx;width: 710rpx">
        <swiper-item>
            <c-img bindloaded="imgOnload" cStyle="width: 100%;height: 100%;" index="0" src="{{programme.image3dPlane}}"></c-img>
        </swiper-item>
        <swiper-item>
            <c-img bindloaded="imgOnload" cStyle="width: 100%;height: 100%;" index="1" src="{{programme.imageUrl}}"></c-img>
        </swiper-item>
        <swiper-item wx:for="{{programme.spaces}}" wx:key="index">
            <c-img bindloaded="imgOnload" cStyle="width: 100%;height: 100%;" index="{{index+2}}" src="{{item.imageUrl}}"></c-img>
        </swiper-item>
    </swiper>
    <view class="manage">
        <view class="icon"></view>
        <c-img cClass="headc-img" cStyle="width: 120rpx;height: 120rpx;position: absolute;left: 40rpx;top:-20rpx" src="{{designer.headImage}}"></c-img>
        <text class="name">{{designer.name}}</text>
        <text class="level">{{designer.desc}}</text>
        <text class="description">{{designer.words}}</text>
        <text class="tip">设计师评语</text>
    </view>
    <view class="rightsBox">
        <view class="rights">
            <view class="right1" style="{{'background: url('+serverUrl+'个性定制_白底专用@1x.png) no-repeat left center/50rpx 50rpx;'}}">定制特权</view>
            <view class="right1" style="{{'background: url('+serverUrl+'随时退款_白底专用@1x.png) no-repeat left center/50rpx 50rpx;'}}">退款特权</view>
            <view class="right1" style="{{'background: url('+serverUrl+'折扣礼遇_白底专用@1x.png) no-repeat left center/50rpx 50rpx;'}}">入选特权</view>
        </view>
        <text class="warm">定制服务，elab拥有最终完整解释权</text>
    </view>
</scroll-view>
<view class="entry">
    <view bindtap="toIM" class="save_icon" style="{{'background:#606060 url('+serverUrl+'客服.png) no-repeat center center/56rpx 56rpx;'}}"></view>
    <view bindtap="save" class="save" style="background-image:{{!hasPlan?'linear-gradient(-190deg, #5B5B5B 0%, #777777 68%)':'linear-gradient(-41deg, #EDD48D 14%, #B78D4C 100%)'}}">存入方案</view>
    <view bindtap="toDiy" class="toDiy" wx:if="{{!hasPlan}}">我也要DIY</view>
</view>
