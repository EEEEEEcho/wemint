.view {
    background: #272a34;
    width: 100vw;
    height: 100vh;
    padding-left: 100rpx;
    padding-top: 315rpx;
    box-sizing: border-box;
}

.topText {
    font-family: PingFangSC-Semibold;
    font-size: 40rpx;
    color: #FFFFFF;
    line-height: 56rpx;
    font-weight: 600;
}

.centerText {
    padding-top: 30rpx;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #FFFFFF;
}

.centerText view {
    padding-top: 80rpx;
}

.btn {
    margin: 0;
    margin-top: 220rpx;
    width: 550rpx;
    height: 80rpx;
    border-radius: 80rpx;
    background: #5370FF!important;
    background-image: linear-gradient(-270deg,rgba(255,255,255,0.25) 0%,rgba(255,255,255,0.00) 100%)!important;
    box-shadow: 0 2rpx 20rpx 0 rgba(0,0,0,0.10);
    border-radius: 40rpx;
    font-family: PingFangSC-Medium;
    font-size: 32rpx;
    color: #FFFFFF!important;
    text-align: center;
}

.coverImage {
    width: 100vw;
}