</view>
<view class="shareCover" wx:if="{{isShare}}">
    <text class="share-title">是否分享到朋友圈</text>
    <view class="share-view">
        <text bindtap="cancelShare" class="share-cancel">取消</text>
        <button bindgetuserinfo="getUserInfo" class="share-confirm" openType="getUserInfo">确定</button>
    </view>
</view>
<view class="mask2" wx:if="{{isShare}}"></view>
