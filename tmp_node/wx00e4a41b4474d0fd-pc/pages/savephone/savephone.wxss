.close-button {
    position: absolute;
    top: 20px;
    right: 20px;
    height: 20px;
    width: 20px;
}

.close-button image {
    width: 20px;
    height: 20px;
}

.title-box {
    box-sizing: border-box;
    padding: 10px 0 0 20px;
    width: 100%;
}

.title-one {
    font-size: 38px;
    font-weight: bold;
}

.title-two {
    font-size: 18px;
}

.input-box {
    width: 100%;
    box-sizing: border-box;
    margin-top: 20px;
    padding: 20px;
    font-size: 12px;
}

.input-box input {
    height: 40px;
    line-height: 40px;
    background-color: #F3F3F3;
    border: none;
    padding: 0 15px;
    border-radius: 4px;
}

.input-box button {
    height: 40px;
    background-color: #44B3AC;
    color: #fff;
    line-height: 40px;
    margin-left: 10px;
    font-size: 12px;
}

.top-box {
    display: flex;
    justify-content: space-between;
}

.top-box input {
    flex: 2;
}

.tel-input {
    width: 70%;
}

.bottom-box {
    margin-top: 10px;
    width: 100%;
}

.sure {
    z-index: 20;
    width: 50px;
    margin: 40vh auto 0px;
    height: 50px;
}

.sure image {
    height: 50px;
    width: 50px;
}

.dialog {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 68vw;
    background: rgba(0,0,0,0.6);
    padding: 30px 0;
    border-radius: 8px;
    box-sizing: border-box;
}

.dialog-top {
    width: 100%;
    text-align: center;
    font-size: 20px;
    font-weight: bold;
    color: #fff;
}

.dialog-bottom {
    margin-top: 5px;
    width: 100%;
    text-align: center;
    font-size: 12px;
    color: #fff;
}