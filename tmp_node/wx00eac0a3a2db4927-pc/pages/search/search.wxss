page {
    background-color: #fff;
}

.record {
    width: 682rpx;
    margin-left: 34rpx;
}

.hot,.history {
    display: flex;
    flex-direction: column;
}

.hot_title,.history_title {
    font-size: 30rpx;
    color: #51515c;
    font-weight: bold;
}

.hot_label,.history_label {
    display: flex;
    flex-direction: row;
    flex-flow: wrap;
}

.label {
    font-size: 28rpx;
    color: #51515c;
    background: #f4f4f4;
    border-radius: 50rpx;
    height: 34rpx;
    line-height: 34rpx;
    text-align: center;
    padding: 10rpx 20rpx;
    margin-left: 30rpx;
    margin-top: 20rpx;
}

.history {
    margin-top: 50rpx;
}

.history_headline {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.waste {
    width: 30rpx;
    height: 32rpx;
}