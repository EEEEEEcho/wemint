<navigate cartPage="{{cartPage}}"></navigate>
<view class="servicePlanContain" style="margin-top: {{navH+status}}px">
    <view class="productList row" wx:if="{{relatedProductionList.length>0}}">
        <text class="selected">已选</text>
        <view class="showProducts row">
            <scroll-view scrollX class="scrollViewH">
                <view class="tab" style="margin-right: {{index===imageList.length-1?'':'20'}}rpx;" wx:for="{{relatedProductionList}}">
                    <image class="goodImages" lazyLoad="true" mode="aspectFill" src="{{item.covers[0]}}"></image>
                </view>
            </scroll-view>
        </view>
    </view>
    <view class="goodsListPanel column">
        <view class="goodPanel row" style="margin-bottom:{{index==relatedProductionList.length-1?'100':'30'}}rpx;" wx:for="{{relatedProductionList}}">
            <view class="good column">
                <view class="goodDetail row">
                    <image class="goodImage" lazyLoad="true" mode="aspectFill" src="{{item.covers[0]}}"></image>
                    <view class="goodInfo column">
                        <text class="goodName">{{item.title}}</text>
                        <view class="pricePair row">
                            <text class="newPricePre">￥</text>
                            <text class="newPrice">{{servicePlanGetPrice.getPrice(item.minSalesPrice)}}</text>
                        </view>
                    </view>
                </view>
                <view class="label row">
                    <view class="tips">
                        <view class="goodCount">库存:</view>
                        <view class="goodStyle">风格:
                <text class="goodStyle" wx:for="{{item.tags}}">{{item}}  </text>
                        </view>
                    </view>
                    <image class="shopLogo" lazyLoad="true" mode="aspectFill" src="{{item.shopLogo}}"></image>
                </view>
            </view>
            <view catchtap="giveItUp" class="checkedImages" data-goodsUuid="{{item.goodsUuid}}" data-index="{{index}}">
                <image class="checkedImage" src="http://oss.shangmian.xin/weixin_applets_mine_coupon_check_fill.png"></image>
            </view>
        </view>
    </view>
    <empty iconPath="http://oss.shangmian.xin/weixin_applets_icon_order_empty_view.png" isShow="{{relatedProductionList.length==0}}" textContent="暂无选择商品"></empty>
</view>
<view class="countPrice row" wx:if="{{relatedProductionList.length>0}}">
    <view class="account">
        <text class="accountText">共</text>
        <text class="accountNum">{{total}}件</text>
        <text class="accountText">商品</text>
    </view>
    <view class="priceCount">
        <text class="count">合计:</text>
        <text class="price">￥{{totalPrice}}</text>
    </view>
    <view class="notice">购买须知</view>
</view>
<loading-view isShow="{{isShowLoad}}"></loading-view>
<wxs module="servicePlanGetPrice" src="servicesPlan.wxs" />