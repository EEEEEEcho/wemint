<navigate cartPage="{{cartPage}}"></navigate>
<view class="houseTypeContain" style="margin-top: {{navH+status}}px">
    <view class="houseArea row">
        <image class="houseImage" lazyLoad="true" mode="aspectFill" src="{{buildingData.building.images}}"></image>
        <view class="houseInfo column">
            <text class="houseName">{{buildingData.building.name}}</text>
            <text class="housePosition">{{buildingData.building.addressDetail}}</text>
        </view>
        <view class="peopleCount">{{buildingData.hot}}人参考</view>
    </view>
    <view class="show_product">
        <scroll-view scrollX class="scroll-view_H">
            <view bindtap="chooseOne" class="tab" data-groupUuid="{{item.groupUuid}}" data-index="{{index}}" style="margin-right: {{index===dataList.length-1?'':'20'}}rpx;" wx:for="{{buildingData.apartmentGroups}}">
                <text class="swiper {{active===index?'swipertab_select':'swipertab'}}">{{item.name}}</text>
            </view>
        </scroll-view>
    </view>
    <view class="houseTypeImage">
        <image catchtap="toPage" class="typeImage" data-apartmentUuid="{{item.apartmentUuid}}" lazyLoad="true" mode="aspectFill" src="{{item.cover}}" style="margin-bottom:{{index==houseTypeList.length-1?'80':'30'}}rpx;" wx:for="{{houseTypeList}}"></image>
    </view>
</view>
<loading-view isShow="{{isShowLoad}}"></loading-view>
