<navigate cartPage="{{cartPage}}"></navigate>
<view class="favorite_container" style="margin-top: {{navH+status+10}}px;">
    <view class="favorite_group">
        <view catchtap="getGoodDetail" class="favorite" data-good="{{item}}" wx:for="{{favoriteList}}">
            <image class="favorite_img" lazyLoad="true" mode="aspectFill" src="{{item.covers[0]}}"></image>
            <view class="favorite_params">
                <view class="favorite_proname">{{item.title}}</view>
                <view class="favorite_proprice">
                    <text class="newPrice_pre">¥</text>
                    <text class="newPrice">{{item.isExemptGoods==1?item.activityPrice/100:item.minSalesPrice/100}}</text>
                    <text class="oldPrice_pre">¥</text>
                    <text class="oldPrice">{{item.maxMarketPrice/100}}</text>
                </view>
                <view class="favorite_prolabel">
                    <view class="label1" wx:for="{{item.tags}}" wx:for-item="tagItem">{{tagItem}}</view>
                </view>
                <view catchtap="cancelCollection" class="favorite_probtn" data-goodsUuid="{{item.goodsUuid}}">取消收藏</view>
            </view>
        </view>
    </view>
    <empty iconPath="http://oss.shangmian.xin/weixin_applets_icon_empty_view.png" isShow="{{favoriteList.length==0}}" textContent="您还没有收藏任何商品哦" wx:if="{{!isShowLoad}}"></empty>
    <view class="loadMoreLayout" wx:if="{{isLoadMore}}">
        <text class="loadMoreText">加载更多...</text>
    </view>
</view>
<loading-view isShow="{{isShowLoad}}"></loading-view>
