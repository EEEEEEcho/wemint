page {
    background-color: #f4f4f4;
}

.couponDetail {
    width: 100%;
    align-items: center;
}

.topLayout {
    width: 92%;
    height: 0;
    padding-bottom: 54%;
    position: relative;
    margin-top: 4%;
}

.detailBg {
    width: 100%;
    height: 100%;
    position: absolute;
}

.couponContent {
    width: 100%;
    height: 100%;
    position: absolute;
    align-items: center;
}

.couponTitle {
    font-size: 30rpx;
    color: #51515c;
    text-align: center;
    height: 82rpx;
    line-height: 82rpx;
    letter-spacing: 3rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    padding: 0rpx 24rpx;
}

.couponPrice {
    margin-top: 8%;
    font-size: 52rpx;
    color: #ed7b43;
    letter-spacing: 3rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    padding: 0rpx 24rpx;
}

.couponRemark {
    font-size: 26rpx;
    color: #999999;
    margin-top: 5%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    padding: 0rpx 24rpx;
}

.couponTime {
    font-size: 28rpx;
    color: #999999;
    margin-top: 1%;
}

.centerLayout {
    width: 92%;
    background: #ffffff;
    margin-top: 4%;
    border-radius: 20rpx;
}

.noticeLayout {
    width: 100%;
    align-items: center;
}

.noticeLabel {
    font-size: 24rpx;
    color: #51515c;
    padding-left: 32rpx;
    padding-top: 32rpx;
}

.noticeContent {
    font-size: 24rpx;
    color: #999999;
    padding: 32rpx 32rpx 0 8rpx;
}

.captionLayout {
    width: 100%;
    align-items: center;
}

.captionLabel {
    color: #51515c;
    font-size: 24rpx;
    padding: 32rpx 0 32rpx 32rpx;
}

.captionContent {
    color: #999999;
    font-size: 24rpx;
    padding-left: 8rpx;
    padding-right: 32rpx;
}

.bottomLayout {
    width: 100%;
    height: 40%;
    align-items: center;
    background: #ffffff;
    margin-top: auto;
}

.useGood {
    width: 80%;
    height: 72rpx;
    font-size: 33rpx;
    color: #ffffff;
    background: #f1763a;
    text-align: center;
    line-height: 72rpx;
    border-radius: 36rpx;
    margin-top: 8%;
    letter-spacing: 5rpx;
}

.shareLayout {
    width: 100%;
    align-items: center;
    justify-content: center;
    margin-top: 4%;
}

.shareLine {
    width: 10%;
    height: 2rpx;
    background: #3f3f3f;
    margin: 24rpx;
}

.shareTitle {
    font-size: 24rpx;
    color: #51515c;
}

.shareIconLayout {
    width: 100%;
    align-items: center;
    justify-content: center;
    margin-top: 4%;
}

.shareIcon {
    width: 100rpx;
    height: 100rpx;
    margin: 12rpx;
}