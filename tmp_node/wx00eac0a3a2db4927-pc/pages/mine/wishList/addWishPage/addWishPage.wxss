.loadMoreLayout {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.loadMoreText {
    padding: 24rpx 0;
    font-size: 25rpx;
    color: #51515c;
    text-align: center;
}

.searchbar {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 642rpx;
    height: 28px;
    border-radius: 50rpx;
    background: #f4f4f4;
    margin-left: 54rpx;
}

.loupe {
    width: 16px;
    height: 16px;
    margin-left: 16px;
    margin-right: 6px;
}

.placeholder {
    font-size: 14px;
    color: #ccc;
    width: 320rpx;
}

.loupe_txt {
    font-size: 14px;
    color: #51515c;
    width: 540rpx;
}

.wish_list_panel {
    width: 682rpx;
    margin-left: 34rpx;
    margin-top: 30rpx;
    padding-bottom: 30rpx;
}

.favorite {
    display: flex;
    flex-direction: row;
    border-radius: 24rpx;
    box-shadow: 2rpx 2rpx 10rpx 2rpx #e9e8e8;
}

.favorite_img {
    width: 190rpx;
    height: 190rpx;
    border-radius: 8rpx;
    margin: 30rpx 20rpx 0 28rpx;
}

.favorite_params {
    display: flex;
    flex-direction: column;
    width: 411rpx;
}

.favorite_proname {
    font-size: 30rpx;
    color: #51515c;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    margin-top: 30rpx;
    font-weight: bold;
}

.favorite_proprice {
    margin-top: 8rpx;
}

.newPrice_pre {
    font-size: 24rpx;
    color: #f1763a;
}

.newPrice {
    font-size: 38rpx;
    color: #f1763a;
    font-weight: bold;
    margin-right: 24rpx;
}

.oldPrice_pre,.oldPrice {
    font-size: 30rpx;
    color: #aeaeb4;
    text-decoration: line-through;
}

.favorite_prolabel {
    display: flex;
    flex-direction: row;
    flex-flow: wrap;
    margin-top: 10rpx;
}

.label1 {
    font-size: 20rpx;
    color: #fff;
    background: #f1763a;
    padding: 2rpx 16rpx;
    height: 32rpx;
    text-align: center;
    line-height: 32rpx;
    border-radius: 50rpx;
    margin-right: 14rpx;
    margin-bottom: 10rpx;
}

.favorite_probtn {
    background: #ccc;
    width: 36rpx;
    height: 36rpx;
    border-radius: 18rpx;
    margin-top: 10rpx;
    margin-left: auto;
    margin-bottom: 30rpx;
    position: relative;
}

.check_img {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.btn {
    width: 645rpx;
    height: 86rpx;
    line-height: 86rpx;
    text-align: center;
    background: #f1763a;
    color: #fff;
    font-size: 36rpx;
    letter-spacing: 4rpx;
    border-radius: 50rpx;
    position: fixed;
    bottom: 30rpx;
    left: 53rpx;
}

.finish {
    background: #ec6b2a;
}