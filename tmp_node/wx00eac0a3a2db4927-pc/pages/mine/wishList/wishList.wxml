<navigate cartPage="{{cartPage}}"></navigate>
<view class="wish_list_container" style="margin-top:{{navH+status+10}}px">
    <view class="wish_list_panel">
        <view catchtap="getWishDetail" class="wish_list" data-wish="{{wish}}" data-wishIndex="{{wishIndex}}" style="margin-bottom:{{wishIndex==wishMenuList.length-1?180:30}}rpx;" wx:for="{{wishMenuList}}" wx:for-index="wishIndex" wx:for-item="wish">
            <view class="list_title row">
                <text class="list_name">{{wish.title}}</text>
                <text class="list_count">{{wish.total}}件心愿</text>
                <image class="arrow_black" src="http://oss.shangmian.xin/weixin_applets_mine_arrow_black.png"></image>
            </view>
            <view class="list_images row">
                <image class="wish_images" lazyLoad="true" mode="aspectFill" src="{{wish.goodsList.length==0?item:item.covers[0]}}" style="margin-right:{{index==wish.goodsList.length-1?0:20}}rpx;" wx:if="{{index<5}}" wx:for="{{wish.goodsList.length==0?noGoodsList:wish.goodsList}}"></image>
            </view>
        </view>
    </view>
    <view catchtap="addWishMenu" class="addBtn" hoverClass="add">添加心愿单</view>
    <view class="loadMoreLayout" wx:if="{{isLoadMore}}">
        <text class="loadMoreText">加载更多...</text>
    </view>
</view>
<loading-view isShow="{{isShowLoad}}"></loading-view>
<view catchtouchmove="true">
    <view catchtap="closeWishModel" class="cover_screen {{options?'openEdit':'closeEdit'}}" wx:if="{{isEditWish}}"></view>
    <view class="showEditModal {{options?'openEdit':'closeEdit'}}" wx:if="{{isEditWish}}">
        <view class="input_view">
            <input bindinput="getInputValue" class="input_css" maxlength="10" placeholder="请编辑您的心愿名称" placeholderClass="placeholder_css" value="{{inputValue}}"></input>
        </view>
        <view class="btns row">
            <text catchtap="closeWishModel" class="deleteBtn btn">取消</text>
            <text catchtap="sureAdd" class="updateBtn btn">确定</text>
        </view>
    </view>
</view>
