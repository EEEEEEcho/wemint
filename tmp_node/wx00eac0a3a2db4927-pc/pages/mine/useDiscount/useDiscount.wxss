page {
    background-color: #fff;
}

.card {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.card_info {
    position: relative;
}

.cardItem {
    width: 92%;
    height: 0;
    padding-bottom: 25%;
    position: relative;
    margin-bottom: 4%;
}

.cardBg {
    width: 100%;
    height: 100%;
    position: absolute;
}

.cardContent {
    position: absolute;
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100%;
    align-items: center;
}

.cardTitleLayout {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin-left: 24%;
}

.cardTitle {
    color: #ffffff;
    font-size: 38rpx;
    letter-spacing: 3rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.cardRemark {
    color: #ffffff;
    font-size: 24rpx;
    margin-top: 2%;
    opacity: 0.7;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.effectiveTime {
    color: #ffffff;
    font-size: 25rpx;
    opacity: 0.7;
    margin-right: 6%;
}

.check_image {
    position: absolute;
    top: 16rpx;
    right: 16rpx;
}

.check_img {
    width: 36rpx;
    height: 36rpx;
}

.cancel {
    width: 750rpx;
    height: 97rpx;
    background: #fff;
    font-size: 36rpx;
    color: #5fabf2;
    text-align: center;
    line-height: 97rpx;
    border-top: 1rpx solid #e5e5e5;
    position: fixed;
    left: 0;
    bottom: 0;
}