page {
    background-color: #fff;
}

.suggestion {
    margin-left: 32rpx;
}

.sug_cate,.sug_content {
    display: flex;
    flex-direction: column;
}

.sug_cate_title,.sug_content_title {
    font-size: 36rpx;
    color: #51515c;
    font-weight: bold;
    letter-spacing: 2rpx;
}

.sug_content_title {
    margin-top: 40rpx;
}

.sug_cate_label {
    display: flex;
    flex-direction: row;
    flex-flow: wrap;
}

.label {
    font-size: 26rpx;
    color: #aeaeb4;
    background: #f9f9fb;
    border-radius: 50rpx;
    height: 56rpx;
    width: 154rpx;
    line-height: 56rpx;
    text-align: center;
    margin-right: 22rpx;
    margin-top: 40rpx;
}

.label_select {
    background: #ed7b43;
    color: #fff;
}

.sug_content_txt {
    margin-top: 40rpx;
    width: 682rpx;
    padding-bottom: 20rpx;
    font-size: 28rpx;
    border-radius: 24rpx;
    box-shadow: 0rpx 0rpx 16rpx #f0f0f0;
}

.textarea {
    width: 630rpx;
    margin-top: 25rpx;
    margin-left: 25rpx;
    line-height: 50rpx;
    font-size: 26rpx;
    color: #51515c;
}

.placeholder {
    font-size: 26rpx;
    color: #ccc;
}

.describe {
    width: 588rpx;
    height: 65rpx;
    text-align: center;
    margin-left: 95rpx;
    margin-top: 230rpx;
}

.describe_up,.describe_down {
    font-size: 24rpx;
    color: #aeaeb4;
}

.btn {
    width: 682rpx;
    height: 88rpx;
    border-radius: 50rpx;
    font-size: 36rpx;
    color: #fff;
    text-align: center;
    line-height: 88rpx;
    background: #51515c;
    margin-left: 34rpx;
    margin-top: 50rpx;
}