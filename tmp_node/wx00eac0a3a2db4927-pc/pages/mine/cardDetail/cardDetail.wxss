.cardDetail {
    width: 100%;
    align-items: center;
}

.cardTopLayout {
    width: 84%;
    height: 0;
    padding-bottom: 40%;
    position: relative;
    margin-top: 4%;
}

.cardBg {
    width: 100%;
    height: 100%;
    position: absolute;
}

.cardTitle {
    font-size: 38rpx;
    color: #ffffff;
    position: absolute;
    padding: 48rpx 0rpx 0rpx 48rpx;
}

.cardRemark {
    font-size: 23rpx;
    color: #ffffff;
    left: 48rpx;
    top: 100rpx;
    position: absolute;
}

.cardTime {
    font-size: 23rpx;
    color: #ffffff;
    left: 48rpx;
    position: absolute;
    bottom: 32rpx;
}

.limitedTime {
    font-size: 38rpx;
    color: #ffffff;
    position: absolute;
    bottom: 32rpx;
    right: 40rpx;
}

.qrCode {
    width: 360rpx;
    height: 360rpx;
    margin-top: 8%;
}

.privilegeLayout {
    width: 100%;
    align-items: center;
    justify-content: center;
    margin-top: 4%;
}

.privilegeTitle {
    font-size: 30rpx;
    color: #3f3f3f;
    margin: 0rpx 16rpx;
}

.privilegeLine {
    width: 8%;
    height: 2rpx;
    background: #3f3f3f;
}

.ruleText {
    flex: 1;
    padding: 4% 8%;
    font-size: 23rpx;
    color: #51515c;
}