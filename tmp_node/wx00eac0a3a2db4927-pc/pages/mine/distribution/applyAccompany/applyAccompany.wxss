.applyAccompanyContain {
    width: 682rpx;
    margin: 0 34rpx;
}

.applyInformation,.applyNumber {
    box-shadow: 0 0 6rpx 2rpx #edeeee;
    border-radius: 24rpx;
}

.applyNumber {
    margin-top: 40rpx;
    margin-bottom: 60rpx;
}

.applyColumn {
    padding: 24rpx;
    align-items: center;
}

.applyTitle {
    font-size: 28rpx;
    color: #51515c;
    margin-right: auto;
}

.applyContent {
    font-size: 26rpx;
    color: #aeaeb4;
    margin-right: 10rpx;
}

.featuresArrow {
    width: 14rpx;
    height: 24rpx;
}

.lineStyle {
    border-bottom: 1rpx solid #edeeee;
    width: 682rpx;
    margin: 5rpx 0;
}

.submitApply {
    width: 682rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    font-size: 32rpx;
    background: #51515c;
    border-radius: 50rpx;
    text-align: center;
}