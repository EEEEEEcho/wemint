<navigate cartPage="{{cartPage}}"></navigate>
<view style="margin-top: {{navH+status+10}}px;">
    <view class="cash">
        <view class="change_part">
            <view class="change_title">提现金额</view>
            <view class="change row">
                <text class="change_unit">¥</text>
                <input focus bindinput="getInputValue" class="change_size" type="number" value="{{inputValue}}"></input>
            </view>
        </view>
        <view class="cash_tip row">
            <text class="canuse_cash">可用余额 {{balance}} 元</text>
            <text catchtap="getAllCash" class="all">全部提现</text>
        </view>
    </view>
    <view class="cash_btn">
        <view catchtap="getCashOut" class="btn_txt" style="background:{{inputValue>=1?'#ed7b43':'#eee'}};">预计2小时内到账 确认提现</view>
    </view>
</view>
