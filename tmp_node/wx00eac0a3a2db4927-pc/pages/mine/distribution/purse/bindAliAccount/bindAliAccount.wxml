<navigate cartPage="{{cartPage}}"></navigate>
<view style="margin-top: {{navH+status+10}}px;">
    <view class="cashBack">
        <view class="cash column">
            <input bindinput="getPayRealName" class="payId" name="payId" placeholder="请输入支付宝真实姓名" placeholderClass="placeholder" value="{{alipayName}}"></input>
            <view class="hr"></view>
            <input bindinput="getAlipayAccount" class="payRealName" name="payRealName" placeholder="请输入支付宝账号" placeholderClass="placeholder" value="{{alipayAccount}}"></input>
        </view>
        <view class="vali_input">
            <input bindinput="getCode" class="validate" cursorSpacing="120" name="code" placeholder="输入验证码" placeholderClass="placeholder" type="number" value="{{alipayCode}}"></input>
            <text class="vali_code" wx:if="{{isShowInterval}}">重新发送（{{intervalValue}}）</text>
            <text catchtap="getValidateCode" class="vali_code" wx:else>获取验证码</text>
        </view>
        <view catchtap="bindAlipay" class="finishedBtn">完成</view>
    </view>
</view>
