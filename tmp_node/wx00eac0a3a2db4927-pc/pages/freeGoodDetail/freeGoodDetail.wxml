<navigate cartPage="{{cartPage}}" isShareJump="{{isShareJump}}"></navigate>
<view class="gooddetail_container" style="margin-top: {{navH+status+10}}px;">
    <image class="undertone" src="http://oss.shangmian.xin/weixin_applets_good_detail_undertone.png"></image>
    <view class="swiper-imgs">
        <swiper scrollX class="scroll-view_H" nextMargin="100rpx">
            <swiper-item class="product" wx:for="{{goodsInfo.covers}}">
                <image catchtap="previewImg" class="pro_img" data-current="{{index}}" lazyLoad="true" mode="aspectFill" src="{{item}}"></image>
                <view class="num_img" wx:if="{{goodsInfo.covers.length>1}}">
                    <view class="num">
                        <image class="num_back" src="http://oss.shangmian.xin/weixin_applets_good_detail_num_back.png"></image>
                    </view>
                    <view class="img_num">{{index+1}}</view>
                </view>
            </swiper-item>
        </swiper>
    </view>
    <view class="gooddetail panel">
        <view class="detail">
            <text class="goodname">{{goodsInfo.title}}</text>
            <view class="labels">
                <text class="label" wx:for="{{goodsInfo.tags}}">{{item}}</text>
            </view>
            <view class="price">
                <view class="new">
                    <text class="newprice_pre">¥</text>
                    <text class="newprice" wx:if="{{goodsInfo.activityPrice!=undefined}}">{{goodsInfo.activityPrice/100}}</text>
                </view>
                <view class="old">
                    <text class="oldprice_pre">¥</text>
                    <text class="oldprice" wx:if="{{goodsInfo.maxMarketPrice!=undefined}}">{{goodsInfo.maxMarketPrice/100}}</text>
                </view>
            </view>
            <view class="from">
                <view class="fromwhere">{{goodsInfo.shopName}}</view>
                <view catchtap="toShare" class="share">
                    <image class="share_img" src="http://oss.shangmian.xin/weixin_applets_good_detail_share.png"></image>
                    <text class="share_txt">分享</text>
                </view>
            </view>
        </view>
    </view>
    <view catchtap="toPage" class="warrents-img" data-type="保障">
        <view class="warrent-img">
            <view class="complete">
                <view class="noteData row" wx:for="{{notesData}}">
                    <image class="complete-img" src="http://oss.shangmian.xin/weixin_applets_good_detail_complete.png"></image>
                    <text class="complete-txt">{{item.title}}</text>
                </view>
            </view>
            <view class="warrents" wx:if="{{goodsInfo.shopType==3}}">全球严选·一线大牌·售后无忧·质优价美</view>
            <view class="warrents" wx:else>本地家居·售后无忧·线上决策·线下体验·额外省钱</view>
        </view>
        <image class="arrow" src="http://oss.shangmian.xin/weixin_applets_icon_arrow_right.png"></image>
    </view>
    <view catchtap="toPage" class="product_params panel" data-type="免单规则">
        <view class="param_title">
            <text class="title">免单规则</text>
            <view class="more">
                <text class="moreinfo">详细信息</text>
                <image class="more_arrow" src="http://oss.shangmian.xin/weixin_applets_icon_arrow_right.png"></image>
            </view>
        </view>
        <text class="exemptionRule">{{exemptionRule}}</text>
        <view class="ruleLayout">
            <view class="ruleRow" wx:for="{{ruleList}}">
                <view class="ruleCircle"></view>
                <text class="ruleText">{{item}}</text>
                <image class="rightArrow" src="http://oss.shangmian.xin/weixin_applets_icon_ic_right_arrow.png" wx:if="{{index<3}}"></image>
            </view>
        </view>
    </view>
    <free-group bindonJoinFree="onJoinFree" goodsUuid="{{goodsUuid}}" id="freeGroup"></free-group>
    <view catchtap="toPage" class="product_params panel" data-type="相关参数">
        <view class="param_title">
            <text class="title">商品相关参数</text>
            <view class="more">
                <text class="moreinfo">详细信息</text>
                <image class="more_arrow" src="http://oss.shangmian.xin/weixin_applets_icon_arrow_right.png"></image>
            </view>
        </view>
        <view class="params">
            <view class="param" wx:for="{{parameter}}">
                <view class="dot"></view>
                <text class="dot_title">{{item.name}}</text>
                <text class="dot_detail">{{item.value}}</text>
            </view>
        </view>
    </view>
    <view catchtap="toPage" class="product_comment panel" data-type="评价" wx:if="{{comment.nickname!=null}}">
        <view class="comment_title">
            <text class="title">商品评价</text>
            <view class="more">
                <text class="moreinfo">更多评价</text>
                <image class="more_arrow" src="http://oss.shangmian.xin/weixin_applets_icon_arrow_right.png"></image>
            </view>
        </view>
        <view class="comment_info">
            <view class="comment_product">
                <view class="comment_person">
                    <image class="avatar" lazyLoad="true" mode="aspectFill" src="{{comment.avatar}}"></image>
                    <text class="name">{{comment.nickname}}</text>
                </view>
                <view class="comment_txt">{{comment.content}}</view>
                <view class="comment_product_params">
                    <text class="date">{{goodDetail.getTime(comment.createdAt)}}</text>
                </view>
            </view>
            <image class="comment_img" lazyLoad="true" mode="aspectFill" src="{{comment.images.length>0?comment.images[0]:goodsInfo.covers[0]}}"></image>
        </view>
    </view>
    <view class="contactService" wx:if="{{isShowContact}}">
        <image class="contactServiceImg" src="http://oss.shangmian.xin/weixin_applets_mine_sercive_contact.png"></image>
        <button class="contactServiceButton" openType="contact"></button>
    </view>
    <view class="seek_panel panel">
        <view class="seek">
            <view class="seek_title">在线顾问</view>
            <view class="seek_btn">立即咨询</view>
        </view>
        <view class="seek_text">为您提供最专业的一站式家居购买体验</view>
        <view class="seek_group">
            <view class="seek_cate_group">
                <view class="seek_cate">
                    <image class="seek_img" src="http://oss.shangmian.xin/weixin_applets_good_detail_style.png"></image>
                    <text class="seek_txt">风格搭配</text>
                </view>
                <view class="seek_cate">
                    <image class="seek_img" src="http://oss.shangmian.xin/weixin_applets_good_detail_favourable.png"></image>
                    <text class="seek_txt">优惠咨询</text>
                </view>
                <view class="seek_cate">
                    <image class="seek_img" src="http://oss.shangmian.xin/weixin_applets_good_detail_deliver.png"></image>
                    <text class="seek_txt">配送跟进</text>
                </view>
                <view class="seek_cate">
                    <image class="seek_img" src="http://oss.shangmian.xin/weixin_applets_good_detail_quanlity.png"></image>
                    <text class="seek_txt">质保服务</text>
                </view>
                <view class="seek_cate">
                    <image class="seek_img" src="http://oss.shangmian.xin/weixin_applets_good_detail_contact.png"></image>
                    <text class="seek_txt">售后回访</text>
                </view>
            </view>
        </view>
        <button class="contactButton" openType="contact"></button>
    </view>
    <view class="illustrations panel">
        <view class="illustrations_title">图文详情</view>
        <rich-text class="richCss" nodes="{{goodsInfo.detail}}"></rich-text>
    </view>
    <view class="bottom_tab {{isIphoneX?'isIPX':''}}">
        <view catchtap="toPage" class="shop" data-shopuuid="{{goodsInfo.shopUuid}}" data-type="进店">
            <image class="shop_img" src="http://oss.shangmian.xin/weixin_applets_good_detail_shop.png"></image>
            <text class="shop_txt">进店</text>
        </view>
        <view catchtap="addCollection" class="selection">
            <image class="selection_img" src="http://oss.shangmian.xin/weixin_applets_good_detail_selection.png"></image>
            <text class="selection_txt" wx:if="{{goodsInfo.isCollection==1}}">已收藏</text>
            <text class="selection_txt" wx:else>收藏</text>
        </view>
        <view catchtap="onBuy" class="buy_now">立即发起免单</view>
    </view>
</view>
<view catchtouchmove="true" wx:if="{{showCoverScreen}}">
    <view catchtap="closeCoverScreen" class="cover_screen"></view>
    <view class="model_container {{showCoverScreenOptions?'slideUp':'slideDown'}}">
        <view catchtap="closeCoverScreen" class="collection_title row">
            <text class="collection_txt">收藏成功 选择心愿单</text>
            <image class="close_img" src="http://oss.shangmian.xin/weixin_applets_icon_close.png"></image>
        </view>
        <scroll-view scrollY class="main_content" style="height:{{wishMenu.length<=5?wishMenu.length*68:340}}rpx;">
            <view class="scroll_view">
                <view catchtap="addToWishDetail" class="cate_list" data-wishuuid="{{wishItem.wishUuid}}" wx:for="{{wishMenu}}" wx:for-item="wishItem">{{wishItem.title}}
                </view>
            </view>
        </scroll-view>
    </view>
</view>
<good-skus goodsInfo="{{goodsInfo}}" groupUuid="{{groupUuid}}" isCart="{{false}}" isFree="{{true}}" isShow="{{isShowSkus}}" skus="{{goodsInfo.skus}}"></good-skus>
<generate-photo bindonQrCodeKey="onQrCodeKey" goodsInfo="{{goodsInfo}}" isShow="{{isShowGenerate}}"></generate-photo>
<get-phone isShow="{{isShowUserInfo}}" sceneData="{{sceneData}}"></get-phone>
<share-group bindonJoinFree="onJoinFree" groupUuid="{{shareGroupUuid}}" id="shareGroup" isShow="{{isShareGroup}}"></share-group>
<loading-view isShow="{{isShowLoad}}"></loading-view>
<wxs module="goodDetail" src="../goodDetail/goodDetail.wxs" />