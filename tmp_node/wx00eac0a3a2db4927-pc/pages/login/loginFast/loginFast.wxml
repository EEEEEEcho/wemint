<navigate cartPage="{{cartPage}}"></navigate>
<view style="margin-top: {{navH+status+10}}px;">
    <image class="login_img" lazyLoad="true" src="http://oss.shangmian.xin/weixin_applets_login_low.png"></image>
    <button bindgetphonenumber="getPhoneNumber" class="login_btn" hoverClass="btn_hover" openType="getPhoneNumber">微信手机号快捷登陆</button>
