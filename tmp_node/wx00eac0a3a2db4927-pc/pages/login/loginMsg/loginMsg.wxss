.login-img {
    width: 750rpx;
    height: 656rpx;
}

.msg {
    margin-top: -65rpx;
    width: 514rpx;
    margin-left: 118rpx;
}

.tel_input {
    height: 65rpx;
    border-bottom: 1px solid #aeaeb4;
}

.tel,.validate {
    margin-left: 25rpx;
