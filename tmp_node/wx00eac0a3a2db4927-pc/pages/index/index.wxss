page {
    background-color: #fff;
}

.search_img {
    width: 78rpx;
    height: 78rpx;
    position: fixed;
    z-index: 100;
}

@-webkit-keyframes showImg {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

@keyframes showImg {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

@-webkit-keyframes hideImg {
    from {
        opacity: 1;
    }

    to {
        opacity: 0;
    }
}

@keyframes hideImg {
    from {
        opacity: 1;
    }

    to {
        opacity: 0;
    }
}

.showImg {
    animation: showImg 0.1s 1 ease-in both;
}

.hideImg {
    animation: hideImg 0.1s 1 ease-in both;
}