<view class="commend flexColumn" id="goodlist">
    <view class="options flexRow" id="options">
        <view bindtap="onClickItem" class="option1 flexRow" data-index="1" wx:if="{{isComplex}}">
            <text class="{{isAllBlack?'allActive':'all'}}">综合</text>
        </view>
        <view bindtap="onClickItem" class="option2 flexRow" data-index="2" wx:if="{{isPrice}}">
            <text class="{{isPriceBlack?'priceActive':'price'}}">价格</text>
            <view class="updown flexColumn">
                <image class="upImg" src="{{isUpBlack?'http://oss.shangmian.xin/weixin_applets_icon_up_fill.png':'http://oss.shangmian.xin/weixin_applets_icon_up.png'}}"></image>
                <image class="downImg" src="{{isDownBlack?'http://oss.shangmian.xin/weixin_applets_icon_down_fill.png':'http://oss.shangmian.xin/weixin_applets_icon_down.png'}}"></image>
            </view>
        </view>
        <text bindtap="onClickItem" class="option3 flexRow {{isNew?'option3Active':'op3'}}" data-index="3" wx:if="{{isGrade}}">新品</text>
        <view bindtap="onClickItem" class="option4 flexRow" data-index="4" wx:if="{{isClassify}}">
            <text class="{{isCate?'cateActive':'cate'}}">分类</text>
            <image class="downImg2" src="{{isCate?'http://oss.shangmian.xin/weixin_applets_icon_down_fill.png':'http://oss.shangmian.xin/weixin_applets_icon_down.png'}}"></image>
        </view>
        <view bindtap="onClickItem" class="option5 flexRow" data-index="5" wx:if="{{isFilter}}">
            <image class="filterImg" src="{{isSelect?'http://oss.shangmian.xin/weixin_applets_icon_filter.png':'http://oss.shangmian.xin/weixin_applets_icon_filter_gray.png'}}"></image>
            <text class="{{isSelect?'filterActive':'filter'}}">筛选</text>
        </view>
    </view>
    <view class="optionsFixed flexRow" style="top: {{navH+status}}px;" wx:if="{{isFixed}}">
        <view bindtap="onClickItem" class="option1 flexRow" data-index="1" wx:if="{{isComplex}}">
            <text class="{{isAllBlack?'allActive':'all'}}">综合</text>
        </view>
        <view bindtap="onClickItem" class="option2 flexRow" data-index="2" wx:if="{{isPrice}}">
            <text class="{{isPriceBlack?'priceActive':'price'}}">价格</text>
            <view class="updown flexColumn">
                <image class="upImg" src="{{isUpBlack?'http://oss.shangmian.xin/weixin_applets_icon_up_fill.png':'http://oss.shangmian.xin/weixin_applets_icon_up.png'}}"></image>
                <image class="downImg" src="{{isDownBlack?'http://oss.shangmian.xin/weixin_applets_icon_down_fill.png':'http://oss.shangmian.xin/weixin_applets_icon_down.png'}}"></image>
            </view>
        </view>
        <text bindtap="onClickItem" class="option3 flexRow {{isNew?'option3Active':'op3'}}" data-index="3" wx:if="{{isGrade}}">新品</text>
        <view bindtap="onClickItem" class="option4 flexRow" data-index="4" wx:if="{{isClassify}}">
            <text class="{{isCate?'cateActive':'cate'}}">分类</text>
            <image class="downImg2" src="{{isCate?'http://oss.shangmian.xin/weixin_applets_icon_down_fill.png':'http://oss.shangmian.xin/weixin_applets_icon_down.png'}}"></image>
        </view>
        <view bindtap="onClickItem" class="option5 flexRow" data-index="5" wx:if="{{isFilter}}">
            <image class="filterImg" src="{{isSelect?'http://oss.shangmian.xin/weixin_applets_icon_filter.png':'http://oss.shangmian.xin/weixin_applets_icon_filter_gray.png'}}"></image>
            <text class="{{isSelect?'filterActive':'filter'}}">筛选</text>
        </view>
    </view>
    <good goods="{{goodList}}"></good>
    <empty iconPath="http://oss.shangmian.xin/weixin_applets_icon_empty_view.png" isShow="{{goodList.length==0}}" textContent="暂时还没有商品"></empty>
    <view class="loadMoreLayout" wx:if="{{isLoadMore}}">
        <text class="loadMoreText">加载更多...</text>
    </view>
</view>
<right-cover-view bindonPropertySure="onPropertySure" childCategoryUuid="{{childCategoryUuid}}" foreCategoryUuid="{{categoryUuid}}" isShowRight="{{isSelect}}" spaceUuid="{{spaceUuid}}" styleUuid="{{styleUuid}}"></right-cover-view>
<top-cover-view bindonClassifySure="onClassifySure" categories="{{categories}}" isShowCate="{{isCate}}" wx:if="{{isClassify}}"></top-cover-view>
