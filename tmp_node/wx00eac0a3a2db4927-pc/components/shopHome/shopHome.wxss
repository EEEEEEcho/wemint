.shopHome {
    width: 100%;
    flex-direction: column;
    display: flex;
    align-items: center;
}

.slideLayout {
    width: 100%;
    height: 380rpx;
    position: absolute;
}

.slideItem {
    width: 100%;
    height: 380rpx;
    border-radius: 10rpx;
}

.slideImage {
    width: 100%;
    height: 380rpx;
    border-radius: 10rpx;
}

.topLayout {
    width: 92%;
    height: 380rpx;
    position: relative;
    margin-top: 4%;
}

.indication {
    width: 72rpx;
    height: 40rpx;
    background: rgba(0,0,0,0.6);
    position: absolute;
    bottom: 24rpx;
    right: 24rpx;
    flex-direction: row;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;
}

.markIndex {
    color: #ffffff;
    font-size: 22rpx;
}

.shopBeauty {
    width: 92%;
    font-size: 36rpx;
    color: #51515c;
    font-weight: bold;
    margin: 4% 0;
    letter-spacing: 4rpx;
}

.shopBeautyImage {
    width: 92%;
    border-radius: 20rpx;
    margin-bottom: 4%;
}