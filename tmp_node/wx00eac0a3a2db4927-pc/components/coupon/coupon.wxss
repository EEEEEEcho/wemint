.coupon {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.couponItem {
    width: 92%;
    height: 0;
    padding-bottom: 30%;
    position: relative;
    margin-bottom: 4%;
}

.couponBg {
    width: 100%;
    height: 100%;
    position: absolute;
}

.couponContent {
    position: absolute;
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100%;
}

.preCoupon {
    width: 68%;
    display: flex;
    flex-direction: column;
}

.couponTitleLayout {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 8%;
}

.couponTitle {
    font-size: 28rpx;
    color: #51515c;
    font-weight: bold;
    padding-left: 32rpx;
}

.couponStatus {
    padding: 0rpx 12rpx;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 20rpx;
    color: #5e97ec;
    border: 1px solid #5e97ec;
    border-radius: 18rpx;
    margin-left: auto;
}

.couponPriceLayout {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    padding: 2% 0;
}

.couponPriceLabel {
    font-size: 28rpx;
    color: #5e97ec;
    padding-left: 32rpx;
    padding-bottom: 8rpx;
}

.couponPrice {
    font-size: 46rpx;
    color: #5e97ec;
    padding-left: 6rpx;
}

.couponRemark {
    font-size: 23rpx;
    color: #666666;
    padding-left: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.couponTime {
    font-size: 23rpx;
    color: #666666;
    padding-left: 32rpx;
    padding-bottom: 12rpx;
}

.lastCoupon {
    width: 26%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-left: 6%;
}

.immediately {
    width: 66%;
    height: 56rpx;
    font-size: 23rpx;
    color: #ffffff;
    background: #5e97ec;
    text-align: center;
    line-height: 56rpx;
    border-radius: 8rpx;
}