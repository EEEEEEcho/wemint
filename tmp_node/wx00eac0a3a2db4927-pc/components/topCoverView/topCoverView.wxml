<view bindtap="onClassifyClose" catchtouchmove="preventTouchMove" class="indexFixed {{options?'showMask':'hideMask'}}" style="top:{{navH+status}}px" wx:if="{{isShowCate}}">
    <view catchtap="onNothingClick" class="mainContainer {{options?'open':'close'}}" wx:if="{{isShowCate}}">
        <scroll-view scrollY class="scroll" wx:if="{{!isSingle}}">
            <view class="categoriesLayout" wx:for="{{categories}}" wx:for-index="cateIndex" wx:for-item="father">
                <view class="chooseCate">{{father.name}}</view>
                <view class="categories">
                    <text catchtap="onChoose" class="one_cate {{cateIndex==fatherIndex&&childIndex==index?'select_one':'one'}}" data-child-index="{{index}}" data-father-index="{{cateIndex}}" wx:for="{{father.childs}}" wx:for-item="child">{{child.name}}</text>
                </view>
            </view>
        </scroll-view>
        <scroll-view scrollY class="scroll" wx:if="{{isSingle}}">
            <view class="categoriesLayout">
                <view class="categories">
                    <text catchtap="onChoose" class="one_cate {{childIndex==index?'select_one':'one'}}" data-child-index="{{index}}" wx:for="{{categories}}" wx:for-item="child">{{child.name}}</text>
                </view>
            </view>
        </scroll-view>
        <view catchtap="onClassifySure" class="btn">чбошод</view>
    </view>
</view>
