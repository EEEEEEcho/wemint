.goodItemLayout {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.goodImageLayout {
    width: 112rpx;
    height: 112rpx;
    margin: 24rpx;
    position: relative;
}

.goodImage {
    width: 112rpx;
    height: 112rpx;
    position: absolute;
    left: 0;
    top: 0;
}

.goodImageTab {
    padding: 2rpx 8rpx;
    position: absolute;
    right: 8rpx;
    bottom: 8rpx;
    background: #ed7b43;
    border-radius: 15rpx;
    color: #ffffff;
    font-size: 15rpx;
}

.goodDetail {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 32rpx 16rpx 24rpx 0rpx;
}

.goodTitle {
    color: #666666;
    font-size: 26rpx;
    padding-bottom: 4rpx;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.propertyLabel {
    color: #999999;
    font-size: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.priceNumber {
    margin-left: auto;
    align-items: flex-end;
    margin-right: 24rpx;
    display: flex;
    flex-direction: column;
}

.price {
    color: #ed7b43;
    font-size: 25rpx;
}

.number {
    color: #999999;
    font-size: 23rpx;
}