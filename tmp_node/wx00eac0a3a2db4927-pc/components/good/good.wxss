.goods {
    width: 682rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.good {
    box-shadow: 0rpx 0rpx 16rpx #f0f0f0;
    width: 331rpx;
    border-radius: 8rpx;
    margin-bottom: 30rpx;
}

.goodImg {
    border-top-left-radius: 8rpx;
    border-top-right-radius: 8rpx;
    width: 100%;
    height: 373rpx;
}

.goodIntro {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    margin-bottom: 30rpx;
    margin-top: 10rpx;
    position: relative;
}

.label111 {
    margin-bottom: 20rpx;
    position: absolute;
    top: -88rpx;
    left: 0;
}

.label11,.label12 {
    border: 1rpx solid #f0f1f1;
    font-size: 20rpx;
    border-radius: 8rpx;
    background: #fff;
    padding: 4rpx 10rpx;
    margin-right: 10rpx;
}

.goodName {
    font-size: 24rpx;
    width: 284rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    margin-bottom: 6rpx;
}

.goodPrice {
    margin-top: -10rpx;
}

.newPricePre {
    font-size: 20rpx;
    color: #f1763a;
    margin-right: 4rpx;
}

.newPrice {
    color: #f1763a;
    font-weight: bold;
    font-size: 28rpx;
}

.oldPricePre {
    margin-left: 18rpx;
}

.oldPricePre,.oldPrice {
    font-size: 22rpx;
    color: #aeaeb4;
    text-decoration: line-through;
}

.flag {
    color: #fff;
    font-size: 18rpx;
    border-radius: 24rpx;
    background: #f1763a;
    width: 100rpx;
    padding: 4rpx 0;
    margin-top: 4rpx;
    text-align: center;
}