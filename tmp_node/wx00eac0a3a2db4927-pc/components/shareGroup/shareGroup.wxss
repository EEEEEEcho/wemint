.shareGroup {
    width: 100%;
    height: 100vh;
    align-items: center;
    justify-content: center;
    display: flex;
    flex-direction: column;
    background: rgba(0,0,0,0.5);
    position: fixed;
    z-index: 100;
    top: 0;
    left: 0;
}

.deliveryLayout {
    width: 90%;
    max-height: 900rpx;
    background: #ffffff;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 32rpx;
}

.freeTitle {
    font-size: 32rpx;
    color: #51515c;
    font-weight: bold;
    text-align: center;
    height: 99rpx;
    line-height: 99rpx;
}

.dateTimeLayout {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    width: 100%;
}

.dateTime {
    font-size: 30rpx;
    color: #AFAFB4;
}

.avatarLayout {
    display: flex;
    width: 100%;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.avatar {
    width: 90rpx;
    height: 90rpx;
    border-radius: 45rpx;
    margin: 10rpx 10rpx 32rpx 10rpx;
}

.line {
    width: 100%;
    height: 2rpx;
    background: #f4f4f4;
}

.closeIcon {
    width: 70rpx;
    height: 70rpx;
    margin-top: 50rpx;
}

.goFreeLayout {
    position: relative;
    width: 70%;
    height: 90rpx;
}

.goFree {
    letter-spacing: 5rpx;
    font-size: 32rpx;
    color: #ffffff;
    width: 100%;
    height: 90rpx;
    border-radius: 45rpx;
    background: #DF8050;
    text-align: center;
    line-height: 90rpx;
}

.goFreeShare {
    opacity: 0;
    width: 100%;
    height: 90rpx;
    position: absolute;
}