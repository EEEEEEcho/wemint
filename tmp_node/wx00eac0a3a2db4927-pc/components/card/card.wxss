.card {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.cardItem {
    width: 92%;
    height: 0;
    padding-bottom: 25%;
    position: relative;
    margin-bottom: 4%;
}

.cardBg {
    width: 100%;
    height: 100%;
    position: absolute;
}

.cardContent {
    position: absolute;
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100%;
    align-items: center;
}

.cardTitleLayout {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin-left: 24%;
}

.cardTitle {
    color: #ffffff;
    font-size: 40rpx;
    letter-spacing: 6rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.cardRemark {
    color: #ffffff;
    font-size: 24rpx;
    margin-top: 2%;
    opacity: 0.7;
}

.effectiveTime {
    color: #ffffff;
    font-size: 25rpx;
    opacity: 0.7;
    margin-right: 6%;
}