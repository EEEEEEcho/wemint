.freeGroupList {
    width: 100%;
    height: 100vh;
    align-items: center;
    justify-content: center;
    display: flex;
    flex-direction: column;
    background: rgba(0,0,0,0.5);
    position: fixed;
    z-index: 100;
    top: 0;
    left: 0;
}

.deliveryLayout {
    width: 90%;
    max-height: 800rpx;
    background: #ffffff;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.freeTitle {
    font-size: 32rpx;
    color: #51515c;
    font-weight: bold;
    text-align: center;
    height: 99rpx;
    line-height: 99rpx;
}

.line {
    width: 100%;
    height: 1rpx;
    background: #f4f4f4;
}

.userLayout {
    width: 100%;
    height: 140rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.userContent {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding-left: 16rpx;
}

.scrollLayout {
    flex: 1;
    max-height: 700rpx;
    display: flex;
    flex-direction: column;
}

.avatar {
    width: 90rpx;
    height: 90rpx;
    border-radius: 45rpx;
}

.username {
    font-size: 28rpx;
    color: #51515c;
}

.time {
    font-size: 23rpx;
    color: #aeaeb4;
}

.joinFree {
    font-size: 26rpx;
    color: #ffffff;
    background: #ed7b43;
    width: 140rpx;
    height: 56rpx;
    border-radius: 28rpx;
    line-height: 56rpx;
    text-align: center;
    margin-right: 24rpx;
    letter-spacing: 3rpx;
}

.closeIcon {
    width: 70rpx;
    height: 70rpx;
    margin-top: 50rpx;
}

.loadMoreLayout {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.loadMoreText {
    padding: 24rpx 0;
    font-size: 25rpx;
    color: #51515c;
    text-align: center;
}