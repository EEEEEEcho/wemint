<view class="modules">
    <view class="more_category">
        <view class="categories">
            <view bindtap="navigateToTap" class="eachCate" data-cate="分类" data-param="{{item.name}}" data-uuid="{{item.categoryUuid}}" wx:if="{{limitState?true:index<8}}" wx:for="{{commend.comByCategory.dataList}}">
                <image class="cateImage" src="{{item.icon}}"></image>
                <text class="catename">{{item.name}}</text>
            </view>
            <view class="emptyView"></view>
            <view class="emptyView"></view>
            <view catchtap="changeLimitState" class="limitArrows" wx:if="{{!limitState}}">
                <view class="more">查看更多</view>
            </view>
        </view>
    </view>
    <image catchtap="onFreeList" class="homeFree" data-free="{{banners[0]}}" mode="scaleToFill" src="{{banners[0].image}}"></image>
    <view class="module">
        <text class="moduleTitle">空间</text>
        <scroll-view scrollX class="main-content">
            <view class="scroll_view">
                <view class="list">
                    <view class="cate_list" style="margin-right:{{index==commend.comByArea.dataList.length-1?'34rpx':'25rpx'}};" wx:for="{{commend.comByArea.dataList}}">
                        <image bindtap="navigateToTap" class="category_img" data-cate="空间" data-index="{{index}}" data-param="{{item.name}}" data-uuid="{{item.spaceUuid}}" lazyLoad="true" mode="aspectFill" src="{{item.covers}}"></image>
                        <text class="category_text">{{item.name}}</text>
                    </view>
                </view>
            </view>
        </scroll-view>
    </view>
    <view class="module">
        <text class="moduleTitle">风格</text>
        <scroll-view scrollX class="main-content">
            <view class="scroll_view">
                <view class="list">
                    <view class="cate_list_style" style="margin-right:{{index==commend.comByStyle.dataList.length-1?'34rpx':'20rpx'}};" wx:for="{{commend.comByStyle.dataList}}">
                        <image bindtap="navigateToTap" class="category_img_style" data-cate="风格" data-index="{{index}}" data-param="{{item.name}}" data-uuid="{{item.styleUuid}}" lazyLoad="true" mode="aspectFill" src="{{item.covers}}"></image>
                    </view>
                </view>
            </view>
        </scroll-view>
    </view>
</view>
