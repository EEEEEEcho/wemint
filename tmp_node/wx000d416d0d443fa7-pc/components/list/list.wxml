<view bindtap="_toShop" class="list white_bgColor" data-shopid="{{item.shop_id}}" data-shoptoken="{{item.shop_token}}" wx:for="{{list}}">
    <view class="listLeft">
        <image mode="scaleToFill" src="{{item.logo_path}}"></image>
    </view>
    <view class="listMid">
        <view class="fs_14 shopListName">{{item.shop_name}}</view>
        <view class="shopLevel">
            <view class="levelStar">
                <icon class="iconfont icon-five-star" wx:for="{{item.full_star}}"></icon>
                <icon class="iconfont icon-bankexing" wx:for="{{item.half_star}}"></icon>
                <icon class="iconfont icon-icon-test" wx:for="{{item.empty_star}}"></icon>
            </view>
            <view class="sumMonth">月销{{item.order_count}}</view>
        </view>
        <view class="shopPrice">
            <view class="minPrice">起送价 ￥{{item.min_price}}</view>
            <view class="disCost"> | 配送 ￥{{item.min_fee}}</view>
        </view>
        <view class="fs_12 shopPreferen">
            <view wx:for="{{item.showMarket}}">
                <view class="active_rule active_rule{{item.rule_id}}">{{item.rule_name}}</view>{{item.marketing_name}}
            </view>
        </view>
    </view>
    <view class="listRight">
        <view class="fs_14 shopState1" wx:if="{{item.status==1?true:false}}">{{item.statusText}}</view>
        <view class="fs_14 shopState2" wx:if="{{item.status==2?true:false}}">{{item.statusText}}</view>
        <view class="fs_14 shopState3" wx:if="{{item.status==3?true:false}}">{{item.statusText}}</view>
        <view class="fs_14 shopState3" wx:if="{{item.status==4?true:false}}">{{item.statusText}}</view>
        <view class="shopDistance fs_12">{{item.distance}}</view>
        <view catchtap="_showAllActive" class="shopActive" data-id="{{item.shop_id}}">
            <text wx:if="{{item.market.length>=3?true:false}}">更多</text>
            <icon class="iconfont {{item.is_open==1?'icon-xiangxiajiantou':'icon-xiangshangjiantou'}}" wx:if="{{item.market.length>=3?true:false}}"></icon>
        </view>
    </view>
</view>
