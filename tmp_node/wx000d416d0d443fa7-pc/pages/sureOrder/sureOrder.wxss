.container {
    min-height: 100vh;
}

.sureInfo {
    border-bottom: 1rpx solid rgba(9,9,9,.1);
}

.sureInfoSection {
    display: flex;
    align-items: center;
    width: 90%;
    margin: 10rpx auto;
}

.goodsImg {
    width: 80rpx;
    height: 80rpx;
    margin-right: 30rpx;
}

.goodsName {
    width: 50%;
    margin-right: 140rpx;
}

.payBox {
    padding: 0 5%;
}

.costSum {
    position: relative;
    text-align: left;
}

.allGoodsPrice {
    text-align: right;
    padding: 10rpx 5%;
}

.costSumItem {
    padding: 10rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.address {
    margin-top: 20rpx;
}

.setAds {
    padding: 20rpx 0;
}

.userInfo {
    padding: 0 5%;
}

.userInfo icon {
    padding-right: 10rpx;
}

.localInfo {
    margin: 20rpx 0;
}

.arrRight {
    position: absolute;
    right: 0;
}

.postRule {
    padding: 10rpx 5%;
    text-align: left;
}

.postRule>view {
    margin: 20rpx 0;
}

.postTime {
    display: flex;
    align-items: flex-end;
}

.getWay {
    display: flex;
    flex-direction: column;
    margin-right: 20rpx;
}

.chooseDay {
    width: 20%;
}

.chooseTime {
    width: 30%;
}

.note {
    display: flex;
    align-items: flex-start;
}

.note text {
    display: inline-block;
    border: 1rpx solid rgba(9,9,9,.1);
    width: 80%;
    height: 100rpx;
    padding: 10rpx;
}

.payWay {
    display: flex;
    align-items: center;
}

.payOn,.payNo {
    width: 20%;
    height: 20rpx;
    line-height: 20rpx;
    padding: 10rpx;
    border-radius: 10rpx;
    text-align: center;
    margin-right: 20rpx;
}

.payNo {
    border: 1rpx solid rgba(9,9,9,.1);
}

.payOn {
    background-color: green;
    color: white;
    border: 1rpx solid rgba(9,9,9,.5);
}

.memberMoney {
    padding: 10rpx 0;
    margin: 0 5%;
    background-color: rgba(9,9,9,.1);
}

.memberMoney view {
    padding: 10rpx;
}

.priceCount {
    padding: 10rpx 5%;
}

.priceCount>view {
    padding: 5rpx 0;
}

.circleTop {
    width: 40rpx;
    height: 20rpx;
    background-color: #ff9800;
    border-radius: 0 0 20rpx 20rpx;
    position: absolute;
    top: 0;
    right: 100rpx;
}

.circleBottom {
    width: 40rpx;
    height: 20rpx;
    background-color: #ff9800;
    border-radius: 20rpx 20rpx 0 0;
    position: absolute;
    bottom: 0;
    right: 100rpx;
}

.ticket {
    padding: 10rpx;
    width: 90%;
    margin: 200rpx auto;
}

.ticketImg {
    width: 33rpx;
    height: 42rpx;
}

.ticketInfo {
    display: flex;
    margin: 10rpx;
    height: 180rpx;
    line-height: 180rpx;
    justify-content: space-between;
    position: relative;
}

.ticketName {
    display: flex;
    flex-direction: column;
    height: 80rpx;
}

.ticketName view {
    height: 40rpx;
    position: static;
    line-height: 1;
    margin-left: 20rpx;
}

.ticketInfo>view {
    margin: 0 40rpx;
}

.line {
    width: 4rpx;
    background-color: rgba(9,9,9,.3);
    height: 100rpx;
    position: absolute;
    right: 120rpx;
    top: 40rpx;
}

.ticketPrice {
    display: flex;
    align-items: center;
}

.submit {
    width: 300rpx;
    height: 80rpx;
    background-color: #ff9800;
    border-radius: 20rpx;
    border: 1rpx solid rgba(9,9,9,.3);
    color: white;
    margin: 40rpx auto;
    text-align: center;
    line-height: 80rpx;
}

.errMsg {
    width: 200rpx;
    margin: 0 auto;
}

.noteBox {
    margin: 200rpx auto;
    width: 80%;
    height: 400rpx;
    background-color: white;
}

.noteBox view,.noteBox textarea {
    margin: 10rpx;
    padding: 10rpx;
}

.inputBtn {
    display: flex;
    justify-content: space-around;
}

.inputBtn button {
    font-size: 14px;
    padding: 10rpx;
    line-height: 1;
}

.inputBtn button:last-child {
    background-color: #ff9800;
    color: white;
}

.noteSection {
    border: 1rpx solid rgba(9,9,9,.1);
    width: 554rpx;
    height: 200rpx;
}