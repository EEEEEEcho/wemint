.noCollect {
    width: 60%;
    margin: 0 auto;
    padding-top: 300rpx;
    text-align: center;
}

.toShopList {
    width: 240rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #ff9800;
    color: white;
    border-radius: 10rpx;
    margin: 10rpx auto;
}

.collect {
    margin-bottom: 20rpx;
    background-color: white;
}

.collectItem {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0;
}

.collectLeft {
    width: 200rpx;
    height: 200rpx;
}

.collectMid {
    width: 40%;
}

.collectMid>view {
    margin: 10rpx 0;
}

.shopStar {
    float: left;
    padding-right: 4rpx;
    font-size: 18px;
}

.shopSaleNum {
    padding-left: 2%;
    float: right;
}

.minPrice {
    clear: both;
}

.collectBtn {
    height: 60rpx;
    border: 1rpx solid rgba(9,9,9,.1);
    padding: 5rpx 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.collectText {
    margin-left: 10rpx;
}