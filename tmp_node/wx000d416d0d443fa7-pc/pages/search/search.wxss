form {
    width: 100%;
}

.container {
    min-height: 100vh;
}

.input {
    padding: 10rpx;
    margin: 20rpx 0 0 20rpx;
    background-color: white;
    float: left;
    width: 72%;
}

button {
    padding: 20rpx 30rpx;
    margin: 20rpx 20rpx 0 0;
    line-height: 1;
    float: right;
}

.input>icon {
    width: 20%;
    float: left;
}

.search {
    font-size: 14px;
    padding: 20rpx;
    border-bottom: 1rpx solid rgba(5,5,5,.1);
}

.searchItem {
    padding: 10rpx;
    border: 1rpx solid rgba(5,5,5,.1);
    margin-right: 10rpx;
    font-size: 12px;
    box-shadow: 5rpx 5rpx 5rpx rgba(5,5,5,.1);
}

.detail {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap-reverse;
    margin: 20rpx;
}

.delAllHistory {
    display: block;
    float: right;
    color: #6495ED;
}