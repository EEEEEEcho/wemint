.sortItem {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1rpx solid rgba(9,9,9,.1);
}

.itemHeadImg {
    width: 160rpx;
    height: 160rpx;
}

.itemMid {
    width: 550rpx;
    height: 160rpx;
    color: #757575;
}

.itemMid>view {
    margin: 10rpx 0;
}

.itemName {
    color: #3a3a3a;
    width: 550rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.itemBusAndTel {
    display: flex;
    justify-content: space-between;
}

.itemBus {
    width: 590rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.itemAds {
    width: 550rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.itemPhoneImg {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.empty view {
    margin-top: 100rpx;
    text-align: center;
}