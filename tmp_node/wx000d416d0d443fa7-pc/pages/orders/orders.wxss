::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.container {
    height: 100%;
}

.ordersHeader {
    display: flex;
    flex-direction: row;
    text-align: center;
    align-items: center;
}

.ordersHeader>view {
    width: 20%;
    height: 80rpx;
    line-height: 80rpx;
}

.chooseOn {
    color: white;
    font-weight: bold;
    position: relative;
}

.chooseOn::after {
    content: '';
    width: 80%;
    height: 5rpx;
    position: absolute;
    left: 10%;
    bottom: 0;
    right: 0;
    background-color: white;
}

.chooseNo {
    color: white;
}

.orderList {
    margin-bottom: 15rpx;
}

.orderImg {
    width: 160rpx;
    height: 160rpx;
}

.orderNum {
    padding: 10rpx 0;
}

.orderNum icon {
    margin-left: 20rpx;
}

.orderInfo {
    border-bottom: 1rpx solid rgba(9,9,9,.1);
}

.orderInfo>view {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 60rpx;
    line-height: 60rpx;
}

.orderNote {
    padding: 10rpx 0;
}

.orderNote>view {
    display: flex;
    justify-content: space-between;
}

.orderCost {
    margin-bottom: 20rpx;
}

.orderCost>view {
    margin: 15rpx 0;
}

.orderElse {
    align-self: flex-end;
    padding: 5rpx 10rpx;
    border-radius: 5rpx;
    color: white;
    text-align: center;
}

.hadRemark {
    opacity: 0;
}

.orderEmpty {
    height: 100vh;
    width: 100%;
}

.noOrder {
    width: 60%;
    margin: 0 auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.noImg {
    width: 200rpx;
    height: 200rpx;
}

.noOrder view {
    margin: 20rpx 0;
}

.refresh {
    background-color: rgba(9,9,9,.5);
    padding: 5rpx;
    display: inline-block;
    border-radius: 5rpx;
    margin-left: 20rpx;
}

.toShopList {
    width: 240rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #ff9800;
    color: white;
    border-radius: 10rpx;
}

.shopTel {
    width: 60%;
    margin: 200rpx auto;
    border-radius: 10rpx;
    height: 400rpx;
    background-color: white;
    text-align: center;
}

.shopTelTitle {
    border-bottom: 1rpx solid rgba(9,9,9,.1);
    padding: 10rpx;
}